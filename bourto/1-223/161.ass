Dialogue: 0,0:01:34.57,0:01:39.50,ep title,,0000,0000,0000,,{\fad(300,000)}{\blur8\bord5\fs37}{\i1}قلعة الكوابيس{\i0}
Dialogue: 0,0:01:45.97,0:01:47.27,Main,,0000,0000,0000,,ما الّذي يحاول فعله؟
Dialogue: 0,0:01:47.47,0:01:48.17,Main,,0000,0000,0000,,!سحقًا
Dialogue: 0,0:01:48.67,0:01:51.54,Main,,0000,0000,0000,,.إنّه يحرص على أنّ الشّخص الّذي سيتعامل معه ليس زائفًا
Dialogue: 0,0:01:52.04,0:01:53.87,Main,,0000,0000,0000,,لدرجة أن يضحّي بنفسه؟
Dialogue: 0,0:01:54.20,0:01:55.47,Main,,0000,0000,0000,,...الأهمّ
Dialogue: 0,0:01:55.70,0:01:57.37,Main,,0000,0000,0000,,كيف سنعالجه؟
Dialogue: 0,0:01:58.34,0:02:00.04,Main,,0000,0000,0000,,!إنّه دليلنا الوحيد
Dialogue: 0,0:02:02.77,0:02:03.57,Main,,0000,0000,0000,,.سألقي نظرة
Dialogue: 0,0:02:04.07,0:02:05.60,Main,,0000,0000,0000,,!ماذا ستفعل يا أخي؟
Dialogue: 0,0:02:05.84,0:02:07.37,Main,,0000,0000,0000,,!إنّه في نفس وضع أناتو-سان
Dialogue: 0,0:02:07.54,0:02:08.90,Main,,0000,0000,0000,,!يستحيل علاجه
Dialogue: 0,0:02:16.77,0:02:17.87,Main,,0000,0000,0000,,خيارنا الوحيد
Dialogue: 0,0:02:17.94,0:02:19.97,Main,,0000,0000,0000,,.هو تغيير استراتيجيّتنا في هذه المرحلة
Dialogue: 0,0:02:20.67,0:02:23.04,Main,,0000,0000,0000,,.يجب أن نجد أحدًا يعرف من يكون هذا الشّخص
Dialogue: 0,0:02:29.00,0:02:30.00,Main,,0000,0000,0000,,أخي؟
Dialogue: 0,0:02:37.90,0:02:38.74,Main,,0000,0000,0000,,!محال
Dialogue: 0,0:02:38.94,0:02:40.04,Main,,0000,0000,0000,,!إنّه يتحسّن
Dialogue: 0,0:02:40.20,0:02:41.17,Main,,0000,0000,0000,,...لا يمكن
Dialogue: 0,0:02:41.84,0:02:43.14,Main,,0000,0000,0000,,هل استخدمت تلك؟
Dialogue: 0,0:02:44.17,0:02:44.77,Main,,0000,0000,0000,,.أجل
Dialogue: 0,0:02:48.00,0:02:48.97,Main,,0000,0000,0000,,ما تلك—؟
Dialogue: 0,0:02:49.77,0:02:52.30,Main,,0000,0000,0000,,.مضادّات الأجسام المستخلصة من جسد ميتسكي
Dialogue: 0,0:02:52.80,0:02:55.27,Main,,0000,0000,0000,,.أعطتني يوبينا-سان قارورة واحدة فحسب
Dialogue: 0,0:02:56.14,0:02:58.74,Main,,0000,0000,0000,,.كنّا ننوي إعادته لقرية الورق من أجل التّحليل
Dialogue: 0,0:02:59.27,0:03:01.70,Main,,0000,0000,0000,,.لم أتخيّل أن تأتي بمثل هذه الإفادة
Dialogue: 0,0:03:10.84,0:03:13.24,Main,,0000,0000,0000,,.يجب أن أقرّ بك يا كيريساكي-ساما
Dialogue: 0,0:03:14.20,0:03:16.30,Main,,0000,0000,0000,,.مهارتك تستحقّ الثّناء
Dialogue: 0,0:03:16.74,0:03:18.17,Main,,0000,0000,0000,,!أنت متهوّر حقًّا
Dialogue: 0,0:03:18.94,0:03:22.37,Main,,0000,0000,0000,,...مع أنّ مقدرة خلايا هاشيراما ضعفت
Dialogue: 0,0:03:23.04,0:03:25.07,Main,,0000,0000,0000,,.إلّا أنّ فعاليتها كانت لا تزال مقلقة للغاية
Dialogue: 0,0:03:25.77,0:03:27.60,Main,,0000,0000,0000,,خطأ واحد كان قد يسبّب في موتك، هل علمتَ ذلك؟
Dialogue: 0,0:03:28.70,0:03:32.40,Main,,0000,0000,0000,,.أنا مستعدّ لأن أهب حياتي لموكّلتي بكلّ سرور
Dialogue: 0,0:03:33.27,0:03:34.74,Main,,0000,0000,0000,,.والآن، دعاني أدلّكما على الطّريق
Dialogue: 0,0:03:35.20,0:03:35.87,Main,,0000,0000,0000,,!انتظر
Dialogue: 0,0:03:36.40,0:03:38.70,Main,,0000,0000,0000,,.لقد أثبتّ نفسي ومهارتي
Dialogue: 0,0:03:39.47,0:03:43.90,Main,,0000,0000,0000,,ألم يحن الوقت لتكشف عن هويّة "موكّلتك"؟
Dialogue: 0,0:03:44.54,0:03:47.80,Main,,0000,0000,0000,,لا يبدو من الصّائب أن تأخذ الطّبيب لمقابلة شخص
Dialogue: 0,0:03:47.87,0:03:49.84,Main,,0000,0000,0000,,.لا نعرفه حتّى
Dialogue: 0,0:03:50.00,0:03:53.00,Main,,0000,0000,0000,,.إن أتيتما معي، ستعرفان على الفور
Dialogue: 0,0:03:53.30,0:03:55.37,Main,,0000,0000,0000,,.يبدو أنّ هذا النّقاش لن يسفر عن أيّ نتيجة
Dialogue: 0,0:03:55.80,0:03:57.50,Main,,0000,0000,0000,,.أبلغ تحيّتي لموكّلتك
Dialogue: 0,0:04:01.57,0:04:03.74,Main,,0000,0000,0000,,!انتظر قليلًا رجاءً يا كيريساكي-ساما
Dialogue: 0,0:04:04.94,0:04:07.50,Main,,0000,0000,0000,,.فهمت! سأخبرك
Dialogue: 0,0:04:09.14,0:04:10.84,Main,,0000,0000,0000,,...اسم موكّلتي
Dialogue: 0,0:04:11.84,0:04:13.04,Main,,0000,0000,0000,,!ساكويا
Dialogue: 0,0:04:13.64,0:04:14.47,Main,,0000,0000,0000,,ساكويا؟
Dialogue: 0,0:04:15.90,0:04:19.54,Main,,0000,0000,0000,,تقيم ساكويا في قلعة فوشو الواقعة في القرية
Dialogue: 0,0:04:19.60,0:04:22.74,Main,,0000,0000,0000,,!وهي شخص جميل للغاية
Dialogue: 0,0:04:24.04,0:04:26.74,Main,,0000,0000,0000,,وهل تنوي أخذنا لهذه القلعة؟
Dialogue: 0,0:04:27.64,0:04:28.47,Main,,0000,0000,0000,,.فعلًا
Dialogue: 0,0:04:29.20,0:04:32.57,Main,,0000,0000,0000,,،ثمّة حاجز قويّ يحيط بالقلعة
Dialogue: 0,0:04:32.64,0:04:35.57,Main,,0000,0000,0000,,.ولا يمكنكما الدّخول ما لم تكونا معي
Dialogue: 0,0:04:36.30,0:04:40.80,Main,,0000,0000,0000,,.الموت هو مصير أيّ من يحاول اقتحامها
Dialogue: 0,0:04:41.37,0:04:43.64,Main,,0000,0000,0000,,خلت أنّنا نستطيع التقدّم
Dialogue: 0,0:04:43.70,0:04:45.40,Main,,0000,0000,0000,,...فور أن نعرف الاسم والموقع، لكن
Dialogue: 0,0:04:46.20,0:04:47.94,Main,,0000,0000,0000,,.واجبنا هو توفير الدّعم لهما
Dialogue: 0,0:04:48.70,0:04:50.07,Main,,0000,0000,0000,,.سنحافظ على مسافة ونواصل ملاحقتهم
Dialogue: 0,0:04:59.47,0:05:01.20,Main,,0000,0000,0000,,.نعلم من بحوزته الآن
Dialogue: 0,0:05:01.60,0:05:02.97,Main,,0000,0000,0000,,.لنتقدّم
Dialogue: 0,0:05:03.30,0:05:03.90,Main,,0000,0000,0000,,.أجل
Dialogue: 0,0:05:23.04,0:05:24.14,Main,,0000,0000,0000,,أتظنّين أنّه سيُفلح؟
Dialogue: 0,0:05:25.54,0:05:27.40,Main,,0000,0000,0000,,.علينا أن نترك الباقي للقدر
Dialogue: 0,0:05:38.77,0:05:40.37,Main,,0000,0000,0000,,.ستكون معركتك طويلة
Dialogue: 0,0:05:42.37,0:05:43.47,Main,,0000,0000,0000,,!تأهّبي
Dialogue: 0,0:05:55.54,0:05:58.40,Main,,0000,0000,0000,,!ساكويا-ساما آلهة الجمال
Dialogue: 0,0:05:58.50,0:06:02.27,Main,,0000,0000,0000,,...مجرّد لمسة خفيفة من أصابعها البيضاء بياض الثّلج
Dialogue: 0,0:06:03.47,0:06:06.70,Main,,0000,0000,0000,,.تجعل المرء يشعر وكأنّه يصعد للنّعيم
Dialogue: 0,0:06:08.67,0:06:12.17,Main,,0000,0000,0000,,وماذا تريد منّي هذه الحسناء ساكويا-ساما؟
Dialogue: 0,0:06:12.67,0:06:14.37,Main,,0000,0000,0000,,أهي مريضة؟
Dialogue: 0,0:06:14.44,0:06:15.77,Main,,0000,0000,0000,,!قطعًا لا
Dialogue: 0,0:06:16.17,0:06:18.87,Main,,0000,0000,0000,,.ساكويا-ساما مثال على الصحّة السّليمة
Dialogue: 0,0:06:19.64,0:06:23.40,Main,,0000,0000,0000,,.ثمّة مشكلة طفيفة فحسب
Dialogue: 0,0:06:40.37,0:06:41.54,Main,,0000,0000,0000,,!ساكويا-ساما
Dialogue: 0,0:06:42.34,0:06:44.97,Main,,0000,0000,0000,,.كانت الأزهار الجميلة تتفتّح، لذا قطفتُ بعضها ورتّبتها لأجلك
Dialogue: 0,0:06:45.80,0:06:48.57,Main,,0000,0000,0000,,.أنا واثقة أنّ التّحديق فيها سيشعرك بالتحسّن
Dialogue: 0,0:06:51.07,0:06:53.70,Main,,0000,0000,0000,,!آمل أنّه لا توجد بها أيّ حشرات
Dialogue: 0,0:06:55.90,0:06:59.10,Main,,0000,0000,0000,,!الزّمان عاشق قاسٍ
Dialogue: 0,0:07:00.37,0:07:02.80,Main,,0000,0000,0000,,...ساكويا-ساما نموذج عن الكمال
Dialogue: 0,0:07:02.87,0:07:06.10,Main,,0000,0000,0000,,.لكنّها لا تستطيع مجابهة مرور الوقت
Dialogue: 0,0:07:06.17,0:07:08.70,Main,,0000,0000,0000,,...وظهور التّجاعيد
Dialogue: 0,0:07:08.77,0:07:12.47,Main,,0000,0000,0000,,.يخرّب جمال بشرتها
Dialogue: 0,0:07:13.04,0:07:14.10,Main,,0000,0000,0000,,،بمفهوم آخر
Dialogue: 0,0:07:14.17,0:07:17.54,Main,,0000,0000,0000,,تمّ استدعائي لإجراء عمليّة استعادة الشّباب؟
Dialogue: 0,0:07:17.84,0:07:19.97,Main,,0000,0000,0000,,سمعنا من البائع
Dialogue: 0,0:07:20.04,0:07:22.70,Main,,0000,0000,0000,,،أنّه يمكن استعادة الشّباب باستخدام خلايا هاشيراما
Dialogue: 0,0:07:22.77,0:07:25.20,Main,,0000,0000,0000,,.لذا تحصّلت عليها ساكويا-ساما
Dialogue: 0,0:07:25.67,0:07:27.24,Main,,0000,0000,0000,,!كلّ هذا من أجل هكذا هدف؟
Dialogue: 0,0:07:28.94,0:07:32.20,Main,,0000,0000,0000,,هل يمكن لخلايا هاشيراما إرجاع المرء يافعًا؟
Dialogue: 0,0:07:32.44,0:07:33.44,Main,,0000,0000,0000,,.هذا مستحيل
Dialogue: 0,0:07:33.97,0:07:38.34,Main,,0000,0000,0000,,.لا يفهمون حتّى ما هي خلايا هاشيراما
Dialogue: 0,0:07:39.30,0:07:41.67,Main,,0000,0000,0000,,!لدى الأزهار رائحة عجيبة ومنعشة
Dialogue: 0,0:07:45.40,0:07:48.37,Main,,0000,0000,0000,,!كيف تجرئين! كيف تجرئين
Dialogue: 0,0:07:51.74,0:07:53.37,Main,,0000,0000,0000,,!سامحيني رجاءً يا ساكويا-ساما
Dialogue: 0,0:07:55.44,0:07:58.04,Main,,0000,0000,0000,,!أكره وجهي المجعّد
Dialogue: 0,0:07:58.10,0:08:01.60,Main,,0000,0000,0000,,!أين الطّبيب؟! ألم يأت الطّبيب بعد؟
Dialogue: 0,0:08:04.80,0:08:08.94,Main,,0000,0000,0000,,.خلايا هاشيراما هي أملي الوحيد لمتابعة العيش
Dialogue: 0,0:08:09.37,0:08:10.67,Main,,0000,0000,0000,,!رجاءً
Dialogue: 0,0:08:10.74,0:08:15.04,Main,,0000,0000,0000,,!أعيدي جمالي
Dialogue: 0,0:08:22.87,0:08:24.97,Main,,0000,0000,0000,,!تلك هي قلعة فوشو
Dialogue: 0,0:08:29.10,0:08:29.84,Main,,0000,0000,0000,,ما هذا؟
Dialogue: 0,0:08:36.97,0:08:37.87,Main,,0000,0000,0000,,ما الّذي يجري؟
Dialogue: 0,0:08:38.00,0:08:39.57,Main,,0000,0000,0000,,...يا لها من طريقة قاسية للموت
Dialogue: 0,0:08:43.40,0:08:46.80,Main,,0000,0000,0000,,.لا بدّ أنّه حاول اقتحام القلعة ونال منه الحاجز
Dialogue: 0,0:08:47.24,0:08:49.30,Main,,0000,0000,0000,,تخلّصوا من الجثّة خارج القرية
Dialogue: 0,0:08:49.50,0:08:51.97,Main,,0000,0000,0000,,.قبل أن يصل الخبر إلى ساكويا-ساما
Dialogue: 0,0:08:54.14,0:08:56.84,Main,,0000,0000,0000,,.أعتذر لأنّكما شهدتما على هذه الحادثة البشعة
Dialogue: 0,0:08:56.97,0:08:58.37,Main,,0000,0000,0000,,أكان دخيلًا؟
Dialogue: 0,0:08:58.67,0:09:00.27,Main,,0000,0000,0000,,.هذا ليس بغريب
Dialogue: 0,0:09:00.84,0:09:04.74,Main,,0000,0000,0000,,.ثمّة الكثير من الأوغاد الّذين يحاولون سرقة مجوهرات ساكويا-ساما
Dialogue: 0,0:09:17.00,0:09:19.07,Main,,0000,0000,0000,,.ادخلا رجاءً
Dialogue: 0,0:09:28.40,0:09:30.04,Main,,0000,0000,0000,,!يبدو أنّ التسلّل نجح
Dialogue: 0,0:09:30.40,0:09:32.87,Main,,0000,0000,0000,,.أنجز هذا كما يجب يا كونوهامارو
Dialogue: 0,0:09:41.30,0:09:43.27,Main,,0000,0000,0000,,لمَ المرايا محطّمة؟
Dialogue: 0,0:09:43.77,0:09:46.07,Main,,0000,0000,0000,,.كان ذلك بأمرٍ من ساكويا-ساما
Dialogue: 0,0:09:46.20,0:09:49.07,Main,,0000,0000,0000,,.قالت أنّها لا تريد أن ترى نفسها في حالة قبيحة
Dialogue: 0,0:09:51.30,0:09:55.27,Main,,0000,0000,0000,,.أوّلًا، دعني أتأكّد من خلايا هاشيراما بنفسي
Dialogue: 0,0:09:56.20,0:09:59.50,Main,,0000,0000,0000,,.لا طائل إلّم أستطع استخدام خلايا هاشيراما
Dialogue: 0,0:10:00.34,0:10:04.97,Main,,0000,0000,0000,,.تبقي ساكويا-ساما خلايا هاشيراما بحوزتها طوال الوقت
Dialogue: 0,0:10:05.44,0:10:08.94,Main,,0000,0000,0000,,.إذًا لنقابل ساكويا-ساما على الفور
Dialogue: 0,0:10:14.74,0:10:17.04,Main - Italics,,0000,0000,0000,,،فور أن ندخل القلعة
Dialogue: 0,0:10:17.10,0:10:18.57,Main - Italics,,0000,0000,0000,,.أريدك أن تعطّل كبير الخدم
Dialogue: 0,0:10:19.14,0:10:22.14,Main - Italics,,0000,0000,0000,,.بينما آخذُ خلايا هاشيراما
Dialogue: 0,0:10:24.17,0:10:26.64,Main,,0000,0000,0000,,!من هنا رجاءً
Dialogue: 0,0:10:31.90,0:10:34.20,Main,,0000,0000,0000,,هل غُرف ساكويا-ساما في الأمام؟
Dialogue: 0,0:10:34.70,0:10:36.10,Main,,0000,0000,0000,,...أجل، لكن
Dialogue: 0,0:10:38.77,0:10:40.10,Main,,0000,0000,0000,,...قبل ذلك
Dialogue: 0,0:10:42.54,0:10:43.54,Main,,0000,0000,0000,,!ماذا؟
Dialogue: 0,0:10:47.10,0:10:48.97,Main,,0000,0000,0000,,هذه غرفة الفخاخ
Dialogue: 0,0:10:49.04,0:10:52.17,Main,,0000,0000,0000,,.الّتي بناها الحاكم السّابق للقلعة بغرض القبض على الدّخلاء
Dialogue: 0,0:10:55.67,0:10:56.87,Main,,0000,0000,0000,,!ما الدّاعي من هذا؟
Dialogue: 0,0:10:57.27,0:11:00.50,Main,,0000,0000,0000,,تحتوي هذه المحقنة نفس خلايا هاشيراما
Dialogue: 0,0:11:00.57,0:11:03.64,Main,,0000,0000,0000,,.الّتي حُقنت بي سابقًا
Dialogue: 0,0:11:06.80,0:11:11.00,Main,,0000,0000,0000,,.أرني كيف تستخدم هذا رجاءً لتعيد مساعدك إلى شبابه
Dialogue: 0,0:11:11.44,0:11:12.37,Main,,0000,0000,0000,,!ماذا؟
Dialogue: 0,0:11:13.24,0:11:14.00,Main,,0000,0000,0000,,!مهلًا، مهلًا
Dialogue: 0,0:11:14.30,0:11:16.77,Main,,0000,0000,0000,,هل تريدني أن أحوّله إلى رضيع؟
Dialogue: 0,0:11:17.17,0:11:20.74,Main,,0000,0000,0000,,.لا يمكنني أن أدعك تعالج ساكويا-ساما من الأوّل
Dialogue: 0,0:11:20.97,0:11:24.57,Main,,0000,0000,0000,,.بدايةً، عليّ أن أشهد نجاحه
Dialogue: 0,0:11:26.77,0:11:28.14,Main - Italics,,0000,0000,0000,,ما العمل؟
Dialogue: 0,0:11:28.34,0:11:30.40,Main - Italics,,0000,0000,0000,,.لا يملك المزيد من الأجساد المضادّة الخاصّة بميتسكي
Dialogue: 0,0:11:30.97,0:11:34.00,Main - Italics,,0000,0000,0000,,يستحيل أن يصلّح هذا الأمر... صحيح؟
Dialogue: 0,0:11:34.47,0:11:35.14,Main,,0000,0000,0000,,.حسنًا
Dialogue: 0,0:11:35.40,0:11:36.70,Main - Italics,,0000,0000,0000,,!ماذا—؟
Dialogue: 0,0:11:37.40,0:11:38.80,Main - Italics,,0000,0000,0000,,هل أنت جاد؟
Dialogue: 0,0:11:39.44,0:11:41.47,Main,,0000,0000,0000,,!لكن قبل ذلك... أحضر لي شرابًا
Dialogue: 0,0:11:41.74,0:11:43.64,Main,,0000,0000,0000,,!من أفضل جودة
Dialogue: 0,0:11:44.04,0:11:46.30,Main,,0000,0000,0000,,شراب؟ قبل العمليّة؟
Dialogue: 0,0:11:46.44,0:11:50.10,Main,,0000,0000,0000,,.يجب أن أشرب لأحافظ على ثبات يديّ
Dialogue: 0,0:11:52.47,0:11:54.70,Main,,0000,0000,0000,,!لن أعمل لولاه
Dialogue: 0,0:11:55.10,0:11:56.37,Main,,0000,0000,0000,,هل أنت راضٍ؟
Dialogue: 0,0:11:57.60,0:11:59.27,Main,,0000,0000,0000,,!سأجهّزه على الفور
Dialogue: 0,0:11:59.40,0:12:01.54,Main,,0000,0000,0000,,أحدكم! هل يوجد أحد في الجوار؟
Dialogue: 0,0:12:02.20,0:12:04.07,Main,,0000,0000,0000,,!أنتم! هل من أحد؟
Dialogue: 0,0:12:07.30,0:12:08.84,Main,,0000,0000,0000,,فيمَ تفكّر؟
Dialogue: 0,0:12:09.34,0:12:10.77,Main,,0000,0000,0000,,.تغيير للخطّة
Dialogue: 0,0:12:11.20,0:12:13.84,Main,,0000,0000,0000,,.سأحاول كسب الوقت قدر ما أستطيع
Dialogue: 0,0:12:13.94,0:12:16.44,Main,,0000,0000,0000,,.اذهب واسترجع خلايا هاشيراما
Dialogue: 0,0:12:17.20,0:12:18.34,Main,,0000,0000,0000,,.افعل ذلك بهدوء
Dialogue: 0,0:12:18.87,0:12:21.77,Main,,0000,0000,0000,,.لا تنس أنّنا وسط عرين الأسد
Dialogue: 0,0:12:22.17,0:12:23.80,Main,,0000,0000,0000,,!فهمت يا أخي
Dialogue: 0,0:12:24.40,0:12:27.00,Main,,0000,0000,0000,,.من الجيّد أنّني تركت نسخة ظلّ في الخارج احتياطًا
Dialogue: 0,0:12:30.04,0:12:33.37,Main,,0000,0000,0000,,!أحضر لي أجود ما عندكم في القلعة
Dialogue: 0,0:12:35.60,0:12:38.60,Main,,0000,0000,0000,,!أحضريه على الفور. ولا تنسي الكأس أيضًا
Dialogue: 0,0:12:39.34,0:12:42.00,Main,,0000,0000,0000,,!أمهلني لحظة رجاءً يا كيريساكي-ساما
Dialogue: 0,0:12:42.84,0:12:45.04,Main,,0000,0000,0000,,.توتّرت الأمور بسرعة حقًّا
Dialogue: 0,0:12:45.80,0:12:48.14,Main,,0000,0000,0000,,!...عليّ أن أجد مكان ساكويا بسرعة وإلّا
Dialogue: 0,0:12:50.80,0:12:53.70,Main,,0000,0000,0000,,لكن بأي اتّجاه غرفتها؟
Dialogue: 0,0:12:55.54,0:12:56.47,Main,,0000,0000,0000,,!هذا الرّائحة
Dialogue: 0,0:12:57.10,0:12:57.87,Main,,0000,0000,0000,,ألا بأس بهذا؟
Dialogue: 0,0:13:08.37,0:13:09.44,Main,,0000,0000,0000,,.لقد تحرّكوا
Dialogue: 0,0:13:09.84,0:13:11.00,Main,,0000,0000,0000,,.الباقي يسير حسب المخطّط
Dialogue: 0,0:13:11.07,0:13:11.84,Main,,0000,0000,0000,,.لا تخفق
Dialogue: 0,0:13:12.80,0:13:14.50,Main,,0000,0000,0000,,.أعلم يا أساكا
Dialogue: 0,0:13:19.51,0:13:23.81,Main,,0000,0000,0000,,.أعرف موقع الأحمق الّذي سرق خلايا هاشيراما
Dialogue: 0,0:13:24.27,0:13:27.57,Main,,0000,0000,0000,,.يبدو أنّه باعها في أرض الصّمت
Dialogue: 0,0:13:29.94,0:13:32.44,Main,,0000,0000,0000,,.لنرَ، لقد اختار الذّهاب لمكان مزعج بحقّ
Dialogue: 0,0:13:33.87,0:13:35.37,Main,,0000,0000,0000,,...لكن، إن كانت في تلك الأرض
Dialogue: 0,0:13:35.44,0:13:37.81,Main,,0000,0000,0000,,.فلن يهمّ إن تصرّفنا بقليلٍ من الخشونة
Dialogue: 0,0:13:38.21,0:13:41.14,Main,,0000,0000,0000,,كيف عسانا نستفيد من إحداث اضطراب؟
Dialogue: 0,0:13:42.07,0:13:44.14,Main,,0000,0000,0000,,!لن تقترف أيّ تهوّر! لن أسمح بذلك
Dialogue: 0,0:13:45.77,0:13:47.24,Main,,0000,0000,0000,,!أنت! أين ذهبت؟
Dialogue: 0,0:13:47.57,0:13:48.47,Main,,0000,0000,0000,,!ديبا
Dialogue: 0,0:14:07.27,0:14:08.47,Main,,0000,0000,0000,,هل أفقت؟
Dialogue: 0,0:14:11.44,0:14:12.84,Main,,0000,0000,0000,,أين أنا؟
Dialogue: 0,0:14:13.24,0:14:14.27,Main,,0000,0000,0000,,.في مشفى
Dialogue: 0,0:14:18.04,0:14:21.34,Main,,0000,0000,0000,,.كنت تُحتضرين وأتى بك أحدهم إلى هنا
Dialogue: 0,0:14:22.47,0:14:24.01,Main,,0000,0000,0000,,.ستكونين بأمان هنا
Dialogue: 0,0:14:29.01,0:14:31.47,Main,,0000,0000,0000,,.اشكريه عندما يستيقظ
Dialogue: 0,0:14:32.04,0:14:33.97,Main,,0000,0000,0000,,.لقد أنقذ حياتك
Dialogue: 0,0:14:37.57,0:14:39.01,Main,,0000,0000,0000,,،أمّا أنا
Dialogue: 0,0:14:39.07,0:14:42.51,Main,,0000,0000,0000,,...فكنتُ أفضّل رؤية المزيد من الألم، لكن
Dialogue: 0,0:14:52.34,0:14:54.91,Main,,0000,0000,0000,,.هذا أجود نبيذ
Dialogue: 0,0:14:58.24,0:14:59.71,Main,,0000,0000,0000,,.يملك لونًا جميلًا
Dialogue: 0,0:15:00.37,0:15:02.51,Main,,0000,0000,0000,,.اشرب كأسًا واحدًا فقط رجاءً
Dialogue: 0,0:15:02.91,0:15:06.34,Main,,0000,0000,0000,,.لا يجب أن ندع ساكويا-ساما تنتظر طويلًا
Dialogue: 0,0:15:07.37,0:15:08.94,Main,,0000,0000,0000,,!أنت شحيح للغاية
Dialogue: 0,0:15:09.67,0:15:15.51,Main,,0000,0000,0000,,.بالمناسبة، لم تخبرني كيف تحصّلتم على خلايا هاشيراما
Dialogue: 0,0:15:16.34,0:15:19.14,Main,,0000,0000,0000,,كان هنالك أحمق
Dialogue: 0,0:15:19.21,0:15:22.64,Main,,0000,0000,0000,,.يبدو أنّه كان يعمل لدى شركة معدّات طبّيّة في مكانٍ ما
Dialogue: 0,0:15:22.71,0:15:26.07,Main,,0000,0000,0000,,.وسرق شيئًا من اكتشاف فريقه
Dialogue: 0,0:15:26.91,0:15:28.07,Main,,0000,0000,0000,,فاشتريتموه منه؟
Dialogue: 0,0:15:28.21,0:15:28.97,Main,,0000,0000,0000,,.نعم
Dialogue: 0,0:15:29.34,0:15:32.84,Main,,0000,0000,0000,,.شككتُ في الأوّل إلى أن جرّبته
Dialogue: 0,0:15:33.04,0:15:36.44,Main,,0000,0000,0000,,...زرعناها في جسد فتاة صغيرة قبضنا عليها في البلدة
Dialogue: 0,0:15:36.51,0:15:37.67,Main,,0000,0000,0000,,فإذا بها تتحوّل
Dialogue: 0,0:15:37.74,0:15:40.37,Main,,0000,0000,0000,,.إلى مخلوق بغيض في طرفة عين
Dialogue: 0,0:15:41.27,0:15:42.67,Main,,0000,0000,0000,,ماذا حلّ بتلك الفتاة؟
Dialogue: 0,0:15:43.14,0:15:44.01,Main,,0000,0000,0000,,من يدري؟
Dialogue: 0,0:15:44.44,0:15:48.37,Main,,0000,0000,0000,,.أمرت برميها خارج القلعة، ثمّ اختفت
Dialogue: 0,0:15:49.14,0:15:51.41,Main,,0000,0000,0000,,.على أيّ حال، أشكّ أنّها نجت
Dialogue: 0,0:15:53.07,0:15:54.61,Main,,0000,0000,0000,,!والآن يا كيريساكي-ساما
Dialogue: 0,0:15:54.67,0:15:57.14,Main,,0000,0000,0000,,!اشربه بسرعة رجاءً
Dialogue: 0,0:16:02.11,0:16:05.24,Main,,0000,0000,0000,,.رائحة العطر تزداد كثافةً
Dialogue: 0,0:16:11.77,0:16:14.81,Main,,0000,0000,0000,,.مجرّد الوقوف هنا هكذا يشعرني بالنّعاس
Dialogue: 0,0:16:15.37,0:16:16.37,Main,,0000,0000,0000,,.حدّث ولا حرج
Dialogue: 0,0:16:20.54,0:16:22.04,Main,,0000,0000,0000,,.ناما فحسب إذًا
Dialogue: 0,0:16:31.11,0:16:32.04,Main - Italics,,0000,0000,0000,,!وجدتك
Dialogue: 0,0:16:34.17,0:16:37.41,Main - Italics,,0000,0000,0000,,والآن، كيف السّبيل للاقتراب من خلايا هاشيراما؟
Dialogue: 0,0:16:38.54,0:16:40.74,Main - Italics,,0000,0000,0000,,!كما أنّه أخبرني أن أفعل ذلك بهدوء
Dialogue: 0,0:16:54.01,0:16:56.11,Main - Italics,,0000,0000,0000,,جيّد! هل أخذت قيلولة؟
Dialogue: 0,0:16:56.71,0:16:58.81,Main - Italics,,0000,0000,0000,,.من حسن حظّي، سيوفّر لي هذا بعض الوقت
Dialogue: 0,0:17:02.24,0:17:05.24,Main - Italics,,0000,0000,0000,,.سآخذ خلايا هاشيراما بينما أستطيع
Dialogue: 0,0:17:27.07,0:17:28.51,Main,,0000,0000,0000,,!أهذا من فعلكما؟
Dialogue: 0,0:17:31.91,0:17:32.71,Main,,0000,0000,0000,,شينوبي؟
Dialogue: 0,0:17:35.77,0:17:37.21,Main,,0000,0000,0000,,!لا يمكننا الانتظار أكثر
Dialogue: 0,0:17:37.27,0:17:39.41,Main,,0000,0000,0000,,!—إن كنت لن تجري العمليّة
Dialogue: 0,0:17:39.47,0:17:40.54,Main,,0000,0000,0000,,!تمهّل
Dialogue: 0,0:17:40.61,0:17:42.07,Main,,0000,0000,0000,,...ثمّة شيء آخر أريد أن أسأله
Dialogue: 0,0:17:42.61,0:17:43.57,Main,,0000,0000,0000,,!حدث شيء فظيع
Dialogue: 0,0:17:43.64,0:17:46.47,Main,,0000,0000,0000,,!تسلّل شينوبي من قرية الورق إلى غرف ساكويا-ساما
Dialogue: 0,0:17:46.61,0:17:47.57,Main,,0000,0000,0000,,!ماذا قلت؟
Dialogue: 0,0:17:47.77,0:17:48.87,Main,,0000,0000,0000,,!تعال معي رجاءً
Dialogue: 0,0:17:52.01,0:17:52.87,Main,,0000,0000,0000,,.هذا ليس جيّدًا
Dialogue: 0,0:17:54.34,0:17:57.01,Main,,0000,0000,0000,,.أظنّ أنّ لا خيار أمامنا سوى استخدام القوّة الغاشمة
Dialogue: 0,0:18:00.67,0:18:02.64,Main,,0000,0000,0000,,من أنتما؟
Dialogue: 0,0:18:02.87,0:18:05.07,Main,,0000,0000,0000,,هل تذكّرك هذه الأقراط بشيء؟
Dialogue: 0,0:18:07.61,0:18:09.51,Main,,0000,0000,0000,,.تلك الأقراط! رأيتها في مكان ما
Dialogue: 0,0:18:13.27,0:18:14.74,Main,,0000,0000,0000,,!مستحيل! أنتما من ذلك الوقت
Dialogue: 0,0:18:15.07,0:18:17.31,Main,,0000,0000,0000,,!شكرًا على تدخّلك آنذاك
Dialogue: 0,0:18:17.97,0:18:20.87,Main,,0000,0000,0000,,.لكن من الجيّد أنّنا راقبناك
Dialogue: 0,0:18:21.31,0:18:23.47,Main,,0000,0000,0000,,استغللتمونا إذًا؟
Dialogue: 0,0:18:25.64,0:18:26.41,Main,,0000,0000,0000,,إذًا؟
Dialogue: 0,0:18:26.47,0:18:27.91,Main,,0000,0000,0000,,.إنّهم قادمون من هنا
Dialogue: 0,0:18:28.31,0:18:30.17,Main,,0000,0000,0000,,!هل تسعون خلف خلايا هاشيراما؟
Dialogue: 0,0:18:33.51,0:18:34.54,Main,,0000,0000,0000,,!طبعًا
Dialogue: 0,0:18:36.04,0:18:37.54,Main,,0000,0000,0000,,.لا تظنّوا أنّكم ستفلتون
Dialogue: 0,0:18:38.41,0:18:40.84,Main,,0000,0000,0000,,.لم نحسب أنّنا سنفلت بسهولة
Dialogue: 0,0:18:41.51,0:18:44.21,Main,,0000,0000,0000,,.لهذا ستفيدنا أنت كثيرًا
Dialogue: 0,0:18:44.71,0:18:45.77,Main,,0000,0000,0000,,ماذا تقصد؟
Dialogue: 0,0:18:50.84,0:18:52.01,Main,,0000,0000,0000,,!—أنت
Dialogue: 0,0:18:53.24,0:18:54.54,Main,,0000,0000,0000,,!لمَ أنت هنا؟
Dialogue: 0,0:19:04.67,0:19:05.94,Main,,0000,0000,0000,,!ساكويا-ساما
Dialogue: 0,0:19:18.54,0:19:22.31,Main,,0000,0000,0000,,!ساكويا-ساما
Dialogue: 0,0:19:23.17,0:19:24.57,Main,,0000,0000,0000,,!—انتظر! هذا ليس
Dialogue: 0,0:19:25.07,0:19:26.14,Main,,0000,0000,0000,,!خدعتني
Dialogue: 0,0:19:27.07,0:19:27.77,Main,,0000,0000,0000,,
Dialogue: 0,0:19:27.84,0:19:30.67,Main,,0000,0000,0000,,!هل كنت شينوبي من قرية الورق؟
Dialogue: 0,0:19:35.14,0:19:35.85,Main,,0000,0000,0000,,!ما هذا؟
Dialogue: 0,0:19:35.91,0:19:37.07,Main,,0000,0000,0000,,!ما الّذي يجري؟
Dialogue: 0,0:19:37.51,0:19:38.01,Main,,0000,0000,0000,,!مهلًا
Dialogue: 0,0:19:38.37,0:19:40.11,Main,,0000,0000,0000,,!لقد قُتلت ساكويا-ساما
Dialogue: 0,0:19:40.21,0:19:42.17,Main,,0000,0000,0000,,!وشينوبي قرية الورق هم الجناة
Dialogue: 0,0:19:42.61,0:19:45.17,Main,,0000,0000,0000,,!ليأتِ الجميع إلى القاعة الكبرى
Dialogue: 0,0:19:45.54,0:19:46.77,Main,,0000,0000,0000,,!لستُ الجاني
Dialogue: 0,0:19:55.94,0:19:57.37,Main,,0000,0000,0000,,!ماذا تفعلون؟
Dialogue: 0,0:19:57.74,0:20:00.01,Main,,0000,0000,0000,,!هذه هديّة ترويجيّة
Dialogue: 0,0:20:02.64,0:20:03.77,Main,,0000,0000,0000,,!عطر؟
Dialogue: 0,0:20:06.84,0:20:09.01,Main,,0000,0000,0000,,!أين ذهبوا؟
Dialogue: 0,0:20:09.51,0:20:11.11,Main,,0000,0000,0000,,!بوروتو، ما الّذي حدث؟
Dialogue: 0,0:20:12.01,0:20:14.34,Main,,0000,0000,0000,,!كلّ خادم في القلعة متّجه إلى هنا؟
Dialogue: 0,0:20:14.67,0:20:16.47,Main,,0000,0000,0000,,!قُتل كبير الخدم
Dialogue: 0,0:20:17.17,0:20:18.34,Main,,0000,0000,0000,,!وكذلك ساكويا
Dialogue: 0,0:20:18.54,0:20:19.34,Main,,0000,0000,0000,,!ماذا؟
Dialogue: 0,0:20:24.21,0:20:25.44,Main,,0000,0000,0000,,...حسنًا. يجدر بهذا أن يفي بالغرض
Dialogue: 0,0:20:27.54,0:20:29.07,Main,,0000,0000,0000,,.أُبطِل الحاجز
Dialogue: 0,0:20:31.71,0:20:32.51,Main,,0000,0000,0000,,.هيّا بنا
Dialogue: 0,0:20:32.87,0:20:36.14,Main,,0000,0000,0000,,.بعد هذا، سيكسب الكثير من الوقت لأجلنا
Dialogue: 0,0:20:36.47,0:20:37.61,Main,,0000,0000,0000,,...تلك الرّائحة
Dialogue: 0,0:20:37.67,0:20:39.64,Main,,0000,0000,0000,,.جديرة بالملاحظة كثيرًا
Dialogue: 0,0:20:41.97,0:20:42.94,Main,,0000,0000,0000,,!افتحي
Dialogue: 0,0:20:44.77,0:20:45.67,Main,,0000,0000,0000,,!أحدكم
Dialogue: 0,0:20:45.74,0:20:47.01,Main,,0000,0000,0000,,!أحضروا فأسًا
Dialogue: 0,0:20:54.21,0:20:55.01,Main,,0000,0000,0000,,سمّ؟
Dialogue: 0,0:21:03.44,0:21:05.61,Main,,0000,0000,0000,,.أتساءل إن كان بوروتو والمعلّم بخير
Dialogue: 0,0:21:10.44,0:21:13.61,Main,,0000,0000,0000,,...قتل شينوبي من قرية الورق ساكويا-ساما
Dialogue: 0,0:21:13.67,0:21:15.07,Main,,0000,0000,0000,,!وسرقوا كنزها
Dialogue: 0,0:21:15.54,0:21:18.07,Main,,0000,0000,0000,,!ما زالوا في القلعة
Dialogue: 0,0:21:18.41,0:21:20.54,Main,,0000,0000,0000,,!من أمسك بهم سيحصل على مكافأة
Dialogue: 0,0:21:22.04,0:21:24.41,Main,,0000,0000,0000,,!لقد أخفقا بشدّة
Dialogue: 0,0:21:26.07,0:21:26.84,Main,,0000,0000,0000,,!بوروتو
Dialogue: 0,0:21:41.71,0:21:42.74,Main,,0000,0000,0000,,.هذا سيّئ
Dialogue: 0,0:21:42.94,0:21:45.47,Main,,0000,0000,0000,,!نحن محاصرون تمامًا
Dialogue: 0,0:23:27.51,0:23:29.74,Main,,0000,0000,0000,,.كلّ بلطجيّة البلدة يلاحقوننا
Dialogue: 0,0:23:30.24,0:23:32.51,Main,,0000,0000,0000,,!يبدو أنّهم لفّقوا التّهمة علينا
Dialogue: 0,0:23:32.87,0:23:34.91,Main,,0000,0000,0000,,!أيعني هذا إذًا أنّنا وحدنا ضدّهم جميعًا؟
Dialogue: 0,0:23:35.07,0:23:37.64,Main,,0000,0000,0000,,!أولى أوليّاتنا هي استرجاع خلايا هاشيراما
Dialogue: 0,0:23:38.07,0:23:40.37,Main,,0000,0000,0000,,!علينا أن نهرب من هذه البلدة بطريقة ما
Dialogue: 0,0:23:40.74,0:23:43.41,Main,,0000,0000,0000,,:في الحلقة القادمة
Dialogue: 0,0:23:43.70,0:23:53.97,nxt ep title,,0000,0000,0000,,{\blur3\fad(300,000)}!الهروب من الشّبكة الضيّقة\N\N
Dialogue: 0,0:23:43.77,0:23:45.37,Main - top,,0000,0000,0000,,الهروب من الشّبكة الضيّقة
Dialogue: 0,0:23:46.07,0:23:49.77,Main - top,,0000,0000,0000,,!الهرب من كلّ أولئك النّاس؟ سأريكم كيف نفعلها
