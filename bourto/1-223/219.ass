Dialogue: 0,0:01:34.84,0:01:39.68,ep title,,0000,0000,0000,,{\fad(300,900)}{\blur4\shad3\bord3\}عودة
Dialogue: 0,0:01:44.91,0:01:47.02,Main,,0000,0000,0000,,!سحقًا! هذا لا يفلح
Dialogue: 0,0:01:47.65,0:01:49.89,Main,,0000,0000,0000,,،بما أنّني لا أستطيع استخدام الرّينيغان خاصّتي
Dialogue: 0,0:01:49.99,0:01:53.02,Main,,0000,0000,0000,,.نحتاج منك أن تستخدم الوتد خاصّتك لفتح باب لنا كي نعود
Dialogue: 0,0:01:54.62,0:01:58.36,Main,,0000,0000,0000,,لكنّني لستُ واثقًا كيف أستخدم نينجيتسو \N!الانتقال الآنيّ خاصّتي من الأساس
Dialogue: 0,0:01:59.16,0:02:00.50,Main,,0000,0000,0000,,!يا لها من معضلة
Dialogue: 0,0:02:03.57,0:02:04.73,Main,,0000,0000,0000,,.استرخ
Dialogue: 0,0:02:05.57,0:02:06.87,Main,,0000,0000,0000,,...هل أنت خائف
Dialogue: 0,0:02:08.57,0:02:10.74,Main,,0000,0000,0000,,من أين يخرج ثانيةً؟
Dialogue: 0,0:02:15.58,0:02:17.48,Main,,0000,0000,0000,,.لا أريد اختبار ذلك مجدّدًا أبدًا
Dialogue: 0,0:02:18.35,0:02:19.35,Main,,0000,0000,0000,,...لكن
Dialogue: 0,0:02:19.48,0:02:21.02,Main,,0000,0000,0000,,.لا يمكنني أن أجزم أنّ ذلك لن يحدث ثانيةً
Dialogue: 0,0:02:21.85,0:02:23.95,Main,,0000,0000,0000,,...اختفى وتدي
Dialogue: 0,0:02:25.15,0:02:27.36,Main,,0000,0000,0000,,.بفضلك وفضل الجميع
Dialogue: 0,0:02:28.66,0:02:30.49,Main,,0000,0000,0000,,.لم أستطع أن أفعل أيّ شيء حياله لوحدي
Dialogue: 0,0:02:32.03,0:02:33.86,Main,,0000,0000,0000,,.وذات الأمر ينطبق عليك، على الأغلب
Dialogue: 0,0:02:35.26,0:02:37.47,Main,,0000,0000,0000,,.لذا، كفّ عن التّفكير في الأمر
Dialogue: 0,0:02:38.47,0:02:40.07,Main,,0000,0000,0000,,!القول سهل عليك
Dialogue: 0,0:02:40.77,0:02:42.81,Main,,0000,0000,0000,,.اسمع، لا تخف من الوتد
Dialogue: 0,0:02:43.14,0:02:44.51,Main,,0000,0000,0000,,.عليك استخدامه فحسب
Dialogue: 0,0:02:45.07,0:02:46.31,Main,,0000,0000,0000,,أستخدمه؟
Dialogue: 0,0:02:46.48,0:02:47.98,Main,,0000,0000,0000,,كيف يفترض بي فعل ذلك؟
Dialogue: 0,0:02:48.38,0:02:51.11,Main,,0000,0000,0000,,!كفاك هلعًا وافعل ذلك فحسب أيّها الغبيّ
Dialogue: 0,0:02:51.35,0:02:53.08,Main,,0000,0000,0000,,!ماذا؟
Dialogue: 0,0:02:53.42,0:02:55.18,Main,,0000,0000,0000,,!بعد ما حدث لي قبل قليل؟
Dialogue: 0,0:02:55.28,0:02:56.89,Main,,0000,0000,0000,,!ذلك يثبت أنّك خائف
Dialogue: 0,0:02:56.99,0:03:00.06,Main,,0000,0000,0000,,!كفّ عن التسلّط عليّ وكأنّك تدري كلّ شيء، سحقًا
Dialogue: 0,0:03:02.86,0:03:03.86,Main,,0000,0000,0000,,!—ذلك
Dialogue: 0,0:03:11.83,0:03:13.90,Main,,0000,0000,0000,,،بما أنّنا لا نعرف الوضع في الجانب الآخر
Dialogue: 0,0:03:13.97,0:03:15.20,Main,,0000,0000,0000,,.علينا التصرّف بحذر
Dialogue: 0,0:03:15.77,0:03:16.77,Main,,0000,0000,0000,,،حاليًّا
Dialogue: 0,0:03:16.94,0:03:19.04,Main,,0000,0000,0000,,.أخبرهم أن يركّزوا على المهمّة الحاليّة فحسب
Dialogue: 0,0:03:20.28,0:03:21.28,Main,,0000,0000,0000,,،يا إلهي
Dialogue: 0,0:03:21.58,0:03:23.48,Main,,0000,0000,0000,,.أتساءل كيف ستؤول الأمور
Dialogue: 0,0:03:26.48,0:03:28.48,Main,,0000,0000,0000,,ماذا؟! هل أنت واثق؟
Dialogue: 0,0:03:31.65,0:03:34.12,Main,,0000,0000,0000,,.حسنًا، أرسل الفيلق الطّبّيّ إلى هناك بسرعة
Dialogue: 0,0:03:34.62,0:03:35.66,Main,,0000,0000,0000,,.سنتّجه إلى هناك فورًا
Dialogue: 0,0:03:36.76,0:03:38.29,Main,,0000,0000,0000,,.عاد ناروتو والبقيّة
Dialogue: 0,0:03:38.86,0:03:40.83,Main,,0000,0000,0000,,.يبدو أنّ الأمور سارت على خير، بطريقة ما
Dialogue: 0,0:03:41.36,0:03:43.07,Main,,0000,0000,0000,,!ماذا؟
Dialogue: 0,0:03:44.03,0:03:46.44,Main,,0000,0000,0000,,!حمدًا لهذا يا بوروتو
Dialogue: 0,0:03:46.90,0:03:48.94,Main,,0000,0000,0000,,!اسمع، هل كاواكي بخير؟
Dialogue: 0,0:03:49.47,0:03:52.51,Main,,0000,0000,0000,,.أجل، إنّه مصاب، لكنّهم بخير
Dialogue: 0,0:03:53.31,0:03:55.54,Main,,0000,0000,0000,,.فهمت، حمدًا لهذا
Dialogue: 0,0:04:04.32,0:04:05.79,Main,,0000,0000,0000,,!أنا منهك
Dialogue: 0,0:04:06.46,0:04:08.16,Main,,0000,0000,0000,,يبدو أنّنا استطعنا العودة
Dialogue: 0,0:04:08.62,0:04:09.73,Main,,0000,0000,0000,,.إلى قريتنا
Dialogue: 0,0:04:10.73,0:04:12.60,Main,,0000,0000,0000,,.بشقّ الأنفس
Dialogue: 0,0:04:15.56,0:04:17.47,Main,,0000,0000,0000,,.أخبرتك أنّك تستطيع إن حاولت
Dialogue: 0,0:04:19.07,0:04:21.84,Main,,0000,0000,0000,,.لا أظنّني أستطيع فعل ذلك ثانيةً مع ذلك
Dialogue: 0,0:04:23.31,0:04:25.11,Main,,0000,0000,0000,,،لكن أشعر أنّ أيّ شيء ممكن
Dialogue: 0,0:04:25.21,0:04:26.94,Main,,0000,0000,0000,,.ما دمت معك
Dialogue: 0,0:04:29.45,0:04:30.48,Main,,0000,0000,0000,,.لا بدّ أنّك تمزح
Dialogue: 0,0:04:30.95,0:04:33.28,Main,,0000,0000,0000,,.أسرع وقف لوحدك، سحقًا
Dialogue: 0,0:04:33.45,0:04:35.28,Main,,0000,0000,0000,,!سيّدي الصّغير
Dialogue: 0,0:04:36.49,0:04:37.79,Main,,0000,0000,0000,,!رفاق
Dialogue: 0,0:04:38.52,0:04:39.56,Main,,0000,0000,0000,,!يبدو أنّكم نجحتم
Dialogue: 0,0:04:40.36,0:04:41.36,Main,,0000,0000,0000,,...أجل
Dialogue: 0,0:04:41.46,0:04:42.53,Main,,0000,0000,0000,,...لكن
Dialogue: 0,0:04:44.43,0:04:46.03,Main,,0000,0000,0000,,!أبي، ماذا حدث لعينك؟
Dialogue: 0,0:04:47.03,0:04:48.26,Main,,0000,0000,0000,,.إنّه خطئي
Dialogue: 0,0:04:48.56,0:04:50.87,Main,,0000,0000,0000,,.يمكنك أن تلكميني إلى أن تشفي غليلك
Dialogue: 0,0:04:52.57,0:04:54.60,Main,,0000,0000,0000,,!أفعلت ذلك يا بوروتو؟
Dialogue: 0,0:04:55.37,0:04:57.01,Main,,0000,0000,0000,,،لولا أنّني تبعتهم
Dialogue: 0,0:04:57.47,0:04:58.44,Main,,0000,0000,0000,,...لما حدث هذا
Dialogue: 0,0:04:59.74,0:05:01.41,Main,,0000,0000,0000,,!ولكان ساسكي-سان ما زال يملك عينه
Dialogue: 0,0:05:03.41,0:05:05.01,Main,,0000,0000,0000,,،لا أدري ماذا حدث
Dialogue: 0,0:05:05.48,0:05:07.28,Main,,0000,0000,0000,,.لكن أشكّ أنّك المخطئ
Dialogue: 0,0:05:08.98,0:05:11.39,Main,,0000,0000,0000,,.أعرف ذلك على الأقلّ
Dialogue: 0,0:05:12.29,0:05:13.36,Main,,0000,0000,0000,,...سارادا
Dialogue: 0,0:05:14.12,0:05:15.69,Main,,0000,0000,0000,,.هذا صحيح يا بوروتو
Dialogue: 0,0:05:16.56,0:05:19.66,Main,,0000,0000,0000,,.لو أنّك لم تكن هناك، لمتُّ
Dialogue: 0,0:05:20.53,0:05:21.60,Main,,0000,0000,0000,,!ساسكي-سان
Dialogue: 0,0:05:22.03,0:05:26.14,Main,,0000,0000,0000,,.من حسن حظّنا أنّنا أحياء وانتصرنا
Dialogue: 0,0:05:27.60,0:05:28.84,Main,,0000,0000,0000,,.لا تلم نفسك
Dialogue: 0,0:05:29.51,0:05:33.41,Main,,0000,0000,0000,,.أيضًا، يحدث مثل هذا الأمر عندما يدخل الشّينوبي المعركة
Dialogue: 0,0:05:33.58,0:05:35.64,Main,,0000,0000,0000,,.كنت أنا وأمّي جاهزتان لهذا
Dialogue: 0,0:05:37.28,0:05:38.35,Main,,0000,0000,0000,,.آسف
Dialogue: 0,0:05:39.48,0:05:40.52,Main,,0000,0000,0000,,...لنعد
Dialogue: 0,0:05:40.72,0:05:42.02,Main,,0000,0000,0000,,.إلى ساكورا
Dialogue: 0,0:05:43.12,0:05:44.12,Main,,0000,0000,0000,,!حسنًا
Dialogue: 0,0:05:44.52,0:05:46.19,Main,,0000,0000,0000,,،أدري أنّك مررت بالكثير
Dialogue: 0,0:05:46.26,0:05:47.49,Main,,0000,0000,0000,,،لكن فور أن تُستشفى
Dialogue: 0,0:05:47.49,0:05:49.39,Main,,0000,0000,0000,,.أودّ أن أسمع تقريرًا مفصّلًا عمّا حدث
Dialogue: 0,0:05:50.33,0:05:51.69,Main,,0000,0000,0000,,.حسنًا، مفهوم
Dialogue: 0,0:05:56.47,0:05:57.83,Main,,0000,0000,0000,,...فهمت
Dialogue: 0,0:05:58.43,0:05:59.74,Main,,0000,0000,0000,,يبدو أنّ إيشيكي
Dialogue: 0,0:06:00.60,0:06:02.91,Main,,0000,0000,0000,,.دُمّر بالكامل
Dialogue: 0,0:06:03.71,0:06:04.87,Main,,0000,0000,0000,,.أحسنت
Dialogue: 0,0:06:05.67,0:06:06.64,Main,,0000,0000,0000,,...أجل
Dialogue: 0,0:06:06.64,0:06:08.51,Main,,0000,0000,0000,,.كانت التّضحية عظيمة مع ذلك
Dialogue: 0,0:06:09.58,0:06:13.12,Main,,0000,0000,0000,,.استدعيتك إلى هنا لأنّك هناك ما أردت التّأكّد منه بشأن الكارا
Dialogue: 0,0:06:13.98,0:06:18.15,Main,,0000,0000,0000,,أيمكننا أن نفترض أنّ الكارا تفكّكت؟
Dialogue: 0,0:06:19.09,0:06:20.06,Main,,0000,0000,0000,,.يبدو الأمر كذلك
Dialogue: 0,0:06:20.62,0:06:23.99,Main,,0000,0000,0000,,.أشكّ أنّ كاشين كوجي نجا
Dialogue: 0,0:06:24.66,0:06:25.66,Main,,0000,0000,0000,,...فهمت
Dialogue: 0,0:06:26.16,0:06:29.33,Main,,0000,0000,0000,,وأنت عطّلتَ ديلتا، أليس كذلك؟
Dialogue: 0,0:06:30.33,0:06:31.33,Main,,0000,0000,0000,,.هذا صحيح
Dialogue: 0,0:06:31.40,0:06:33.70,Main,,0000,0000,0000,,.جسداهما الاحتياطيّان فارغان أيضًا
Dialogue: 0,0:06:34.74,0:06:36.51,Main,,0000,0000,0000,,.ليس هناك خطر وقوعهما في يديّ العدوّ
Dialogue: 0,0:06:37.31,0:06:39.48,Main,,0000,0000,0000,,هل بقي أيّ أعداء؟
Dialogue: 0,0:06:41.58,0:06:43.41,Main,,0000,0000,0000,,.عضو داخليّ معروف بكود
Dialogue: 0,0:06:44.58,0:06:46.15,Main,,0000,0000,0000,,،إذًا، إن استطعنا التّعامل معه
Dialogue: 0,0:06:46.22,0:06:47.65,Main,,0000,0000,0000,,فسيتمّ تبديد الكارا، صحيح؟
Dialogue: 0,0:06:48.92,0:06:50.49,Main,,0000,0000,0000,,.لا تستخفّ به
Dialogue: 0,0:06:50.82,0:06:52.52,Main,,0000,0000,0000,,.كود استثنائيّ
Dialogue: 0,0:06:53.66,0:06:54.66,Main,,0000,0000,0000,,استثنائيّ؟
Dialogue: 0,0:06:55.42,0:06:59.66,Main,,0000,0000,0000,,.باستثناء كاواكي، هناك وعاء ناجٍ آخر
Dialogue: 0,0:07:00.36,0:07:01.36,Main,,0000,0000,0000,,لا يمكن—؟
Dialogue: 0,0:07:02.36,0:07:03.95,Main,,0000,0000,0000,,.ذلك الشّخص هو كود
Dialogue: 0,0:07:04.57,0:07:05.57,Main,,0000,0000,0000,,!ماذا قلت؟
Dialogue: 0,0:07:05.73,0:07:08.57,Main,,0000,0000,0000,,...كوعاء، إنّه رفض غير وظيفيّ
Dialogue: 0,0:07:09.27,0:07:10.31,Main,,0000,0000,0000,,...لكن
Dialogue: 0,0:07:10.77,0:07:13.44,Main,,0000,0000,0000,,.لديه وتد مزروع من قبل جيغن
Dialogue: 0,0:07:20.52,0:07:24.35,Main,,0000,0000,0000,,.يحتفظ بجانب الوتد لكونه سلاح
Dialogue: 0,0:07:24.79,0:07:26.72,Main,,0000,0000,0000,,.أي أنّه حالة غريبة
Dialogue: 0,0:07:27.56,0:07:28.52,Main,,0000,0000,0000,,!مهلًا
Dialogue: 0,0:07:28.72,0:07:30.43,Main,,0000,0000,0000,,،إن زرع جيغن الوتد عليه
Dialogue: 0,0:07:30.53,0:07:33.26,Main,,0000,0000,0000,,إذًا ألم يتبدّد عندما انبعث؟
Dialogue: 0,0:07:34.06,0:07:35.10,Main,,0000,0000,0000,,...لا
Dialogue: 0,0:07:35.76,0:07:38.07,Main,,0000,0000,0000,,،بما أنّه مرفوض
Dialogue: 0,0:07:38.17,0:07:40.14,Main,,0000,0000,0000,,.فهو غير وظيفيّ، لكنّه لم يختف أيضًا
Dialogue: 0,0:07:42.91,0:07:45.64,Main,,0000,0000,0000,,.ما زلنا نجهل الكثير عن الوتد
Dialogue: 0,0:07:46.51,0:07:49.78,Main,,0000,0000,0000,,.وردّ الفعل الّذي حدث لكود مذهل على وجه الخصوص
Dialogue: 0,0:07:50.51,0:07:56.52,Main,,0000,0000,0000,,.تقريبًا كلّ عضو في الكارا يملك جسدًا معدّلًا بغرض تعزيزه
Dialogue: 0,0:07:57.19,0:07:59.66,Main,,0000,0000,0000,,.لكن في حالة كود، الأمر معاكس
Dialogue: 0,0:07:59.96,0:08:03.19,Main,,0000,0000,0000,,.إذ تمّ تعديله للسّيطرة على قوّته الجامحة
Dialogue: 0,0:08:04.83,0:08:06.43,Main,,0000,0000,0000,,كمُحدّد؟
Dialogue: 0,0:08:06.93,0:08:07.93,Main,,0000,0000,0000,,.هذا صحيح
Dialogue: 0,0:08:08.23,0:08:10.97,Main,,0000,0000,0000,,،إن استعرض كود قوّته الحقيقيّة
Dialogue: 0,0:08:11.53,0:08:13.94,Main,,0000,0000,0000,,.فلا نعرف ما قد يحدث
Dialogue: 0,0:08:14.57,0:08:16.24,Main,,0000,0000,0000,,أهو بتلك القوّة؟
Dialogue: 0,0:08:17.51,0:08:18.47,Main,,0000,0000,0000,,،لأصدقكم القول
Dialogue: 0,0:08:18.57,0:08:21.48,Main,,0000,0000,0000,,كان هناك العديد من السّايبورغ من بين الّذين اخترعتهم
Dialogue: 0,0:08:22.48,0:08:25.85,Main,,0000,0000,0000,,.تجاوزوا قوّة جيغن كثيرًا
Dialogue: 0,0:08:27.92,0:08:30.59,Main,,0000,0000,0000,,.لكن تمّ التخلّص منهم جميعًا، باستثناء كود
Dialogue: 0,0:08:31.69,0:08:34.22,Main,,0000,0000,0000,,!لمَ لم تخبرنا من قبل عن شيء بهذه الأهمّيّة؟
Dialogue: 0,0:08:34.46,0:08:36.13,Main,,0000,0000,0000,,.لا تهلع
Dialogue: 0,0:08:36.33,0:08:38.99,Main,,0000,0000,0000,,.يستحيل على كود أن يزيل محدّده بنفسه
Dialogue: 0,0:08:39.53,0:08:40.90,Main,,0000,0000,0000,,أهذا صحيح؟
Dialogue: 0,0:08:41.66,0:08:44.60,Main,,0000,0000,0000,,.لقد أراد الأمر هكذا بنفسه
Dialogue: 0,0:08:45.43,0:08:46.90,Main,,0000,0000,0000,,ترك نفسه أن يظلّ مستضعفًا؟
Dialogue: 0,0:08:47.57,0:08:48.57,Main,,0000,0000,0000,,!لمَ عساه يريد ذلك؟
Dialogue: 0,0:08:49.27,0:08:53.28,Main,,0000,0000,0000,,.للحرص أنّ سلطة جيغن كقائد لن تُقوّض
Dialogue: 0,0:08:53.68,0:08:56.51,Main,,0000,0000,0000,,.كانت رغبة كود أن يكون تابعًا مخلصًا
Dialogue: 0,0:08:57.61,0:08:59.62,Main,,0000,0000,0000,,ما هذا؟
Dialogue: 0,0:09:00.28,0:09:05.12,Main,,0000,0000,0000,,.فهو يكنّ تكريسًا دينيًّا نوعًا ما تجاه الأوتسوتسكي
Dialogue: 0,0:09:05.89,0:09:09.73,Main,,0000,0000,0000,,.لقد عبد وبجّل إيشيكي كإله
Dialogue: 0,0:09:12.16,0:09:13.43,Main,,0000,0000,0000,,،ومن أجل ذلك السّبب
Dialogue: 0,0:09:13.53,0:09:15.56,Main,,0000,0000,0000,,كان يشعر بغيرة كبيرة من كاواكي
Dialogue: 0,0:09:15.66,0:09:18.57,Main,,0000,0000,0000,,.لأنّه اختير كوعاء إيشيكي الشّرعيّ
Dialogue: 0,0:09:19.64,0:09:21.40,Main,,0000,0000,0000,,.هذا ضرب من الجنون
Dialogue: 0,0:09:21.87,0:09:25.61,Main,,0000,0000,0000,,.ولاء كود هو ما جنّبه الإقصاء
Dialogue: 0,0:09:26.88,0:09:31.48,Main,,0000,0000,0000,,.بما أنّ إيشيكي هُزم، سيسعى للثّأر على الأغلب
Dialogue: 0,0:09:32.41,0:09:36.29,Main,,0000,0000,0000,,سيستهدفني وبوروتو وكاواكي، صحيح؟
Dialogue: 0,0:09:37.32,0:09:39.69,Main,,0000,0000,0000,,.وأنا أيضًا، لخيانتي الكارا
Dialogue: 0,0:09:41.22,0:09:45.16,Main,,0000,0000,0000,,.لنبق هذا الأمر بيننا في الوقت الرّاهن
Dialogue: 0,0:09:45.76,0:09:46.76,Main,,0000,0000,0000,,...أجل
Dialogue: 0,0:10:12.09,0:10:13.06,Main,,0000,0000,0000,,.لا
Dialogue: 0,0:10:13.39,0:10:14.66,Main,,0000,0000,0000,,.غططت في النّوم
Dialogue: 0,0:10:20.40,0:10:22.56,Main,,0000,0000,0000,,.حسنًا. لا يوجد شيء خارج عن  المألوف
Dialogue: 0,0:10:24.27,0:10:26.47,Main,,0000,0000,0000,,.الاعتناء بالجيوبي مملّ
Dialogue: 0,0:10:27.60,0:10:30.61,Main,,0000,0000,0000,,.أتساءل إن كان جيغن قبض على كاواكي الآن
Dialogue: 0,0:10:32.11,0:10:33.51,Main,,0000,0000,0000,,!سحقًا يا كاواكي
Dialogue: 0,0:10:34.24,0:10:37.61,Main,,0000,0000,0000,,.حللت محلّي واختِرت لتكون وعاءً
Dialogue: 0,0:10:37.85,0:10:39.18,Main,,0000,0000,0000,,فلمَ عساك تغضب بشأن ذلك؟
Dialogue: 0,0:10:43.72,0:10:44.72,Main,,0000,0000,0000,,!سحقًا
Dialogue: 0,0:10:45.32,0:10:49.46,Main,,0000,0000,0000,,!—يا ليتني أملك وتدًا حقيقيًّا بدل هذا المعاب، لأنّه حينها كنتُ
Dialogue: 0,0:11:06.61,0:11:07.68,Main,,0000,0000,0000,,!—إنّه
Dialogue: 0,0:11:09.44,0:11:12.58,Main - Italics,,0000,0000,0000,,.وصل صوتي إليك أخيرًا
Dialogue: 0,0:11:13.15,0:11:16.39,Main,,0000,0000,0000,,!جيغن— لا، أوتسوتسكي إيشيكي؟
Dialogue: 0,0:11:17.19,0:11:20.69,Main - Italics,,0000,0000,0000,,.كود، خادمي العزيز الأكثر إخلاصًا
Dialogue: 0,0:11:22.66,0:11:25.26,Main,,0000,0000,0000,,!لا أصدّق أنّك ظهرت أمامي
Dialogue: 0,0:11:26.43,0:11:31.07,Main - Italics,,0000,0000,0000,,.روحي... ستختفي قريبًا
Dialogue: 0,0:11:31.27,0:11:32.27,Main,,0000,0000,0000,,ماذا؟
Dialogue: 0,0:11:32.37,0:11:34.34,Main,,0000,0000,0000,,أيعني هذا أنّ انبعاثك فشل؟
Dialogue: 0,0:11:34.64,0:11:35.70,Main,,0000,0000,0000,,!مستحيل
Dialogue: 0,0:11:36.51,0:11:37.57,Main - Italics,,0000,0000,0000,,...هذا صحيح
Dialogue: 0,0:11:37.97,0:11:41.58,Main - Italics,,0000,0000,0000,,.لكنّك ما زلت هنا يا كود
Dialogue: 0,0:11:42.01,0:11:43.45,Main,,0000,0000,0000,,...إيشيكي
Dialogue: 0,0:11:44.01,0:11:46.08,Main,,0000,0000,0000,,.شكرًا على قول ذلك
Dialogue: 0,0:11:47.18,0:11:50.22,Main,,0000,0000,0000,,.لكنّني لن أستطيع الارتقاء إلى تطلّعاتك
Dialogue: 0,0:11:51.62,0:11:54.52,Main,,0000,0000,0000,,لا يمكنني أن أكون وعاءً لروحك
Dialogue: 0,0:11:54.62,0:11:56.43,Main,,0000,0000,0000,,.بهذا الوتد المعاب
Dialogue: 0,0:12:00.33,0:12:03.67,Main - Italics,,0000,0000,0000,,...الوتد الأبيض غير الوعائيّ
Dialogue: 0,0:12:03.77,0:12:07.97,Main - Italics,,0000,0000,0000,,.هذا إرثي يقلع فيك على شكل قوّة ناصعة
Dialogue: 0,0:12:09.10,0:12:10.11,Main,,0000,0000,0000,,ماذا؟
Dialogue: 0,0:12:10.47,0:12:17.01,Main - Italics,,0000,0000,0000,,{\i1}...بهذا الوتد، سوف ترث إرادة الأوتسوتسكي{\i0}{\i1}{\i0}
Dialogue: 0,0:12:17.68,0:12:19.78,Main,,0000,0000,0000,,إرادة الأوتسوتسكي؟
Dialogue: 0,0:12:21.95,0:12:25.49,Main,,0000,0000,0000,,.خليفتي الوحيدة
Dialogue: 0,0:12:36.27,0:12:37.53,Main,,0000,0000,0000,,...إيشيكي
Dialogue: 0,0:12:47.74,0:12:50.68,Main,,0000,0000,0000,,.شعرت اليوم كأنّه يوم طويل حقًّا
Dialogue: 0,0:12:51.41,0:12:52.41,Main,,0000,0000,0000,,.أجل
Dialogue: 0,0:12:52.78,0:12:54.42,Main,,0000,0000,0000,,!أنا أتضوّر جوعًا
Dialogue: 0,0:12:54.92,0:12:56.79,Main,,0000,0000,0000,,.أريد أن آكل من طبخ أمّي في أسرع وقت
Dialogue: 0,0:12:59.69,0:13:01.02,Main,,0000,0000,0000,,ماذا؟ ما الخطب؟
Dialogue: 0,0:13:01.89,0:13:03.43,Main,,0000,0000,0000,,.تمكّنت من العودة بطريقة ما
Dialogue: 0,0:13:03.93,0:13:04.99,Main,,0000,0000,0000,,عليك أن تأخذ وقتًا
Dialogue: 0,0:13:05.49,0:13:08.40,Main,,0000,0000,0000,,.لتستمتع بلحظتك النّادرة وحيدًا مع عائلتك
Dialogue: 0,0:13:08.83,0:13:10.17,Main,,0000,0000,0000,,!ماذا يا كاواكي؟
Dialogue: 0,0:13:11.97,0:13:13.44,Main,,0000,0000,0000,,.لن أهرب، لذا لا تقلق
Dialogue: 0,0:13:14.57,0:13:17.44,Main,,0000,0000,0000,,.أسرع وعد إلى بيتك فحسب
Dialogue: 0,0:13:18.57,0:13:19.57,Main,,0000,0000,0000,,.أنت مخطئ
Dialogue: 0,0:13:21.11,0:13:23.41,Main,,0000,0000,0000,,بل هو بيتنا. أليس كذلك يا أخي؟
Dialogue: 0,0:13:35.14,0:13:36.68,Main,,0000,0000,0000,,.اخبريني ما الّذي يجري لجسدي
Dialogue: 0,0:13:37.18,0:13:39.08,Main,,0000,0000,0000,,.صارحيني
Dialogue: 0,0:13:40.81,0:13:41.62,Main,,0000,0000,0000,,.حسنًا
Dialogue: 0,0:13:42.58,0:13:45.69,Main,,0000,0000,0000,,،بما أنّك فقدتَ كوراما في المعركة ضدّ الأوتسوتسكي
Dialogue: 0,0:13:46.22,0:13:48.29,Main,,0000,0000,0000,,.ما عدت تملك تشاكرا خارقة للطّبيعة
Dialogue: 0,0:13:49.39,0:13:50.39,Main,,0000,0000,0000,,.أكيد
Dialogue: 0,0:13:50.72,0:13:51.79,Main,,0000,0000,0000,,.حتّى أنا أستطيع معرفة ذلك
Dialogue: 0,0:13:52.59,0:13:55.63,Main,,0000,0000,0000,,.لا تستطيع استخدام التقنية كما السّابق على الأغلب
Dialogue: 0,0:13:56.16,0:13:59.80,Main,,0000,0000,0000,,.شعرتُ وكأنّني غششتُ نوعًا ما
Dialogue: 0,0:14:00.93,0:14:03.97,Main,,0000,0000,0000,,.وكما حالك، فقد ساسكي-دونو القوّة أيضًا
Dialogue: 0,0:14:06.27,0:14:09.18,Main,,0000,0000,0000,,.يقاتل الشّينوبي بما لديه من اختيارات
Dialogue: 0,0:14:09.64,0:14:10.88,Main,,0000,0000,0000,,.ليست مشكلة
Dialogue: 0,0:14:12.15,0:14:13.15,Main,,0000,0000,0000,,...لكن
Dialogue: 0,0:14:14.31,0:14:16.02,Main,,0000,0000,0000,,...لا أدري كيف أقول هذا، ولكن
Dialogue: 0,0:14:17.62,0:14:18.75,Main,,0000,0000,0000,,...ظننت حقًّا
Dialogue: 0,0:14:19.05,0:14:21.02,Main,,0000,0000,0000,,.أنّني سأموت أيضًا
Dialogue: 0,0:14:21.79,0:14:24.73,Main,,0000,0000,0000,,...لم أتوقّع منه أن يكون الضحيّة الوحيدة
Dialogue: 0,0:14:26.23,0:14:27.26,Main,,0000,0000,0000,,...الأمر أشبه
Dialogue: 0,0:14:28.06,0:14:29.93,Main,,0000,0000,0000,,...بوجود فجوة
Dialogue: 0,0:14:36.97,0:14:38.14,Main,,0000,0000,0000,,.لا تقلقا بشأني
Dialogue: 0,0:14:38.54,0:14:41.14,Main,,0000,0000,0000,,.سيغضب كوراما إن شعرت اكتأبتُ
Dialogue: 0,0:14:42.21,0:14:45.18,Main,,0000,0000,0000,,".وكان ليقول، "أنت الهوكاغي، كفاك إثارةً للشّفقة
Dialogue: 0,0:14:46.81,0:14:47.85,Main,,0000,0000,0000,,.هذا صحيح
Dialogue: 0,0:14:49.05,0:14:53.02,Main,,0000,0000,0000,,.أنا قلق أكثر على نتائج فحص بوروتو وكاواكي
Dialogue: 0,0:14:53.75,0:14:54.76,Main,,0000,0000,0000,,.أجل
Dialogue: 0,0:14:55.42,0:14:58.53,Main,,0000,0000,0000,,لا تمانع إن قمنا بإبلاغهما، أليس كذلك؟
Dialogue: 0,0:14:59.93,0:15:03.33,Main,,0000,0000,0000,,.افعل رجاءً .أنا واثق أنّ هذا ما يريدانه
Dialogue: 0,0:15:17.58,0:15:20.55,Main,,0000,0000,0000,,من الصّادم أن نعلم
Dialogue: 0,0:15:21.08,0:15:23.88,Main,,0000,0000,0000,,.%أنّ جسدينا أوتسوتسكي بنسبة 80
Dialogue: 0,0:15:24.75,0:15:26.89,Main,,0000,0000,0000,,.هذا متوقّع
Dialogue: 0,0:15:28.16,0:15:30.09,Main,,0000,0000,0000,,لقد عُدّل جسدي بالكامل
Dialogue: 0,0:15:30.72,0:15:32.73,Main,,0000,0000,0000,,.وتعاملتُ مع الوتد لوقت طويل
Dialogue: 0,0:15:33.23,0:15:34.23,Main,,0000,0000,0000,,...في هذه المرحلة
Dialogue: 0,0:15:34.96,0:15:37.33,Main,,0000,0000,0000,,.لنرَ، أفترض أنّ هذا الحال لا ينطبق عليك
Dialogue: 0,0:15:41.27,0:15:42.50,Main,,0000,0000,0000,,.لا تكتئب هكذا
Dialogue: 0,0:15:43.44,0:15:47.04,Main,,0000,0000,0000,,.أنا واثق أنّ لدينا وقت أكثر قبل حدوث أيّ شيء
Dialogue: 0,0:15:48.58,0:15:49.58,Main,,0000,0000,0000,,.كاواكي
Dialogue: 0,0:15:50.31,0:15:52.91,Main,,0000,0000,0000,,علينا فقط أن نجد طريقة للتصرّف
Dialogue: 0,0:15:53.58,0:15:55.85,Main,,0000,0000,0000,,.قبل أن ينبعث ذلك الأوتسوتسكي الحقير
Dialogue: 0,0:15:56.55,0:15:57.55,Main,,0000,0000,0000,,...لنرَ
Dialogue: 0,0:15:57.75,0:15:58.89,Main,,0000,0000,0000,,.أفترض أنّك محقّ
Dialogue: 0,0:15:59.79,0:16:01.05,Main,,0000,0000,0000,,.سأساعدك
Dialogue: 0,0:16:01.76,0:16:04.36,Main,,0000,0000,0000,,وعدتك أن أساعدك إلى أن تتخلّص من الوتد خاصّتك، أليس كذلك؟
Dialogue: 0,0:16:05.03,0:16:08.13,Main,,0000,0000,0000,,لديك حسّ قويّ بالشّرف فجأةً، أليس كذلك؟
Dialogue: 0,0:16:09.73,0:16:12.30,Main,,0000,0000,0000,,.فقط لا أشعر أنّ الأمر صائب إلّم أُعد المعروف
Dialogue: 0,0:16:13.60,0:16:14.97,Main,,0000,0000,0000,,.عد إلى البيت فحسب
Dialogue: 0,0:16:15.64,0:16:18.61,Main,,0000,0000,0000,,أخبرك السّابع أن تتوارى عن الأنظار، أليس كذلك؟
Dialogue: 0,0:16:21.51,0:16:22.51,Main,,0000,0000,0000,,...في الواقع
Dialogue: 0,0:16:22.68,0:16:24.58,Main,,0000,0000,0000,,عليّ أن أفعل ما أفعله عادةً، صحيح؟
Dialogue: 0,0:16:25.85,0:16:28.25,sign,,0000,0000,0000,,{\border\c&H1D2C6C&\pos(409.5,367.04)}طبّيّ
Dialogue: 0,0:16:34.25,0:16:36.06,Main,,0000,0000,0000,,ما الّذي تفعله أيّها الدّكتور كاتاسكي؟
Dialogue: 0,0:16:36.12,0:16:37.66,Main,,0000,0000,0000,,!سـ-سيّدي الصّغير
Dialogue: 0,0:16:37.86,0:16:38.42,Main,,0000,0000,0000,,ماذا؟
Dialogue: 0,0:16:38.71,0:16:40.63,Main,,0000,0000,0000,,—في الواقع، الإعلام
Dialogue: 0,0:16:40.73,0:16:41.83,Main,,0000,0000,0000,,!لقد خرج
Dialogue: 0,0:16:43.26,0:16:44.43,Main,,0000,0000,0000,,!مـ-ما الّذي يجري؟
Dialogue: 0,0:16:43.26,0:16:44.43,Main - top,,0000,0000,0000,,!أرجو المعذرة
Dialogue: 0,0:16:45.07,0:16:49.80,Main,,0000,0000,0000,,!أصحيح أنّ السّابع هزم الأوتسوتسكي وأنقذ القرية؟
Dialogue: 0,0:16:49.80,0:16:52.61,Main,,0000,0000,0000,,!أخبرني، هل رأيت والدك يقاتل؟
Dialogue: 0,0:16:52.67,0:16:54.37,Main,,0000,0000,0000,,!مـ-مهلًا
Dialogue: 0,0:16:54.47,0:16:58.08,Main,,0000,0000,0000,,قوّة الهوكاغي هي سبب هزيمة الأوتسوتسكي، صحيح؟
Dialogue: 0,0:16:58.21,0:16:59.91,Main,,0000,0000,0000,,!هل اعترضت طريقه؟
Dialogue: 0,0:17:02.22,0:17:04.92,Main,,0000,0000,0000,,!أنتم! فكّروا قبل أن تتكلّموا
Dialogue: 0,0:17:05.02,0:17:06.49,Main,,0000,0000,0000,,!لا تملكون أدنى فكرة كيف يشعر السّيّد الصّغير
Dialogue: 0,0:17:06.55,0:17:08.29,Main,,0000,0000,0000,,!دكتور كاتاسكي؟
Dialogue: 0,0:17:08.39,0:17:11.63,Main,,0000,0000,0000,,!لولا مساعدة السّيّد الصّغير، لما استطاعوا الانتصار
Dialogue: 0,0:17:11.73,0:17:13.23,Main,,0000,0000,0000,,!—مهلًا، هذا
Dialogue: 0,0:17:13.43,0:17:18.80,Main,,0000,0000,0000,,في الواقع، لن أبالغ إن قلتُ أنّ السّيّد \N!الصّغير لعبَ دورًا حاسمًا في إنقاذ القرية
Dialogue: 0,0:17:20.60,0:17:22.04,Main,,0000,0000,0000,,!أهذا صحيح؟
Dialogue: 0,0:17:22.14,0:17:24.47,Main,,0000,0000,0000,,!أخبرنا بالتّفاصيل يا بوروتو
Dialogue: 0,0:17:24.54,0:17:26.11,Main,,0000,0000,0000,,!مـ-ماذا؟
Dialogue: 0,0:17:24.54,0:17:26.11,Main - top,,0000,0000,0000,,!أخبرنا رجاءً
Dialogue: 0,0:17:26.91,0:17:30.28,Main,,0000,0000,0000,,!ماذا فعلت؟
Dialogue: 0,0:17:30.48,0:17:33.48,thunder burger,,0000,0000,0000,,برغر الرّعد
Dialogue: 0,0:17:33.71,0:17:35.82,Main - Italics,,0000,0000,0000,,.لا داعي لكلّ هذا التّواضع
Dialogue: 0,0:17:35.88,0:17:38.89,Main - Italics,,0000,0000,0000,,!لقد أنقذتَ القرية عمليًّا
Dialogue: 0,0:17:39.19,0:17:42.76,Main - Italics,,0000,0000,0000,,.لم يكن الأمر كذلك إطلاقًا
Dialogue: 0,0:17:43.12,0:17:44.76,Main - Italics,,0000,0000,0000,,،لنصّفق على أوزوماكي بوروتو
Dialogue: 0,0:17:44.86,0:17:48.50,Main - Italics,,0000,0000,0000,,!البطل الصّغير الّذي أنقذ القرية من الأوتسوتسكي
Dialogue: 0,0:17:50.73,0:17:51.60,Main - Italics,,0000,0000,0000,,...عجبًا
Dialogue: 0,0:17:52.60,0:17:54.50,Main - Italics,,0000,0000,0000,,.لا أدري ما أقول
Dialogue: 0,0:17:55.04,0:17:57.10,Main,,0000,0000,0000,,ما بال بوروتو؟
Dialogue: 0,0:17:57.27,0:18:00.91,Main,,0000,0000,0000,,...إنّه يتصرّف بدناءة فقط لأنّه ظهر في التّلفاز ويتلقّى الثّناء
Dialogue: 0,0:18:01.31,0:18:03.38,Main,,0000,0000,0000,,.تساهلي معه
Dialogue: 0,0:18:03.58,0:18:06.21,Main,,0000,0000,0000,,.لا يمكنه أن يصرّح بما حدث فعلًا ببساطة
Dialogue: 0,0:18:06.85,0:18:10.02,Main,,0000,0000,0000,,حسنًا، إن كان ذلك يطمئن أهل القرية، فأين المضرّة؟
Dialogue: 0,0:18:10.82,0:18:13.59,Main,,0000,0000,0000,,...أفهم ذلك، لكن
Dialogue: 0,0:18:13.59,0:18:16.12,Main,,0000,0000,0000,,كلّ شيء على ما يرام، صحيح؟
Dialogue: 0,0:18:16.66,0:18:19.33,Main,,0000,0000,0000,,.ظهر في التّلفاز وأصبح مشهورًا
Dialogue: 0,0:18:19.43,0:18:20.96,Main,,0000,0000,0000,,.كم ذلك عظيم
Dialogue: 0,0:18:21.13,0:18:23.83,Main,,0000,0000,0000,,.لا بدّ أنّ من الجميل أن يكون المرء هنيئًا
Dialogue: 0,0:18:23.93,0:18:26.13,Main,,0000,0000,0000,,!المعذرة، أهتمّ للأمور بالفعل
Dialogue: 0,0:18:26.23,0:18:29.14,Main,,0000,0000,0000,,!مثلًا كيف أظهر في الكاميرا وكيف يبدو مكياجي
Dialogue: 0,0:18:31.67,0:18:33.37,Main,,0000,0000,0000,,ما الخطب يا ممثّلة الفصل؟
Dialogue: 0,0:18:33.91,0:18:36.18,Main,,0000,0000,0000,,...في الواقع
Dialogue: 0,0:18:37.01,0:18:39.81,Main,,0000,0000,0000,,.كنت قلقة من أن يتحامل بوروتو على نفسه
Dialogue: 0,0:18:40.21,0:18:41.31,Main,,0000,0000,0000,,يتحامل على نفسه؟
Dialogue: 0,0:18:41.82,0:18:42.82,Main,,0000,0000,0000,,...أجل
Dialogue: 0,0:18:43.25,0:18:45.72,Main,,0000,0000,0000,,.إنّه الشّعور الّذي يساورني
Dialogue: 0,0:18:49.86,0:18:54.53,Main,,0000,0000,0000,,تراقبين بوروتو عن كثب حقًّا، أليس كذلك يا ممثّلة الفصل؟
Dialogue: 0,0:18:58.57,0:19:00.50,Main,,0000,0000,0000,,!هـ-هذا غير صحيح
Dialogue: 0,0:19:02.14,0:19:03.77,Main,,0000,0000,0000,,.أنت هنا إذًا يا سارادا
Dialogue: 0,0:19:04.64,0:19:05.64,Main,,0000,0000,0000,,!ميتسكي
Dialogue: 0,0:19:05.71,0:19:06.71,Main,,0000,0000,0000,,،للأمانة
Dialogue: 0,0:19:07.34,0:19:08.81,Main,,0000,0000,0000,,.أخبرني شيكامارو-سان بشيء سابقًا
Dialogue: 0,0:19:13.18,0:19:15.08,Main,,0000,0000,0000,,!أحسنت! كان ذلك رائعًا
Dialogue: 0,0:19:15.58,0:19:16.58,Main,,0000,0000,0000,,!شكرًا
Dialogue: 0,0:19:20.55,0:19:22.59,Main,,0000,0000,0000,,ماذا تفعلان هنا؟
Dialogue: 0,0:19:22.92,0:19:25.76,Main,,0000,0000,0000,,!لا تسألني ذلك، سحقًا
Dialogue: 0,0:19:27.59,0:19:30.73,Main,,0000,0000,0000,,!مُنعَ الفريق السّابع من أخذ المهامّ في الوقت الرّاهن
Dialogue: 0,0:19:37.60,0:19:40.67,Main,,0000,0000,0000,,نحن ممنوعون من أخذ المهامّ إلى أن أجد طريقة للتّعامل مع الوتد؟
Dialogue: 0,0:19:41.51,0:19:43.48,Main,,0000,0000,0000,,.شيكامارو-سان يبالغ
Dialogue: 0,0:19:44.01,0:19:46.01,Main,,0000,0000,0000,,يبالغ؟
Dialogue: 0,0:19:46.35,0:19:48.75,Main,,0000,0000,0000,,هل تعي مدى خطورة الأمر؟
Dialogue: 0,0:19:49.05,0:19:52.75,Main,,0000,0000,0000,,قد يحدث شيء لذلك الوتد في أيّة لحظة، صحيح؟
Dialogue: 0,0:19:53.55,0:19:56.62,Main,,0000,0000,0000,,،إن رآه أحدهم يخرج عن السّيطرة أثناء مهمّة
Dialogue: 0,0:19:56.72,0:19:58.23,Main,,0000,0000,0000,,.ستدخل القرية في حالة هلع
Dialogue: 0,0:19:58.66,0:20:01.06,Main,,0000,0000,0000,,...قد يكون ذلك صحيحًا، ولكن
Dialogue: 0,0:20:01.60,0:20:05.30,Main,,0000,0000,0000,,.صدقًا، هذا خطؤك لأنّك انجرفت وراء حماسك وظهرت في التّلفاز
Dialogue: 0,0:20:05.77,0:20:07.23,Main,,0000,0000,0000,,أما كان يجب أن أفعل ذلك؟
Dialogue: 0,0:20:07.67,0:20:10.17,Main,,0000,0000,0000,,.يمكن أن تنقلب أحاسيس النّاس في لحظة
Dialogue: 0,0:20:10.80,0:20:11.97,Main,,0000,0000,0000,,،كلّما كان البطل عظيمًا
Dialogue: 0,0:20:12.04,0:20:13.64,Main,,0000,0000,0000,,.كان الصّراخ عندما تسقط
Dialogue: 0,0:20:14.14,0:20:15.51,Main,,0000,0000,0000,,...فهمت
Dialogue: 0,0:20:15.68,0:20:18.51,Main,,0000,0000,0000,,من الصّعب أن تكون ذا شعبيّة، أليس كذلك؟
Dialogue: 0,0:20:18.58,0:20:20.65,Main,,0000,0000,0000,,—اسمع، إنّك تتصرّف بصفاقة
Dialogue: 0,0:20:20.71,0:20:22.58,Main,,0000,0000,0000,,،آسف يا سارادا وميتسكي
Dialogue: 0,0:20:22.68,0:20:24.68,Main,,0000,0000,0000,,.لأنّني ورطّتكما في وضعي
Dialogue: 0,0:20:24.99,0:20:25.99,Main,,0000,0000,0000,,ماذا؟
Dialogue: 0,0:20:29.42,0:20:30.92,Main,,0000,0000,0000,,...فـ-في الواقع
Dialogue: 0,0:20:31.02,0:20:34.76,Main,,0000,0000,0000,,.لا يوجد ما تستطيع فعله بشأن الوتد على أيّ حال
Dialogue: 0,0:20:35.56,0:20:38.27,Main,,0000,0000,0000,,.نحن الثّلاثة نشكّل الفريق السّابع في النّهاية
Dialogue: 0,0:20:40.67,0:20:42.74,Main,,0000,0000,0000,,.سأعوّض لكما يومًا ما يا رفاق
Dialogue: 0,0:20:43.24,0:20:44.80,Main,,0000,0000,0000,,...حـ-حسنًا
Dialogue: 0,0:20:45.61,0:20:47.54,Main,,0000,0000,0000,,على أيّ حال، هل أنت بخير؟
Dialogue: 0,0:20:48.34,0:20:49.68,Main,,0000,0000,0000,,ماذا تقصدين؟
Dialogue: 0,0:20:50.08,0:20:51.14,Main,,0000,0000,0000,,!أراكما لاحقًا
Dialogue: 0,0:20:51.86,0:20:53.58,Main,,0000,0000,0000,,!مهلًا
Dialogue: 0,0:20:59.29,0:21:03.29,Main,,0000,0000,0000,,.ومجدّدًا، تكلّمتُ أكثر من اللّازم
Dialogue: 0,0:21:04.76,0:21:06.93,Main,,0000,0000,0000,,!لكن لا يمكنني أن أتخبّط في الشّفقة على الذّات
Dialogue: 0,0:21:07.29,0:21:10.73,Main,,0000,0000,0000,,!بل عليّ أن أساعد السّيّد الصّغير على التّعامل مع الوتد
Dialogue: 0,0:21:12.87,0:21:13.87,Main,,0000,0000,0000,,ما هذا؟
Dialogue: 0,0:21:15.60,0:21:16.60,Main,,0000,0000,0000,,ما الخطب؟
Dialogue: 0,0:21:18.47,0:21:20.21,Main,,0000,0000,0000,,.آسف، ما كان باليد حيلة
Dialogue: 0,0:21:20.67,0:21:22.71,Main,,0000,0000,0000,,هل أنت قلقة بشأن السّيّد الصّغير؟
Dialogue: 0,0:21:24.04,0:21:25.48,Main,,0000,0000,0000,,...حالة بوروتو
Dialogue: 0,0:21:25.65,0:21:26.65,Main,,0000,0000,0000,,.ما باليد حيلة
Dialogue: 0,0:21:27.48,0:21:29.35,Main,,0000,0000,0000,,!صحيح، ما رأيك أن تعدّي كوبًا من القهوة؟
Dialogue: 0,0:21:29.75,0:21:31.42,Main,,0000,0000,0000,,!لديّ بنّ جيّد
Dialogue: 0,0:21:33.79,0:21:35.12,Main,,0000,0000,0000,,...لمَ أنا
Dialogue: 0,0:21:36.12,0:21:39.66,Main,,0000,0000,0000,,قلقة جدًّا على بوروتو؟
Dialogue: 0,0:23:26.96,0:23:33.23,Main,,0000,0000,0000,,ناروتو، هل ستستطيع الإطاحة بابنك؟
Dialogue: 0,0:23:33.46,0:23:36.93,Main,,0000,0000,0000,,.سأفعل ما يجب فعله إن اضطرّ الأمر
Dialogue: 0,0:23:37.17,0:23:39.07,Main,,0000,0000,0000,,.لا أظنّ أنّك تفهم تمامًا
Dialogue: 0,0:23:39.27,0:23:42.11,Main,,0000,0000,0000,,.أقصد أنّه سيفوت الأوان فور أن يحدث شيء
Dialogue: 0,0:23:42.71,0:23:45.84,Main,,0000,0000,0000,,:في الحلقة القادمة
Dialogue: 0,0:23:46.20,0:23:54.00,nxt ep title,,0000,0000,0000,,{\fs36\blur2\fad(300,000)\}الوقت المتبقّي
Dialogue: 0,0:23:46.38,0:23:47.55,Main - top,,0000,0000,0000,,"الوقت المتبقّي"
Dialogue: 0,0:23:48.21,0:23:51.68,Main - top,,0000,0000,0000,,هل تفكّر في تدابير احترازيّة قبل حدوث أيّ شيء؟
