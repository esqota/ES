Dialogue: 0,0:01:34.68,0:01:39.11,ep title,,0000,0000,0000,,{\fad(300,200)}{\i1}!المهمة المؤتمنة: حماية الإيتشيبي{\i0}
Dialogue: 0,0:01:46.91,0:01:48.48,Main,,0000,0000,0000,,!—أيها الـ
Dialogue: 0,0:02:01.55,0:02:02.41,Main,,0000,0000,0000,,!أفلتني
Dialogue: 0,0:02:02.58,0:02:04.15,Main,,0000,0000,0000,,تراه، أليس كذلك؟
Dialogue: 0,0:02:04.68,0:02:07.25,Main,,0000,0000,0000,,لستَ ندًّا لأوتسوتسكي
Dialogue: 0,0:02:07.45,0:02:10.15,Main,,0000,0000,0000,,!عجبًا، أنت تثق بنفسك كثيرًا لتشيح بنظرك
Dialogue: 0,0:02:23.78,0:02:24.48,Main,,0000,0000,0000,,!أبي
Dialogue: 0,0:02:25.58,0:02:26.61,Main,,0000,0000,0000,,!شينكي
Dialogue: 0,0:02:26.85,0:02:28.68,Main,,0000,0000,0000,,!أخبرتك أن تحمي شوكاكو
Dialogue: 0,0:02:28.91,0:02:29.65,Main,,0000,0000,0000,,!—لكن
Dialogue: 0,0:03:09.85,0:03:12.91,Main,,0000,0000,0000,,!عجبًا! لقد ظهر لوحده
Dialogue: 0,0:03:57.15,0:03:58.95,Main,,0000,0000,0000,,!رائع
Dialogue: 0,0:04:06.95,0:04:08.35,Main,,0000,0000,0000,,...التشاكرا خاصتك
Dialogue: 0,0:04:09.51,0:04:11.91,Main,,0000,0000,0000,,!ستكون لي
Dialogue: 0,0:04:40.75,0:04:43.05,Main,,0000,0000,0000,,!ختم ضريح الرمال العظيمة
Dialogue: 0,0:04:47.15,0:04:48.68,Main,,0000,0000,0000,,ها قد فعلتها
Dialogue: 0,0:04:49.15,0:04:51.85,Main,,0000,0000,0000,,أظنّني يمكنني أن أجلس بهدوء وأنتظر قليلًا
Dialogue: 0,0:05:01.18,0:05:02.18,Main,,0000,0000,0000,,!أبي
Dialogue: 0,0:05:10.65,0:05:11.35,Main,,0000,0000,0000,,!غارا
Dialogue: 0,0:05:11.58,0:05:12.58,Main,,0000,0000,0000,,!الخامس -\N!الخامس -
Dialogue: 0,0:05:19.28,0:05:20.68,Main,,0000,0000,0000,,!ما الذي يجري؟
Dialogue: 0,0:05:21.31,0:05:23.25,Main,,0000,0000,0000,,بوروتو، ماذا تفعل هنا؟
Dialogue: 0,0:05:23.31,0:05:26.48,Main,,0000,0000,0000,,!أخبرني، ماذا حدث لساسكي؟
Dialogue: 0,0:05:27.51,0:05:31.38,Main,,0000,0000,0000,,يبدو أنّ ساسكي قد رُمي به إلى بعدٍ آخر
Dialogue: 0,0:05:32.68,0:05:37.08,Main,,0000,0000,0000,,لكن بمعرفتي له، سيرجع لوحده
Dialogue: 0,0:05:38.48,0:05:40.28,Main,,0000,0000,0000,,أبي، لا يجب أن ترهق نفسك
Dialogue: 0,0:05:41.15,0:05:45.58,Main,,0000,0000,0000,,أبلغنا ساسكي أنّ أوتسوتسكي كان يبحث عن شوكاكو
Dialogue: 0,0:05:47.11,0:05:49.88,Main,,0000,0000,0000,,...اجتمعنا هنا لحماية شوكاكو، لكن
Dialogue: 0,0:05:51.08,0:05:54.05,Main,,0000,0000,0000,,لم نتوقع أن يظهر أوتسوتسكي باكرًا هكذا
Dialogue: 0,0:05:55.01,0:05:56.35,Main,,0000,0000,0000,,هل هزمتموه؟
Dialogue: 0,0:05:57.45,0:05:58.51,Main,,0000,0000,0000,,ليس بعد
Dialogue: 0,0:05:59.31,0:06:02.91,Main,,0000,0000,0000,,ختم ضريح الرمال العظيمة لن يكبحه كليًّا
Dialogue: 0,0:06:04.21,0:06:06.35,Main,,0000,0000,0000,,سيُحيى من جديد مع الوقت
Dialogue: 0,0:06:07.35,0:06:10.91,Main,,0000,0000,0000,,لكن قبل ذلك، يجب أن ننقل شوكاكو إلى مكان آمن
Dialogue: 0,0:06:12.78,0:06:14.21,Main,,0000,0000,0000,,شينكي، أعطني ذلك
Dialogue: 0,0:06:19.01,0:06:20.05,Main,,0000,0000,0000,,ما ذلك؟
Dialogue: 0,0:06:20.35,0:06:21.61,Main,,0000,0000,0000,,اصمت وشاهد
Dialogue: 0,0:06:23.11,0:06:25.55,Main,,0000,0000,0000,,!تبدو مغلوبًا كثيرًا
Dialogue: 0,0:06:25.78,0:06:27.38,Main,,0000,0000,0000,,ليس بالشيء الجلل
Dialogue: 0,0:06:29.58,0:06:31.28,Main,,0000,0000,0000,,هل ستفعل ما أطلب؟
Dialogue: 0,0:06:32.58,0:06:33.85,Main,,0000,0000,0000,,!لا شكرًا
Dialogue: 0,0:06:36.08,0:06:38.91,Main,,0000,0000,0000,,أوتسوتسكي قادر على استشعار التشاكرا خاصتك
Dialogue: 0,0:06:39.58,0:06:40.75,Main,,0000,0000,0000,,،لأجل منع ذلك
Dialogue: 0,0:06:40.81,0:06:42.71,Main,,0000,0000,0000,,لا نملك خيارًا عدا استخدام غلاية الشاي
Dialogue: 0,0:06:44.08,0:06:46.88,Main,,0000,0000,0000,,أرفض الدخول في ذلك الشيء
Dialogue: 0,0:06:47.31,0:06:48.71,Main,,0000,0000,0000,,أعدك
Dialogue: 0,0:06:50.68,0:06:54.78,Main,,0000,0000,0000,,بشرفي، سأحميك من أوتسوتسكي
Dialogue: 0,0:06:55.98,0:06:58.85,Main,,0000,0000,0000,,هل تنوي تأدية تقنية الختم في حالتك هذه؟
Dialogue: 0,0:06:59.45,0:07:00.38,Main,,0000,0000,0000,,ستموت
Dialogue: 0,0:07:01.15,0:07:04.85,Main,,0000,0000,0000,,إنها تضحية سهلة في سبيل حمايتك
Dialogue: 0,0:07:15.41,0:07:18.71,Main,,0000,0000,0000,,لن أبكي عليك إن متّ
Dialogue: 0,0:07:19.55,0:07:22.28,Main,,0000,0000,0000,,!لكن لا يمكنني أن أدعك تعود كشبح وتطاردني
Dialogue: 0,0:07:23.28,0:07:25.61,Main,,0000,0000,0000,,لذا هذه المرّة، سأدخل بإرادتي
Dialogue: 0,0:07:39.85,0:07:41.08,Main,,0000,0000,0000,,أنا مدين لك
Dialogue: 0,0:07:44.81,0:07:46.38,Main,,0000,0000,0000,,{\an5}ختم
Dialogue: 0,0:07:49.18,0:07:50.05,Main,,0000,0000,0000,,كانكورو
Dialogue: 0,0:07:50.75,0:07:53.28,Main,,0000,0000,0000,,هلّا تولّيت مهمّة متعبة؟
Dialogue: 0,0:07:53.68,0:07:54.35,Main,,0000,0000,0000,,ما هي؟
Dialogue: 0,0:07:55.38,0:07:57.48,Main,,0000,0000,0000,,أريد منك أن تأخذ شوكاكو إلى قرية الورق
Dialogue: 0,0:07:58.45,0:08:00.55,Main,,0000,0000,0000,,إلى قرية الورق؟ إذًا—؟
Dialogue: 0,0:08:00.95,0:08:01.65,Main,,0000,0000,0000,,أجل
Dialogue: 0,0:08:01.71,0:08:02.88,Main,,0000,0000,0000,,إلى ناروتو
Dialogue: 0,0:08:03.31,0:08:04.78,Main,,0000,0000,0000,,إنّه الموقع الوحيد في هذه المرحلة
Dialogue: 0,0:08:05.38,0:08:06.91,Main,,0000,0000,0000,,سأستدعي التعزيزات الفورية من القرية
Dialogue: 0,0:08:06.98,0:08:09.05,Main,,0000,0000,0000,,سيستغرق ذلك الكثير من الوقت
Dialogue: 0,0:08:09.61,0:08:12.18,Main,,0000,0000,0000,,ضريح الرمال العظيمة لن تصمد طويلًا على أوتسوتسكي
Dialogue: 0,0:08:13.28,0:08:14.61,Main,,0000,0000,0000,,خذه إلى هناك فورًا
Dialogue: 0,0:08:15.08,0:08:18.05,Main,,0000,0000,0000,,بسرعتك، ستصل إلى هناك في غضون ثلاثة أيام
Dialogue: 0,0:08:19.35,0:08:21.45,Main,,0000,0000,0000,,أصبحت الأمور مزعجة بحق، صحيح؟
Dialogue: 0,0:08:23.25,0:08:24.98,Main,,0000,0000,0000,,،بالحديث عن الطلبات المزعجة
Dialogue: 0,0:08:25.05,0:08:26.25,Main,,0000,0000,0000,,أملك طلبًا آخر
Dialogue: 0,0:08:27.75,0:08:28.41,Main,,0000,0000,0000,,
Dialogue: 0,0:08:34.78,0:08:36.61,Main,,0000,0000,0000,,ثلاثتنا سنأخذه؟
Dialogue: 0,0:08:37.01,0:08:38.75,Main,,0000,0000,0000,,،باعتبار العمل الجماعي
Dialogue: 0,0:08:38.81,0:08:41.25,Main,,0000,0000,0000,,من الأفضل إن قام أشخاص من قرية الرمل فقط بأخذه
Dialogue: 0,0:08:41.91,0:08:45.28,Main,,0000,0000,0000,,نحتاج معرفة بوروتو بتضاريس قرية الورق
Dialogue: 0,0:08:45.75,0:08:46.45,Main,,0000,0000,0000,,!—لكن
Dialogue: 0,0:08:48.81,0:08:50.91,Main,,0000,0000,0000,,هل يمكنني الاعتماد عليك يا شينكي؟
Dialogue: 0,0:08:55.65,0:08:58.98,Main,,0000,0000,0000,,يودو وأرايا سيرافقان غارا إلى قريتنا
Dialogue: 0,0:08:59.55,0:09:00.58,Main,,0000,0000,0000,,هذا أمر
Dialogue: 0,0:09:00.81,0:09:01.68,Main,,0000,0000,0000,,حاضر -\Nحاضر -
Dialogue: 0,0:09:02.58,0:09:04.15,Main,,0000,0000,0000,,هل هناك اعتراض يا شينكي؟
Dialogue: 0,0:09:06.98,0:09:08.25,Main,,0000,0000,0000,,!سأفعلها
Dialogue: 0,0:09:08.75,0:09:12.51,Main,,0000,0000,0000,,بوروتو، أيمكننا الاعتماد عليك لإرشادنا فور دخولنا أرض النار؟
Dialogue: 0,0:09:12.85,0:09:13.51,Main,,0000,0000,0000,,أكيد
Dialogue: 0,0:09:13.61,0:09:14.98,Main,,0000,0000,0000,,أيمكنك فعل هذا؟
Dialogue: 0,0:09:15.28,0:09:16.11,Main,,0000,0000,0000,,!ماذا قلت؟
Dialogue: 0,0:09:16.61,0:09:19.88,Main,,0000,0000,0000,,شينكي، أنتم الثلاثة الوحيدون الذين أستطيع ائتمانهم بهذا
Dialogue: 0,0:09:20.15,0:09:21.11,Main,,0000,0000,0000,,!—لكن
Dialogue: 0,0:09:21.51,0:09:24.95,Main,,0000,0000,0000,,لدى بوروتو شيء لا تملكه في الوقت الراهن
Dialogue: 0,0:09:26.31,0:09:27.78,Main,,0000,0000,0000,,ماذا يفترض بهذا أن يعني؟
Dialogue: 0,0:09:28.88,0:09:31.21,Main,,0000,0000,0000,,ستعرف ما هو على الأغلب
Dialogue: 0,0:09:34.98,0:09:35.81,Main,,0000,0000,0000,,حسنًا
Dialogue: 0,0:09:37.01,0:09:38.95,Main,,0000,0000,0000,,إنه ثقيل للغاية
Dialogue: 0,0:09:39.31,0:09:40.48,Main,,0000,0000,0000,,من قال أنّك تستطيع لمسها؟
Dialogue: 0,0:09:40.81,0:09:42.88,Main,,0000,0000,0000,,!ليس وكأنّها ملكك
Dialogue: 0,0:09:43.18,0:09:45.15,Main,,0000,0000,0000,,!كن ألطف
Dialogue: 0,0:09:50.95,0:09:52.05,Main,,0000,0000,0000,,
Dialogue: 0,0:09:52.25,0:09:53.41,Main,,0000,0000,0000,,!اخرس
Dialogue: 0,0:09:53.78,0:09:54.88,Main,,0000,0000,0000,,!ها أنا ذا
Dialogue: 0,0:10:00.28,0:10:01.98,Main,,0000,0000,0000,,لمَ وضعت هذا الشيء الغريب علي؟
Dialogue: 0,0:10:02.31,0:10:04.28,Main,,0000,0000,0000,,لأجل حمايتك
Dialogue: 0,0:10:04.75,0:10:06.91,Main,,0000,0000,0000,,وماذا سنفعل في حالة طوارئ؟
Dialogue: 0,0:10:07.11,0:10:08.98,Main,,0000,0000,0000,,!يستحيل أن أقاتل هكذا
Dialogue: 0,0:10:09.38,0:10:10.48,Main,,0000,0000,0000,,ستكون بخير
Dialogue: 0,0:10:10.55,0:10:11.95,Main,,0000,0000,0000,,ما دام كانكورو وذلكما الاثنين معك
Dialogue: 0,0:10:13.58,0:10:14.28,Main,,0000,0000,0000,,شوكاكو-ساما
Dialogue: 0,0:10:14.35,0:10:16.61,Main,,0000,0000,0000,,تعال إلى هنا رجاءً. سوف أحملك
Dialogue: 0,0:10:16.85,0:10:17.78,Main,,0000,0000,0000,,حسنًا
Dialogue: 0,0:10:18.21,0:10:18.98,Main,,0000,0000,0000,,!ها أنا ذا
Dialogue: 0,0:10:19.21,0:10:20.08,Main,,0000,0000,0000,,!المعذرة
Dialogue: 0,0:10:21.71,0:10:23.78,Main,,0000,0000,0000,,!أنت حادّ المزاج كثيرًا
Dialogue: 0,0:10:27.58,0:10:29.88,Main,,0000,0000,0000,,ما باليد حيلة. بوروتو، ستحمله
Dialogue: 0,0:10:30.45,0:10:32.25,Main,,0000,0000,0000,,ابقَ ثابتًا، مفهوم؟
Dialogue: 0,0:10:32.55,0:10:35.15,Main,,0000,0000,0000,,أنت، من تحسبني بالضبط؟
Dialogue: 0,0:10:36.15,0:10:38.88,Main,,0000,0000,0000,,يودو، أرايا، أدع أبي بين يديكما
Dialogue: 0,0:10:39.35,0:10:40.51,Main,,0000,0000,0000,,دع الأمر لنا
Dialogue: 0,0:10:40.71,0:10:43.05,Main,,0000,0000,0000,,!سوف نحميه بحياتنا
Dialogue: 0,0:10:46.31,0:10:47.18,Main,,0000,0000,0000,,!هيا بنا
Dialogue: 0,0:10:50.48,0:10:52.48,Main,,0000,0000,0000,,!فقط لا تتخلّف في الخلف يا أوزوماكي بوروتو
Dialogue: 0,0:10:52.55,0:10:55.08,Main,,0000,0000,0000,,!كفّ عن مناداتي باسمي الكامل طوال الوقت
Dialogue: 0,0:10:55.21,0:10:57.21,Main,,0000,0000,0000,,!أيمكنكما أن تحاولا الانسجام؟
Dialogue: 0,0:10:57.28,0:10:59.15,Main,,0000,0000,0000,,!هو من يواصل التعليق بشكلٍ ساخر
Dialogue: 0,0:11:05.41,0:11:06.35,Main,,0000,0000,0000,,!هل أنت بخير؟
Dialogue: 0,0:11:24.25,0:11:25.89,Main,,0000,0000,0000,,!أخبرتك أن تواكب
Dialogue: 0,0:11:26.22,0:11:28.69,Main,,0000,0000,0000,,!لا نملك الوقت للتنسيق مع وتيرتك
Dialogue: 0,0:11:29.35,0:11:30.22,Main,,0000,0000,0000,,!سحقًا
Dialogue: 0,0:11:30.29,0:11:34.05,Main,,0000,0000,0000,,،لستُ معتادًا على الركض على الرّمل\N!كما أنّني أحمل التانوكي، مفهوم؟
Dialogue: 0,0:11:34.19,0:11:35.62,Main,,0000,0000,0000,,!ماذا دعوتني للتّو؟
Dialogue: 0,0:11:38.52,0:11:40.85,Main,,0000,0000,0000,,أنت، هل أنت واثق أنّ هذا الاتّجاه الصّحيح؟
Dialogue: 0,0:11:41.32,0:11:41.92,Main,,0000,0000,0000,,أجل
Dialogue: 0,0:11:42.35,0:11:44.79,Main,,0000,0000,0000,,لكنّ قرية الورق من ذاك الاتّجاه
Dialogue: 0,0:11:45.55,0:11:48.09,Main,,0000,0000,0000,,فقط اخرس واحمل شوكاكو-ساما
Dialogue: 0,0:12:02.22,0:12:03.05,Main,,0000,0000,0000,,هل تعبت؟
Dialogue: 0,0:12:04.19,0:12:05.89,Main,,0000,0000,0000,,!يمكنني التدبّر
Dialogue: 0,0:12:07.89,0:12:08.95,Main,,0000,0000,0000,,لا أراه
Dialogue: 0,0:12:09.59,0:12:10.32,Main,,0000,0000,0000,,فهمت
Dialogue: 0,0:12:10.65,0:12:12.25,Main,,0000,0000,0000,,أين نحن على أي حال؟
Dialogue: 0,0:12:12.59,0:12:14.12,Main,,0000,0000,0000,,في محطّة طاقة ريحية
Dialogue: 0,0:12:15.15,0:12:17.99,Main,,0000,0000,0000,,،كما ترى، قاموا ببنائها لكنّها لم تنجح
Dialogue: 0,0:12:18.29,0:12:19.89,Main,,0000,0000,0000,,لذا تمّ هجرها
Dialogue: 0,0:12:20.62,0:12:23.85,Main,,0000,0000,0000,,...خلتُ أنّنا سنجد معدّات اتّصال إن أتينا إلى هنا
Dialogue: 0,0:12:24.22,0:12:25.85,Main,,0000,0000,0000,,لكنّي كنتُ مخطئًا
Dialogue: 0,0:12:26.42,0:12:28.92,Main,,0000,0000,0000,,!يا ليتك فسّرت الأمر لي من البداية
Dialogue: 0,0:12:29.22,0:12:30.35,Main,,0000,0000,0000,,ألم أخبرك؟
Dialogue: 0,0:12:32.19,0:12:34.09,Main,,0000,0000,0000,,عمّي، ألق نظرة رجاءً
Dialogue: 0,0:12:36.72,0:12:37.59,Main,,0000,0000,0000,,خريطة؟
Dialogue: 0,0:12:38.29,0:12:40.75,Main,,0000,0000,0000,,لا توجد أيّ منشآت أخرى في هذه المنطقة
Dialogue: 0,0:12:40.82,0:12:42.72,Main,,0000,0000,0000,,حيث نستطيع الاتصال بقرية الورق
Dialogue: 0,0:12:43.39,0:12:46.55,Main,,0000,0000,0000,,...أردتُ أن أتواصل مع قرية الورق مسبقًا، لكن
Dialogue: 0,0:12:47.69,0:12:49.95,Main,,0000,0000,0000,,أظنّنا لا نملك أيّ خيار عدا الاتّجاه إلى قرية الورق مباشرةً
Dialogue: 0,0:12:50.49,0:12:53.89,Main,,0000,0000,0000,,في تلك الحالة، يمكنني التّفكير في ثلاثة طرق
Dialogue: 0,0:13:07.39,0:13:09.65,Main,,0000,0000,0000,,!سحقًا، أشعر بالعطش
Dialogue: 0,0:13:10.02,0:13:11.09,Main,,0000,0000,0000,,!بوروتو
Dialogue: 0,0:13:11.19,0:13:12.32,Main,,0000,0000,0000,,ماذا؟
Dialogue: 0,0:13:12.49,0:13:13.75,Main,,0000,0000,0000,,أحتاج التبوّل
Dialogue: 0,0:13:15.39,0:13:16.42,Main,,0000,0000,0000,,
Dialogue: 0,0:13:17.12,0:13:19.82,Main,,0000,0000,0000,,!هل البيجو يتبوّلون؟
Dialogue: 0,0:13:19.92,0:13:22.35,Main,,0000,0000,0000,,بالطبع! ألا تصدّقني؟
Dialogue: 0,0:13:22.52,0:13:25.02,Main,,0000,0000,0000,,!—كلّا، أصدّقك، لكن
Dialogue: 0,0:13:25.19,0:13:27.65,Main,,0000,0000,0000,,.فات الأوان! لا أستطيع الاحتمال\Nسأذهب
Dialogue: 0,0:13:28.32,0:13:29.75,Main,,0000,0000,0000,,!حسنًا، حسنًا
Dialogue: 0,0:13:31.92,0:13:34.89,Main,,0000,0000,0000,,!ها أنا ذا
Dialogue: 0,0:13:36.29,0:13:37.32,Main,,0000,0000,0000,,ألن تتبول؟
Dialogue: 0,0:13:37.39,0:13:38.52,Main,,0000,0000,0000,,!صحيح
Dialogue: 0,0:13:39.32,0:13:41.55,Main,,0000,0000,0000,,أمهلني لحظة فحسب
Dialogue: 0,0:13:44.35,0:13:45.69,Main,,0000,0000,0000,,إلى أين أنت ذاهب؟
Dialogue: 0,0:13:46.05,0:13:48.35,Main,,0000,0000,0000,,فقط افعلها هناك وغطّه ببعض الرمل
Dialogue: 0,0:13:48.55,0:13:51.02,Main,,0000,0000,0000,,!لستُ قطًّا
Dialogue: 0,0:13:56.42,0:13:57.62,Main,,0000,0000,0000,,لا تنظر، مفهوم؟
Dialogue: 0,0:13:57.69,0:13:59.25,Main,,0000,0000,0000,,!أسرع واقض حاجتك
Dialogue: 0,0:14:01.02,0:14:03.92,Main,,0000,0000,0000,,سحقًا. أهو بيجو حقًّا؟
Dialogue: 0,0:14:05.59,0:14:07.45,Main,,0000,0000,0000,,حسنًا، تمّ إعداد الطريق
Dialogue: 0,0:14:08.39,0:14:09.49,Main,,0000,0000,0000,,أحضر بوروتو
Dialogue: 0,0:14:12.69,0:14:14.12,Main,,0000,0000,0000,,الجوّ ساخن حقًّا
Dialogue: 0,0:14:15.42,0:14:16.59,Main,,0000,0000,0000,,هيا بنا
Dialogue: 0,0:14:17.35,0:14:19.72,Main,,0000,0000,0000,,...انتظر. إنّ شوكاكو
Dialogue: 0,0:14:19.92,0:14:20.72,Main,,0000,0000,0000,,!هل هنالك مشكلة؟
Dialogue: 0,0:14:20.92,0:14:23.69,Main,,0000,0000,0000,,...كلّا، قال أنّه بحاجة للتبول، لذا
Dialogue: 0,0:14:24.15,0:14:25.92,Main,,0000,0000,0000,,!البيجو ليسو بحاجة لفعل ذلك
Dialogue: 0,0:14:26.22,0:14:26.82,Main,,0000,0000,0000,,
Dialogue: 0,0:14:28.85,0:14:31.19,Main,,0000,0000,0000,,!أنا لوحدي أخيرًا
Dialogue: 0,0:14:31.25,0:14:33.42,Main,,0000,0000,0000,,!يمكنني التمدّد والاسترخاء الآن
Dialogue: 0,0:14:34.02,0:14:35.85,Main,,0000,0000,0000,,!شوكاكو-ساما، كنّا نبحث عنك
Dialogue: 0,0:14:36.42,0:14:38.32,Main,,0000,0000,0000,,!يا لجرأتك! بأن تخدعني هكذا
Dialogue: 0,0:14:38.62,0:14:41.09,Main,,0000,0000,0000,,نلت مني. كان ذلك سريعًا للغاية
Dialogue: 0,0:14:41.52,0:14:43.52,Main,,0000,0000,0000,,لا يمكننا تركك تتجول لوحدك
Dialogue: 0,0:14:44.05,0:14:46.75,Main,,0000,0000,0000,,!هل تقصد أنّني لا أستطيع أخذ استراحة؟
Dialogue: 0,0:14:46.92,0:14:48.15,Main,,0000,0000,0000,,!في هذا الوقت، أجل
Dialogue: 0,0:14:48.22,0:14:50.02,Main,,0000,0000,0000,,يا للإزعاج
Dialogue: 0,0:14:50.09,0:14:51.39,Main,,0000,0000,0000,,!هيا، فلنذهب
Dialogue: 0,0:14:59.22,0:15:00.29,Main,,0000,0000,0000,,ماذا تفعل؟
Dialogue: 0,0:15:01.02,0:15:03.02,Main,,0000,0000,0000,,كان خطأً أن ندعه لك
Dialogue: 0,0:15:03.89,0:15:05.32,Main,,0000,0000,0000,,سأحمل شوكاكو-ساما
Dialogue: 0,0:15:06.12,0:15:07.69,Main,,0000,0000,0000,,!ذاك ليس الاتفاق
Dialogue: 0,0:15:07.89,0:15:10.75,Main,,0000,0000,0000,,!لقد أخفقت، لا تتصرّف بصبيانية
Dialogue: 0,0:15:10.95,0:15:12.92,Main,,0000,0000,0000,,أشعر بالأسى لأنّي تركته يغيب عن ناظري
Dialogue: 0,0:15:13.05,0:15:14.42,Main,,0000,0000,0000,,!لكن من القاسي أن تجاهله فحسب
Dialogue: 0,0:15:14.65,0:15:16.15,Main,,0000,0000,0000,,!هذا ما قصدت بالصبيانية
Dialogue: 0,0:15:16.52,0:15:17.95,Main,,0000,0000,0000,,!نحن في مهمة
Dialogue: 0,0:15:18.39,0:15:20.62,Main,,0000,0000,0000,,!التصرف بعطف سيجلب المشاكل فحسب
Dialogue: 0,0:15:20.95,0:15:22.75,Main,,0000,0000,0000,,إذًا، أيفترض بي أن أتصرّف كآلة؟
Dialogue: 0,0:15:22.89,0:15:24.65,Main,,0000,0000,0000,,!لا شكرًا
Dialogue: 0,0:15:24.72,0:15:26.92,Main,,0000,0000,0000,,!أقصد أنّك يجب أن تفكّر بعقلانية
Dialogue: 0,0:15:29.99,0:15:31.55,Main,,0000,0000,0000,,!يكفي أنتما
Dialogue: 0,0:15:33.92,0:15:36.02,Main,,0000,0000,0000,,شينكي، تأهب للمغادرة
Dialogue: 0,0:15:40.52,0:15:42.32,Main,,0000,0000,0000,,وأنت فكّر بشأن خطئك
Dialogue: 0,0:15:42.95,0:15:44.59,Main,,0000,0000,0000,,!أعلم
Dialogue: 0,0:15:45.59,0:15:46.45,Main,,0000,0000,0000,,...لكن
Dialogue: 0,0:15:47.69,0:15:49.79,Main,,0000,0000,0000,,!لا أحبّ الطريقة التي يحدّثني بها
Dialogue: 0,0:15:50.12,0:15:52.52,Main,,0000,0000,0000,,هل تنصت فقط عندما يتحدّث النّاس إليك بلطف؟
Dialogue: 0,0:15:53.52,0:15:56.45,Main,,0000,0000,0000,,هذه صبيانية بالتأكيد، أليس كذلك؟
Dialogue: 0,0:15:59.69,0:16:02.09,Main,,0000,0000,0000,,لكن، ليس وكأنّني لا أفهم إحباطك
Dialogue: 0,0:16:02.59,0:16:04.32,Main,,0000,0000,0000,,شينكي متبلّد جدًّا
Dialogue: 0,0:16:04.79,0:16:05.99,Main,,0000,0000,0000,,سامحه على ذلك
Dialogue: 0,0:16:11.19,0:16:13.22,Main,,0000,0000,0000,,إنه مزعج
Dialogue: 0,0:16:16.45,0:16:18.32,Main,,0000,0000,0000,,إذًا؟ أريد أن ترتاح أكثر؟
Dialogue: 0,0:16:19.12,0:16:20.35,Main,,0000,0000,0000,,لا داعي لذلك
Dialogue: 0,0:16:20.82,0:16:22.62,Main,,0000,0000,0000,,أيضًا، لا أريد أن أخسر أمامه
Dialogue: 0,0:16:23.65,0:16:24.95,Main,,0000,0000,0000,,!هذه هي الروح المطلوبة
Dialogue: 0,0:17:07.69,0:17:08.39,Main,,0000,0000,0000,,توقفا
Dialogue: 0,0:17:13.05,0:17:14.82,Main,,0000,0000,0000,,سنخيّم هنا الليلة
Dialogue: 0,0:17:16.09,0:17:17.65,Main,,0000,0000,0000,,!أنا متعب جدًّا
Dialogue: 0,0:17:38.52,0:17:40.35,Main,,0000,0000,0000,,لا إشارة للعدوّ في الجوار
Dialogue: 0,0:17:44.99,0:17:47.62,Main,,0000,0000,0000,,سأتولّى الحراسة، نل قسطًا من النوم
Dialogue: 0,0:17:48.45,0:17:50.25,Main,,0000,0000,0000,,كلّا، سأقوم بالحراسة
Dialogue: 0,0:17:51.19,0:17:52.82,Main,,0000,0000,0000,,لذا، استرح رجاءً يا عمّي
Dialogue: 0,0:17:54.12,0:17:56.15,Main,,0000,0000,0000,,ألست متحمّسًا زيادة عن اللزوم؟
Dialogue: 0,0:17:56.72,0:17:59.95,Main,,0000,0000,0000,,...أفهم أنّك تريد إتمام المهمة التي أوكلها إليك غارا، لكن
Dialogue: 0,0:18:05.39,0:18:08.12,Main,,0000,0000,0000,,يمكنك رؤية النجوم بكلّ وضوح اللّيلة
Dialogue: 0,0:18:08.72,0:18:09.25,Main,,0000,0000,0000,,أجل
Dialogue: 0,0:18:09.75,0:18:12.65,Main,,0000,0000,0000,,بفضل ذلك، يمكننا معرفة الاتّجاه بدقّة
Dialogue: 0,0:18:13.89,0:18:15.42,Main,,0000,0000,0000,,أترى ما أقصد؟
Dialogue: 0,0:18:17.79,0:18:21.99,Main,,0000,0000,0000,,كلّ ما تراه في السّماء المرصّعة\Nبالنّجوم هو كيف تجد اتّجاهاتك
Dialogue: 0,0:18:22.82,0:18:25.85,Main,,0000,0000,0000,,أظنّ أنّ ذلك عقلانيّ تمامًا
Dialogue: 0,0:18:27.39,0:18:29.09,Main,,0000,0000,0000,,،لكن هناك أشخاص في هذا العالم
Dialogue: 0,0:18:29.15,0:18:33.52,Main,,0000,0000,0000,,ينظرون إلى هذه النجوم ويخلقون قصّة مؤثرة وعاطفية
Dialogue: 0,0:18:42.85,0:18:43.82,Main,,0000,0000,0000,,لم أفهم
Dialogue: 0,0:18:44.45,0:18:47.29,Main,,0000,0000,0000,,ما الذي يمكنني تعلّمه من بوروتو؟
Dialogue: 0,0:18:48.29,0:18:51.09,Main,,0000,0000,0000,,...غارا رجلٌ قليل الكلام، لذا
Dialogue: 0,0:18:52.35,0:18:54.99,Main,,0000,0000,0000,,لا يمكن الاستخفاف بمهارات بوروتو القتالية بلا شك
Dialogue: 0,0:18:55.62,0:18:59.05,Main,,0000,0000,0000,,لكن، باعتبار العمل الجماعي\N،للفريق المؤلف من ثلاثة أفراد
Dialogue: 0,0:18:59.15,0:19:03.65,Main,,0000,0000,0000,,ستكون نسبة نجاح المهمّة أعلى بوجود يودو وأرايا
Dialogue: 0,0:19:04.75,0:19:07.72,Main,,0000,0000,0000,,ربّما، إن فكّرت في الأمر بعقلانية
Dialogue: 0,0:19:08.59,0:19:09.79,Main,,0000,0000,0000,,وهل من طريقة أخرى؟
Dialogue: 0,0:19:10.69,0:19:12.29,Main,,0000,0000,0000,,...ستفهم مع الوقت
Dialogue: 0,0:19:13.52,0:19:18.19,Main,,0000,0000,0000,,ما كان يفكّر فيه غارا عندما أوكل إليكما هذه المهمة
Dialogue: 0,0:19:38.55,0:19:39.82,Main,,0000,0000,0000,,كانكورو-سان؟
Dialogue: 0,0:19:43.35,0:19:44.52,Main,,0000,0000,0000,,أين شينكي؟
Dialogue: 0,0:19:44.59,0:19:46.75,Main,,0000,0000,0000,,بعثته لإعادة ملء مائنا
Dialogue: 0,0:19:47.15,0:19:49.82,Main,,0000,0000,0000,,لم أعلم أنه يشرب الماء
Dialogue: 0,0:19:50.15,0:19:52.95,Main,,0000,0000,0000,,بالطبع يفعل! إنه ابن أحدهم
Dialogue: 0,0:19:53.59,0:19:55.99,Main,,0000,0000,0000,,بالنّسبة لابن أحدهم، إنه انطوائيّ جدًّا
Dialogue: 0,0:19:56.49,0:19:58.42,Main,,0000,0000,0000,,من شابه أباه فما ظلم، صحيح؟
Dialogue: 0,0:20:00.52,0:20:02.05,Main,,0000,0000,0000,,ونفس الأمر ينطبق عليك يا بوروتو
Dialogue: 0,0:20:02.32,0:20:05.12,Main,,0000,0000,0000,,!أنا وأبي مختلفان تمامًا
Dialogue: 0,0:20:06.49,0:20:08.89,Main,,0000,0000,0000,,يبدو أنّ غارا لا يفكّر كذلك
Dialogue: 0,0:20:10.85,0:20:11.65,Main,,0000,0000,0000,,!عمّي
Dialogue: 0,0:20:14.32,0:20:15.05,Main,,0000,0000,0000,,ما الأمر؟
Dialogue: 0,0:20:15.49,0:20:18.25,Main,,0000,0000,0000,,!شيءٌ ما متّجه إلى هنا
Dialogue: 0,0:20:18.39,0:20:19.35,Main,,0000,0000,0000,,ملاحِقون؟
Dialogue: 0,0:20:19.72,0:20:20.45,Main,,0000,0000,0000,,على الأرجح
Dialogue: 0,0:20:27.35,0:20:29.49,Main,,0000,0000,0000,,!سأهزمهم على طريقتهم
Dialogue: 0,0:20:29.75,0:20:30.92,Main,,0000,0000,0000,,تمهل
Dialogue: 0,0:20:31.22,0:20:33.89,Main,,0000,0000,0000,,دعا هذا لي. تقدّما أنتما الاثنان
Dialogue: 0,0:20:34.19,0:20:34.99,Main,,0000,0000,0000,,!لماذا؟
Dialogue: 0,0:20:35.19,0:20:37.62,Main,,0000,0000,0000,,!سيكون أسهل إن قاتلناهم سويًّا
Dialogue: 0,0:20:37.69,0:20:39.09,Main,,0000,0000,0000,,لا تفهم، أليس كذلك؟
Dialogue: 0,0:20:39.89,0:20:43.49,Main,,0000,0000,0000,,إنهم دمى. وأنا متخصّص في الدمى
Dialogue: 0,0:20:43.95,0:20:45.72,Main,,0000,0000,0000,,يستحيل أن أخسر، صحيح؟
Dialogue: 0,0:20:46.72,0:20:50.65,Main,,0000,0000,0000,,كما أنّ استراتيجيتنا هي إعطاء الأولوية القصوى للمهمّة
Dialogue: 0,0:20:53.95,0:20:55.42,Main,,0000,0000,0000,,عمّي على حق
Dialogue: 0,0:20:55.92,0:20:57.72,Main,,0000,0000,0000,,سنتّجه مباشرةً إلى قرية الورق
Dialogue: 0,0:20:57.92,0:20:58.79,Main,,0000,0000,0000,,!لماذا؟
Dialogue: 0,0:20:59.32,0:21:01.45,Main,,0000,0000,0000,,!لست بحاجة للقتال لوحدك يا كانكورو-سان
Dialogue: 0,0:21:03.15,0:21:03.99,Main,,0000,0000,0000,,{\an5}النمل الأسود
Dialogue: 0,0:21:07.62,0:21:10.35,Main,,0000,0000,0000,,هذا ليس الوقت المناسب لأن تمكثا هنا
Dialogue: 0,0:21:10.52,0:21:14.29,Main,,0000,0000,0000,,مهمتنا هي أن نبعد شوكاكو-ساما عن الأذى
Dialogue: 0,0:21:14.69,0:21:15.62,Main,,0000,0000,0000,,!—لكن
Dialogue: 0,0:21:15.75,0:21:16.99,Main,,0000,0000,0000,,!اذهب يا بوروتو
Dialogue: 0,0:21:17.42,0:21:20.95,Main,,0000,0000,0000,,كما أنّني سئمت من التحكيم في شجاراتكما
Dialogue: 0,0:21:24.65,0:21:27.95,Main,,0000,0000,0000,,!من الأفضل لك أن تلحق بها لاحقًا يا كانكورو-سان
Dialogue: 0,0:21:29.52,0:21:30.65,Main,,0000,0000,0000,,!لا شكّ في ذلك
Dialogue: 0,0:21:37.19,0:21:38.42,Main,,0000,0000,0000,,هذا سيئ
Dialogue: 0,0:21:40.49,0:21:42.29,Main,,0000,0000,0000,,كما هو متوقع، يبدون أقوياء
Dialogue: 0,0:21:43.92,0:21:47.15,Main,,0000,0000,0000,,...لكن بعد التباهي أمام ذلكما الاثنين
Dialogue: 0,0:21:47.42,0:21:48.09,Main,,0000,0000,0000,,{\an5}سمندر
Dialogue: 0,0:21:50.15,0:21:52.19,Main,,0000,0000,0000,,!لا يمكنني أن أخسر حقًّا
Dialogue: 0,0:23:26.11,0:23:28.77,Main,,0000,0000,0000,,هل سيكون كانكورو بخير لوحده حقًّا؟
Dialogue: 0,0:23:29.04,0:23:30.07,Main,,0000,0000,0000,,لا يجدر أن يواجه مشكلة في ذلك
Dialogue: 0,0:23:30.41,0:23:32.04,Main,,0000,0000,0000,,القيمة الحقيقية لتقنية الدمى الخاصة بعمّي
Dialogue: 0,0:23:32.11,0:23:34.84,Main,,0000,0000,0000,,تظهر عندما يواجه الكثير من الأعداء
Dialogue: 0,0:23:35.47,0:23:38.37,Main,,0000,0000,0000,,سنعترض طريقه فحسب إن كنّا هناك
Dialogue: 0,0:23:38.87,0:23:41.77,Main,,0000,0000,0000,,!اهزمهم قريبًا والحق بنا رجاءً
Dialogue: 0,0:23:42.64,0:23:45.34,Main,,0000,0000,0000,,:في الحلقة القادمة
Dialogue: 0,0:23:45.41,0:23:46.87,Main - top,,0000,0000,0000,,"!معركة الدمى"
