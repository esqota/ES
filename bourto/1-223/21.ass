Dialogue: 0,0:00:06.30,0:00:07.03,Default,,0000,0000,0000,,!وجدتها
Dialogue: 0,0:00:26.77,0:00:29.70,Default,,0000,0000,0000,,من هذه التي بجانب أبي؟
Dialogue: 0,0:00:30.90,0:00:32.23,Default,,0000,0000,0000,,صاحبة النظارات
Dialogue: 0,0:00:35.77,0:00:37.13,Default,,0000,0000,0000,,إنه صقر ساسكي
Dialogue: 0,0:00:42.83,0:00:43.73,Default,,0000,0000,0000,,!—هذا
Dialogue: 0,0:00:44.73,0:00:47.30,Default,,0000,0000,0000,,يجب أن أعرف التفاصيل منه شخصيًّا
Dialogue: 0,0:00:47.73,0:00:48.67,Default,,0000,0000,0000,,،على كل حال
Dialogue: 0,0:00:48.73,0:00:50.40,Default,,0000,0000,0000,,سأذهب وألتقي بساسكي
Dialogue: 0,0:00:52.23,0:00:53.27,hokage,,0000,0000,0000,,الهوكاغي\Nالسابع
Dialogue: 0,0:00:54.97,0:00:57.17,Default,,0000,0000,0000,,،سأترك نسخة ظلٍّ هنا في القرية
Dialogue: 0,0:00:57.23,0:00:59.40,Default,,0000,0000,0000,,وسأذهب إلى هناك شخصيًّا
Dialogue: 0,0:00:59.63,0:01:03.87,office1,,0000,0000,0000,,مكتب
Dialogue: 0,0:00:59.63,0:01:03.87,office2,,0000,0000,0000,,الهوكاغي
Dialogue: 0,0:01:13.70,0:01:14.93,Default,,0000,0000,0000,,سآخذك
Dialogue: 0,0:01:15.13,0:01:16.03,Default,,0000,0000,0000,,!ماذا؟
Dialogue: 0,0:01:16.10,0:01:18.67,Default,,0000,0000,0000,,!ماذا ستفعل بي بعد أن تختطفني؟
Dialogue: 0,0:01:25.90,0:01:26.67,Default,,0000,0000,0000,,!تشو-تشو
Dialogue: 0,0:01:28.07,0:01:29.97,Default,,0000,0000,0000,,!تقنية التوسع الجزئي
Dialogue: 0,0:01:36.40,0:01:38.00,Default,,0000,0000,0000,,لسنا... بحاجتك
Dialogue: 0,0:01:43.70,0:01:45.30,Default,,0000,0000,0000,,...أليس هذا أكثر من مجرد
Dialogue: 0,0:01:45.37,0:01:47.80,hokage,,0000,0000,0000,,الهوكاغي\Nالسابع
Dialogue: 0,0:01:46.17,0:01:47.80,Default,,0000,0000,0000,,شجار أطفال؟
Dialogue: 0,0:01:48.03,0:01:49.33,Default,,0000,0000,0000,,!السابع
Dialogue: 0,0:01:49.60,0:01:54.60,Default,,0000,0000,0000,,...أظنّ أنّ أطفال قريتي مهذّبين، لكن
Dialogue: 0,0:01:58.60,0:01:59.80,Default,,0000,0000,0000,,...الشارينغان
Dialogue: 0,0:02:02.93,0:02:05.03,Default,,0000,0000,0000,,{\i1}...بعد قليلٍ وحسب{\i0}
Dialogue: 0,0:02:05.10,0:02:06.60,Default,,0000,0000,0000,,{\i1}!سوف أقابل أبي أخيرًا{\i0}
Dialogue: 0,0:02:07.23,0:02:08.03,Default,,0000,0000,0000,,!أبي
Dialogue: 0,0:02:33.67,0:02:35.83,Default,,0000,0000,0000,,—أبي -\Nأنا مندهش لأنك وجدتني -
Dialogue: 0,0:02:39.13,0:02:40.57,Default,,0000,0000,0000,,هل أنت واحدةٌ منهم؟
Dialogue: 0,0:04:13.40,0:04:18.76,ep title,,0000,0000,0000,,{\fad(100,300)}{\i1}ساسكي وسارادا{\i0}
Dialogue: 0,0:04:16.10,0:04:17.73,top,,0000,0000,0000,,!سارادا ذهبت خلف ناروتو؟
Dialogue: 0,0:04:18.20,0:04:19.76,top,,0000,0000,0000,,وفقًا لكلام شيكامارو على الأقل
Dialogue: 0,0:04:19.83,0:04:22.16,Default,,0000,0000,0000,,أين؟ إلى أين توجهت؟
Dialogue: 0,0:04:22.50,0:04:24.76,Default,,0000,0000,0000,,من قال أنّك تستطيعين مغادرة الفراش؟
Dialogue: 0,0:04:25.36,0:04:28.13,Default,,0000,0000,0000,,أظنّها تريد فقط أن تسأل ساسكي بعض الأسئلة
Dialogue: 0,0:04:28.66,0:04:31.46,Default,,0000,0000,0000,,لقد كان بحوزتها صورة قديمة له مع شركائه السابقين
Dialogue: 0,0:04:34.83,0:04:36.40,Default,,0000,0000,0000,,...إذًا، باتت تعلم
Dialogue: 0,0:04:37.06,0:04:38.13,Default,,0000,0000,0000,,بشأن تلك الصورة
Dialogue: 0,0:04:38.73,0:04:40.26,Default,,0000,0000,0000,,من يلومها؟
Dialogue: 0,0:04:40.33,0:04:42.90,Default,,0000,0000,0000,,إنها كبيرة كفايةً لتتساءل بشأن والدها
Dialogue: 0,0:04:44.70,0:04:46.86,Default,,0000,0000,0000,,،شعرتُ أنّه لو كان ساسكي بالجوار
Dialogue: 0,0:04:47.30,0:04:49.90,Default,,0000,0000,0000,,فستتورط في الصراعات بدورها
Dialogue: 0,0:04:52.36,0:04:53.30,Default,,0000,0000,0000,,...أعني
Dialogue: 0,0:04:54.33,0:04:57.40,Default,,0000,0000,0000,,يمكن للشارينغان أن تجلب الحزن كذلك
Dialogue: 0,0:05:13.36,0:05:14.30,Default,,0000,0000,0000,,!أبي
Dialogue: 0,0:05:17.73,0:05:18.70,Default,,0000,0000,0000,,...أنت
Dialogue: 0,0:05:19.63,0:05:22.00,Default,,0000,0000,0000,,سارادا؟
Dialogue: 0,0:05:25.56,0:05:26.36,Default,,0000,0000,0000,,نعم
Dialogue: 0,0:05:32.93,0:05:34.03,Default,,0000,0000,0000,,...فهمت
Dialogue: 0,0:05:36.43,0:05:38.76,Default,,0000,0000,0000,,...عرفتُ فورًا
Dialogue: 0,0:05:39.43,0:05:40.63,Default,,0000,0000,0000,,أنك أبي
Dialogue: 0,0:05:50.26,0:05:51.83,Default,,0000,0000,0000,,!ها أنت ذا
Dialogue: 0,0:05:51.90,0:05:54.93,Default,,0000,0000,0000,,سارادا، لمَ غادرت من نفسكِ هكذا؟
Dialogue: 0,0:05:55.13,0:05:55.76,Default,,0000,0000,0000,,
Dialogue: 0,0:05:56.73,0:05:58.53,Default,,0000,0000,0000,,!إنه وسيمٌ للغاية
Dialogue: 0,0:05:59.76,0:06:02.33,Default,,0000,0000,0000,,آسف، لقد تأخرت قليلًا يا ساسكي
Dialogue: 0,0:06:02.40,0:06:05.00,Default,,0000,0000,0000,,ناروتو، ما الذي يجري؟
Dialogue: 0,0:06:05.33,0:06:07.13,Default,,0000,0000,0000,,!—لمَ أحضرت طفلتين معك
Dialogue: 0,0:06:08.26,0:06:13.56,Default,,0000,0000,0000,,يبدو هذا صائبًا، لكن ربّما كانت اللمسة أشدّ قليلًا؟
Dialogue: 0,0:06:13.76,0:06:15.03,Default,,0000,0000,0000,,ما الذي يجري؟
Dialogue: 0,0:06:17.16,0:06:18.06,Default,,0000,0000,0000,,...لقد أتيت
Dialogue: 0,0:06:19.76,0:06:21.30,Default,,0000,0000,0000,,!لقد أتيت لمقابلتك يا أبي
Dialogue: 0,0:06:23.63,0:06:26.53,Default,,0000,0000,0000,,،اكتشفتُ أنّ السابع كان سيلتقي بك
Dialogue: 0,0:06:27.10,0:06:28.80,Default,,0000,0000,0000,,لذا فقد تبعته
Dialogue: 0,0:06:29.56,0:06:31.90,Default,,0000,0000,0000,,هناك ما أودّ سؤاله عنك بشدة
Dialogue: 0,0:06:32.30,0:06:33.60,Default,,0000,0000,0000,,تودّين سؤالي بشأن شيءٍ ما؟
Dialogue: 0,0:06:34.46,0:06:35.03,Default,,0000,0000,0000,,أجل
Dialogue: 0,0:06:36.50,0:06:38.63,Default,,0000,0000,0000,,...في الواقع
Dialogue: 0,0:06:41.20,0:06:45.23,Default,,0000,0000,0000,,هل أمي... هل هي أمي الحقيقية؟
Dialogue: 0,0:06:47.53,0:06:48.60,Default,,0000,0000,0000,,...فهمت
Dialogue: 0,0:06:48.83,0:06:51.33,Default,,0000,0000,0000,,إذًا فقد كانت سارادا تملك\Nالشارينغان كلّ ذلك الوقت؟
Dialogue: 0,0:06:52.56,0:06:56.26,Default,,0000,0000,0000,,الصدمات العاطفية تعمل على\Nتحفيز إيقاظ الشارينغان
Dialogue: 0,0:06:56.90,0:06:59.73,Default,,0000,0000,0000,,،ربّما دون أن تدرك
Dialogue: 0,0:06:59.80,0:07:05.90,Default,,0000,0000,0000,,فقد أثّر عليها غيابُ ساسكي بشدة
Dialogue: 0,0:07:08.63,0:07:10.10,Default,,0000,0000,0000,,،باعتبار ردّ فعلك
Dialogue: 0,0:07:10.16,0:07:13.26,Default,,0000,0000,0000,,لم تخبريها بشأن البقية في الصورة القديمة أيضًا
Dialogue: 0,0:07:15.83,0:07:17.96,Default,,0000,0000,0000,,سارادا فتاة ذات ضمير حيّ
Dialogue: 0,0:07:18.83,0:07:22.66,Default,,0000,0000,0000,,إن عرفت أنّ ساسكي كان عدوًّا\N...لقرية الورق في وقتٍ ما
Dialogue: 0,0:07:23.90,0:07:28.23,Default,,0000,0000,0000,,لكنّه يجوب العالم الآن\Nلأجل صالح القرية
Dialogue: 0,0:07:28.56,0:07:31.36,Default,,0000,0000,0000,,،حتّى إن أخفيتِ الأمر\Nفسوف تكتشفه في نهاية المطاف
Dialogue: 0,0:07:32.73,0:07:35.50,Default,,0000,0000,0000,,الأمر سيان حتّى عندما ولدت
Dialogue: 0,0:07:36.96,0:07:40.33,Default,,0000,0000,0000,,ربّما يجب أن تملكي إيمانًا أكثر بسارادا؟
Dialogue: 0,0:07:43.86,0:07:46.90,Default,,0000,0000,0000,,أنا فاشلة كأم
Dialogue: 0,0:07:48.13,0:07:49.40,Default,,0000,0000,0000,,أجبني رجاءً
Dialogue: 0,0:07:49.46,0:07:51.43,Default,,0000,0000,0000,,أهي أمي الحقيقية؟
Dialogue: 0,0:07:52.00,0:07:53.43,Default,,0000,0000,0000,,ماذا حدث؟
Dialogue: 0,0:07:56.96,0:07:58.40,Default,,0000,0000,0000,,!ماذا حدث؟
Dialogue: 0,0:07:59.93,0:08:01.86,Default,,0000,0000,0000,,!أنت غير متواجد أبدًا
Dialogue: 0,0:08:01.93,0:08:04.20,Default,,0000,0000,0000,,لمَ لا تبقى وتعيش مع أمي؟
Dialogue: 0,0:08:04.26,0:08:07.46,Default,,0000,0000,0000,,!أتحفل حتّى لأنّك نسيتَ وجه ابنتك؟
Dialogue: 0,0:08:07.66,0:08:11.66,Default,,0000,0000,0000,,ومن هذه المرأة التي بجانبك\N!والتي ترتدي نفس نظاراتي؟
Dialogue: 0,0:08:11.90,0:08:15.46,Default,,0000,0000,0000,,أتظنّ أنّ الابنة تستطيع طرح هكذا سؤال على أمها؟
Dialogue: 0,0:08:16.23,0:08:18.43,Default,,0000,0000,0000,,أليست تلك الصورة—؟
Dialogue: 0,0:08:18.76,0:08:21.86,Default,,0000,0000,0000,,لستُ مهتمة بمثل هذه الأوضاع
Dialogue: 0,0:08:22.20,0:08:25.50,Default,,0000,0000,0000,,،أمّي لا تخبرني بأيّ شيء\Nوأنت غير موجودٍ على الدوام
Dialogue: 0,0:08:25.56,0:08:27.46,Default,,0000,0000,0000,,...لا يمكنني أن أثقّ بأيٍّ منكما
Dialogue: 0,0:08:27.53,0:08:29.06,Default,,0000,0000,0000,,!الأمر برمّته مشوّش
Dialogue: 0,0:08:33.33,0:08:37.03,Default,,0000,0000,0000,,أين كنت وماذا كنت تفعل تمامًا\N!كلّ هذا الوقت يا أبي؟
Dialogue: 0,0:08:39.70,0:08:43.00,Default,,0000,0000,0000,,...لا علاقة\Nلك بالأمر
Dialogue: 0,0:08:51.23,0:08:52.20,Default,,0000,0000,0000,,!انس ذلك فقط
Dialogue: 0,0:08:53.86,0:08:54.53,Default,,0000,0000,0000,,!مهلًا
Dialogue: 0,0:08:56.10,0:08:58.60,Default,,0000,0000,0000,,!لقد كان ذلك تصرّفًا بليدًا للغاية منك
Dialogue: 0,0:08:58.96,0:09:02.03,Default,,0000,0000,0000,,،ظننتُ لوهلةٍ أنّك ربّما تكون والدي
Dialogue: 0,0:09:02.10,0:09:03.80,Default,,0000,0000,0000,,!لكن هذا مستحيل
Dialogue: 0,0:09:07.40,0:09:10.76,Default,,0000,0000,0000,,ألا تظنّ أنّك يجب أن تخبر سارادا على الأقل؟
Dialogue: 0,0:09:11.56,0:09:13.80,Default,,0000,0000,0000,,بشأن السبب الذي يمنعك من الرجوع إلى القرية
Dialogue: 0,0:09:26.30,0:09:27.63,Default,,0000,0000,0000,,هل ستغادر الآن؟
Dialogue: 0,0:09:28.16,0:09:30.76,Default,,0000,0000,0000,,سأبلغك ما إن وجدت أي شيء
Dialogue: 0,0:09:31.66,0:09:34.63,Default,,0000,0000,0000,,لن يصيبك الضرّ إن توقفت عند منزلك، أليس كذلك؟
Dialogue: 0,0:09:35.20,0:09:37.23,Default,,0000,0000,0000,,،وجود تهديدٍ مثل كاغويا
Dialogue: 0,0:09:37.30,0:09:39.76,Default,,0000,0000,0000,,،والتي أوشكت على تدمير العالم
Dialogue: 0,0:09:39.83,0:09:42.36,Default,,0000,0000,0000,,قد ينشأ مجدّدًا إلّم نجاهد
Dialogue: 0,0:09:43.36,0:09:45.66,Default,,0000,0000,0000,,لا يمكننا أن نتجاهل أيّ أثرٍ له
Dialogue: 0,0:09:47.00,0:09:51.30,Default,,0000,0000,0000,,إنّه سلام حقّقناه بواسطة تضحياتٍ جسيمة في نهاية الأمر
Dialogue: 0,0:09:51.96,0:09:55.43,Default,,0000,0000,0000,,كما أنّها... رحلةُ تكفيرٍ بالنسبة لي
Dialogue: 0,0:09:56.06,0:10:00.13,Default,,0000,0000,0000,,لا أحد يضمر لكَ مرارة بعد الآن
Dialogue: 0,0:10:02.16,0:10:03.83,Default,,0000,0000,0000,,،هيا يا ساسكي\N...سويًّا، بوسعنا أن
Dialogue: 0,0:10:03.90,0:10:06.10,Default,,0000,0000,0000,,احمِ القرية بمثابتك الهوكاغي
Dialogue: 0,0:10:06.83,0:10:11.13,Default,,0000,0000,0000,,أنا الوحيد الذي أستطيع أن أبحث\Nعن آثارِ كاغويا بواسطة الرنيغان خاصتي
Dialogue: 0,0:10:12.16,0:10:14.50,Default,,0000,0000,0000,,افعل ما يقع على عاتقك
Dialogue: 0,0:10:14.93,0:10:16.93,Default,,0000,0000,0000,,وسأفعل ما يقع على عاتقي
Dialogue: 0,0:10:17.70,0:10:20.56,Default,,0000,0000,0000,,أليس هذا التعاون الذي لطالما أردته؟
Dialogue: 0,0:10:22.96,0:10:28.46,Default,,0000,0000,0000,,أصغِ إليّ. تعامل مع تحرّكاتي على أنها مهمّة\Nفائقة السريّة فقط كبار القرية يعرفون عنها
Dialogue: 0,0:10:29.00,0:10:32.96,Default,,0000,0000,0000,,لكن من المؤلم ألّا تعرف أي شيء
Dialogue: 0,0:10:34.03,0:10:36.20,Default,,0000,0000,0000,,...يجب على سارادا على الأقل
Dialogue: 0,0:10:36.40,0:10:39.26,Default,,0000,0000,0000,,لن تخلق المعرفة إلا قلقًا غير ضروري
Dialogue: 0,0:10:39.80,0:10:42.33,Default,,0000,0000,0000,,قد تكرهك يومًا ما
Dialogue: 0,0:10:43.73,0:10:46.90,Default,,0000,0000,0000,,،حتّى وإن فعلت\Nعلى المستقبل أن يبقى مشرقًا
Dialogue: 0,0:10:47.63,0:10:48.80,Default,,0000,0000,0000,,هل أنا مخطئ؟
Dialogue: 0,0:10:51.90,0:10:54.63,Default,,0000,0000,0000,,لديها ساكورا
Dialogue: 0,0:10:55.93,0:10:56.93,Default,,0000,0000,0000,,لا شيء يدعو للقلق
Dialogue: 0,0:11:06.46,0:11:08.43,Default,,0000,0000,0000,,...أنا حقًّا لا أجيد
Dialogue: 0,0:11:08.50,0:11:11.06,Default,,0000,0000,0000,,التعامل مع مثل هذه الأوضاع الخانقة
Dialogue: 0,0:11:20.23,0:11:21.93,Default,,0000,0000,0000,,،حسنًا، بعد أن آكل هذه
Dialogue: 0,0:11:22.00,0:11:24.13,Default,,0000,0000,0000,,سأحاول التحدث إليها حقًّا
Dialogue: 0,0:11:32.90,0:11:35.90,Default,,0000,0000,0000,,سارادا، هلّا صدّقتِ هذا على الأقل؟
Dialogue: 0,0:11:36.73,0:11:40.90,Default,,0000,0000,0000,,أباك هو أحسن شينوبي
Dialogue: 0,0:11:56.16,0:11:59.36,Default,,0000,0000,0000,,...ساكورا، بعد هذا الفحص
Dialogue: 0,0:12:01.33,0:12:02.40,Default,,0000,0000,0000,,!...يا لتلك الفتاة
Dialogue: 0,0:12:20.30,0:12:24.73,Default,,0000,0000,0000,,،لأجل مصالحنا\N...دعوه يبدأ
Dialogue: 0,0:12:29.40,0:12:31.66,Default,,0000,0000,0000,,إحياء الأكاتسكي
Dialogue: 0,0:12:36.23,0:12:37.20,Default,,0000,0000,0000,,حاضر
Dialogue: 0,0:13:14.30,0:13:15.10,Default,,0000,0000,0000,,خذ
Dialogue: 0,0:13:15.97,0:13:16.83,Default,,0000,0000,0000,,ماذا؟
Dialogue: 0,0:13:17.23,0:13:18.53,Default,,0000,0000,0000,,إنها بنكهة المرق
Dialogue: 0,0:13:18.67,0:13:22.27,Default,,0000,0000,0000,,،بوسعك أخذها\Nلذا استخدمها لمصالحة سارادا
Dialogue: 0,0:13:26.67,0:13:28.20,Default,,0000,0000,0000,,!انتظري يا سارادا
Dialogue: 0,0:13:28.57,0:13:29.97,Default,,0000,0000,0000,,!اتركني رجاءً
Dialogue: 0,0:13:30.03,0:13:32.67,Default,,0000,0000,0000,,،إلّم يكن أي أحدٍ سيخبرني بالحقيقة
Dialogue: 0,0:13:32.73,0:13:35.23,Default,,0000,0000,0000,,فسوف أذهب لأجد صاحبة النظارات تلك بنفسي
Dialogue: 0,0:13:35.30,0:13:37.17,Default,,0000,0000,0000,,!وأسألها مباشرةً
Dialogue: 0,0:13:37.57,0:13:40.07,Default,,0000,0000,0000,,!اذهبي وتحدّثي إلى ساسكي مرّةً أخرى
Dialogue: 0,0:13:54.93,0:13:56.23,Default,,0000,0000,0000,,!هيا بنا يا شين
Dialogue: 0,0:13:56.43,0:13:57.50,Default,,0000,0000,0000,,حاضر... أبي
Dialogue: 0,0:14:26.47,0:14:28.67,Default,,0000,0000,0000,,!سأدع هذا الأمر لك... ساسكي
Dialogue: 0,0:14:34.13,0:14:34.90,Default,,0000,0000,0000,,!أبي
Dialogue: 0,0:15:05.10,0:15:07.20,Default,,0000,0000,0000,,!عنصر النار: تقنية كرة النار
Dialogue: 0,0:15:14.60,0:15:16.07,Default,,0000,0000,0000,,أتلك قواه البصرية؟
Dialogue: 0,0:15:27.73,0:15:29.67,Default,,0000,0000,0000,,!أبي مذهل
Dialogue: 0,0:15:29.90,0:15:33.23,Default,,0000,0000,0000,,أجل... لكن هذا لا يعدّ شيئًا
Dialogue: 0,0:15:33.60,0:15:40.33,Default,,0000,0000,0000,,تبًّا، فقط لو أنّ أبي يملك عينين ثاقبتين\N...وكان من النوع الذي يجعل السيدات تفقد وعيها
Dialogue: 0,0:15:43.70,0:15:46.33,Default,,0000,0000,0000,,فهمت... أوتشيها ساسكي
Dialogue: 0,0:15:47.17,0:15:51.63,Default,,0000,0000,0000,,هذا شيءٌ أريده حتمًا لإحياء الأكاتسكي
Dialogue: 0,0:15:52.00,0:15:53.07,Default,,0000,0000,0000,,الأكاتسكي؟
Dialogue: 0,0:15:53.90,0:15:54.80,Default,,0000,0000,0000,,من أنت؟
Dialogue: 0,0:15:56.87,0:16:00.37,Default,,0000,0000,0000,,اسمي... أوتشيها شين
Dialogue: 0,0:16:00.70,0:16:03.57,Default,,0000,0000,0000,,...أوتشيها شين؟ ذلك
Dialogue: 0,0:16:10.67,0:16:11.67,Default,,0000,0000,0000,,{\i1}...تلك العينان{\i0}
Dialogue: 0,0:16:12.23,0:16:14.03,Default,,0000,0000,0000,,{\i1}من أنت؟{\i0}
Dialogue: 0,0:16:14.53,0:16:16.43,Default,,0000,0000,0000,,{\i1}أوتشيها شين{\i0}
Dialogue: 0,0:16:18.90,0:16:20.50,Default,,0000,0000,0000,,!يملك نفس اسم ذلك الصبي؟
Dialogue: 0,0:16:21.70,0:16:24.60,Default,,0000,0000,0000,,بوسعك قول الحقيقة بتأنٍّ بعد أن نمسكك
Dialogue: 0,0:16:25.00,0:16:26.53,Default,,0000,0000,0000,,أمّا الآن فاخرس
Dialogue: 0,0:16:27.03,0:16:30.03,Default,,0000,0000,0000,,من قال لك أن ترتاح؟ انهض
Dialogue: 0,0:16:30.90,0:16:32.90,Default,,0000,0000,0000,,حاضر... أبي
Dialogue: 0,0:16:33.83,0:16:35.53,Default,,0000,0000,0000,,هل هما أبٌ وابنه؟
Dialogue: 0,0:16:36.43,0:16:39.07,Default,,0000,0000,0000,,هل يستخدم ابنه كدرعٍ له؟
Dialogue: 0,0:16:43.67,0:16:46.13,Default,,0000,0000,0000,,ناروتو، اعتنِ بسارادا
Dialogue: 0,0:16:46.57,0:16:47.63,Default,,0000,0000,0000,,أكيد
Dialogue: 0,0:16:47.70,0:16:49.57,Default,,0000,0000,0000,,،ما دامت هنا\Nلن يستطيعا لمسها
Dialogue: 0,0:16:50.07,0:16:51.83,Default,,0000,0000,0000,,كن حذرًا ولا تهمل دفاعك
Dialogue: 0,0:17:05.27,0:17:07.20,Default,,0000,0000,0000,,!مـ-ماذا؟
Dialogue: 0,0:17:14.57,0:17:15.70,Default,,0000,0000,0000,,!ما الذي يجري؟
Dialogue: 0,0:17:18.17,0:17:20.40,Default,,0000,0000,0000,,هذه قواي البصرية
Dialogue: 0,0:17:20.97,0:17:21.93,Default,,0000,0000,0000,,إذًا...؟
Dialogue: 0,0:17:22.37,0:17:24.83,Default,,0000,0000,0000,,إنها قوية كخاصتك
Dialogue: 0,0:17:27.67,0:17:28.70,Default,,0000,0000,0000,,!السابع
Dialogue: 0,0:17:28.97,0:17:30.77,Default,,0000,0000,0000,,لا تقلقي يا سارادا
Dialogue: 0,0:17:31.10,0:17:32.00,Default,,0000,0000,0000,,أنا بخير
Dialogue: 0,0:17:33.33,0:17:35.80,Default,,0000,0000,0000,,ذاك الشخص قادر على التحكم\N...بأسلحة الناس الآخرين
Dialogue: 0,0:17:35.87,0:17:37.60,Default,,0000,0000,0000,,!بقوته البصرية
Dialogue: 0,0:17:38.67,0:17:39.83,Default,,0000,0000,0000,,{\i1}...في تلك اللحظة{\i0}
Dialogue: 0,0:17:43.43,0:17:45.53,Default,,0000,0000,0000,,{\i1}!لقد علَّمَ سيفي{\i0}
Dialogue: 0,0:18:01.87,0:18:02.80,Default,,0000,0000,0000,,!أبي
Dialogue: 0,0:18:05.60,0:18:08.63,Default,,0000,0000,0000,,السّلام يمنع البشر من التطور
Dialogue: 0,0:18:09.20,0:18:11.67,Default,,0000,0000,0000,,!كما حالكما
Dialogue: 0,0:18:14.57,0:18:16.73,Default,,0000,0000,0000,,!إنه يعيق حركتي بهذه
Dialogue: 0,0:18:17.73,0:18:20.33,Default,,0000,0000,0000,,!دون تطور، ستهلك المخلوقات في نهاية المطاف
Dialogue: 0,0:18:21.17,0:18:24.20,Default,,0000,0000,0000,,!بالتالي، سوف آخذ... الشارينغان خاصتك
Dialogue: 0,0:18:28.53,0:18:31.07,Default,,0000,0000,0000,,!سحقًا
Dialogue: 0,0:18:33.67,0:18:34.70,Default,,0000,0000,0000,,!أمي؟
Dialogue: 0,0:18:51.63,0:18:55.23,Default,,0000,0000,0000,,ماذا تظنان نفسيكما فاعلين\N!لزوجي وابنتي الحبيبة؟
Dialogue: 0,0:18:55.90,0:18:58.33,Default,,0000,0000,0000,,!إذًا... من هذان الشخصان؟
Dialogue: 0,0:18:59.27,0:19:01.73,Default,,0000,0000,0000,,...سنكتشف ذلك قريبًا
Dialogue: 0,0:19:02.27,0:19:03.63,Default,,0000,0000,0000,,ماذا تفعلين هنا أنت الأخرى؟
Dialogue: 0,0:19:04.87,0:19:06.90,Default,,0000,0000,0000,,...أنا هنا أيضًا
Dialogue: 0,0:19:08.00,0:19:11.23,Default,,0000,0000,0000,,ما هؤلاء الأشخاص؟
Dialogue: 0,0:19:12.33,0:19:14.17,Default,,0000,0000,0000,,هل أنت بخير يا ناروتو؟
Dialogue: 0,0:19:14.40,0:19:15.27,Default,,0000,0000,0000,,...أجل
Dialogue: 0,0:19:17.90,0:19:18.93,Default,,0000,0000,0000,,سأشفى قريبًا
Dialogue: 0,0:19:19.17,0:19:20.93,Default,,0000,0000,0000,,{\i1}ماذا؟ حقًّا؟{\i0}
Dialogue: 0,0:19:25.17,0:19:27.90,Default,,0000,0000,0000,,{\i1}كلّ هذه المعمعة على هذا{\i0}
Dialogue: 0,0:19:28.27,0:19:32.17,Default,,0000,0000,0000,,{\i1}!حواسك القتالية قد أصبحت باهتة\N...وا أسفي{\i0}
Dialogue: 0,0:19:32.60,0:19:34.30,Default,,0000,0000,0000,,...بربك
Dialogue: 0,0:19:34.77,0:19:37.00,Default,,0000,0000,0000,,لا يهم... فقط انتهى الأمر
Dialogue: 0,0:20:10.00,0:20:12.50,Default,,0000,0000,0000,,!حمدًا للرّب لأنك بخير
Dialogue: 0,0:20:13.13,0:20:14.10,Default,,0000,0000,0000,,
Dialogue: 0,0:20:27.73,0:20:32.43,Default,,0000,0000,0000,,...أنا آسفة، ظننتني أوضحتُ الأمور لسارادا، لكن
Dialogue: 0,0:20:35.13,0:20:37.87,Default,,0000,0000,0000,,لا، هذه غلطتي
Dialogue: 0,0:20:38.33,0:20:40.33,Default,,0000,0000,0000,,لستِ بحاجةٍ للاعتذار
Dialogue: 0,0:20:41.37,0:20:42.97,Default,,0000,0000,0000,,...لكني قد
Dialogue: 0,0:20:53.37,0:20:54.37,Default,,0000,0000,0000,,!سارادا
Dialogue: 0,0:20:54.53,0:20:55.17,Default,,0000,0000,0000,,ماذا؟
Dialogue: 0,0:21:03.97,0:21:05.97,Default,,0000,0000,0000,,سآخذك أيضًا
Dialogue: 0,0:21:06.13,0:21:07.37,Default,,0000,0000,0000,,!مـ-ما الذي يجري؟
Dialogue: 0,0:21:08.33,0:21:09.27,Default,,0000,0000,0000,,!سارادا
Dialogue: 0,0:21:13.50,0:21:14.77,Default,,0000,0000,0000,,تقنية الانتقال الأني؟
Dialogue: 0,0:21:14.87,0:21:16.07,Default,,0000,0000,0000,,!أمي
Dialogue: 0,0:21:24.17,0:21:28.17,Default,,0000,0000,0000,,!...أمي
Dialogue: 0,0:21:50.43,0:21:53.13,Default,,0000,0000,0000,,يبدو أنّني في قلب منطقة العدو
Dialogue: 0,0:23:26.00,0:23:28.20,Default,,0000,0000,0000,,ما ذاك الشيء الذي ندعوه بالموت؟
Dialogue: 0,0:23:28.27,0:23:32.84,Default,,0000,0000,0000,,ما هو إلّا انقضاء الوعاء الجسدي متاحِ الاستخدام
Dialogue: 0,0:23:32.97,0:23:34.04,Default,,0000,0000,0000,,!أنت مخطئ
Dialogue: 0,0:23:34.10,0:23:37.27,Default,,0000,0000,0000,,!أنت مخطئ في تفكيرك أنّ الوعاء متاحٌ للاستخدام
Dialogue: 0,0:23:37.37,0:23:40.30,Default,,0000,0000,0000,,هناك حيث تستقرّ مشاعر المرء وإرادته
Dialogue: 0,0:23:41.20,0:23:44.44,Default,,0000,0000,0000,,:في الحلقة القادمة
Dialogue: 0,0:23:45.10,0:23:46.57,top,,0000,0000,0000,,مشاعر موصولة
Dialogue: 0,0:23:47.04,0:23:50.64,top,,0000,0000,0000,,!أنت لا تفهم ما هو مهمّ بالتأكيد
Dialogue: 0,0:23:50.70,0:23:53.77,nxt ep title,,0000,0000,0000,,{\fad(300,000)}مشاعر موصولة\N\N
