Dialogue: 0,0:16:29.57,0:16:30.24,Main,,0000,0000,0000,,دينكي
Dialogue: 0,0:16:30.87,0:16:32.14,Main,,0000,0000,0000,,سبق واستدعينا التّعزيزات
Dialogue: 0,0:16:32.44,0:16:35.01,Main,,0000,0000,0000,,فلنشغلهم إلى حين مجيء هانابي-سينسي
Dialogue: 0,0:16:35.57,0:16:36.21,Main,,0000,0000,0000,,!نعم
Dialogue: 0,0:16:37.77,0:16:39.64,Main,,0000,0000,0000,,!عليكم بهم
Dialogue: 0,0:16:43.71,0:16:44.74,Main,,0000,0000,0000,,!هيّا بنا يا رفاق
Dialogue: 0,0:16:44.94,0:16:47.17,Main,,0000,0000,0000,,!إيوابي، اصنع جدار طين على يمينك
Dialogue: 0,0:16:47.64,0:16:48.37,Main,,0000,0000,0000,,!عُلم
Dialogue: 0,0:16:48.44,0:16:50.77,Main,,0000,0000,0000,,!ميتال، هاجم العدوّ مباشرةً
Dialogue: 0,0:16:50.84,0:16:51.81,Main,,0000,0000,0000,,!مفهوم
Dialogue: 0,0:16:51.91,0:16:53.64,Main,,0000,0000,0000,,!أسلوب الأرض: جدار الطّين
Dialogue: 0,0:17:00.97,0:17:03.67,Main,,0000,0000,0000,,!دينكي، انتبه لمحيطك أكثر رجاءً
Dialogue: 0,0:17:03.81,0:17:06.34,Main,,0000,0000,0000,,!عرفتُ أنّك ستغطّي عليّ
