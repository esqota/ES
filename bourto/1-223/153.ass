Dialogue: 0,0:17:37.34,0:17:38.37,Main,,0000,0000,0000,,!ندع الأمر لكنّ
Dialogue: 0,0:17:43.74,0:17:45.44,Main,,0000,0000,0000,,!انتظروا
Dialogue: 0,0:17:49.21,0:17:50.71,Main,,0000,0000,0000,,!احترسا من الأعلى
Dialogue: 0,0:17:58.47,0:17:59.91,Main,,0000,0000,0000,,هل أنتما بخير؟
Dialogue: 0,0:18:00.24,0:18:01.81,Main,,0000,0000,0000,,هذا لا يعدّ شيئًا
Dialogue: 0,0:18:02.24,0:18:03.34,Main,,0000,0000,0000,,!سحقًا
Dialogue: 0,0:18:03.41,0:18:05.04,Main,,0000,0000,0000,,أهناك المزيد منهم؟
Dialogue: 0,0:18:07.41,0:18:09.57,Main,,0000,0000,0000,,لستُ سوى سيفٍ كليل
Dialogue: 0,0:18:09.97,0:18:11.34,Main,,0000,0000,0000,,ماذا دهاك فجأةً؟
Dialogue: 0,0:18:11.91,0:18:13.17,Main,,0000,0000,0000,,...علينا
Dialogue: 0,0:18:13.77,0:18:15.97,Main,,0000,0000,0000,,!أن نصبح كوجبة الهمبرغر
Dialogue: 0,0:18:16.31,0:18:17.21,Main,,0000,0000,0000,,
Dialogue: 0,0:18:17.57,0:18:19.51,Main,,0000,0000,0000,,،بدلًا من تناول البطاطس المقليّة فحسب
Dialogue: 0,0:18:19.57,0:18:21.77,Main,,0000,0000,0000,,،علينا أن نكون كوجبة همبرغر متكاملة
Dialogue: 0,0:18:21.84,0:18:23.87,Main,,0000,0000,0000,,!ونخرج الأفضل من بعضنا البعض
