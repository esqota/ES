Dialogue: 0,0:18:47.63,0:18:48.93,Main - boruto cake,,0000,0000,0000,,بوروتو
Dialogue: 0,0:18:49.00,0:18:51.07,Main,,0000,0000,0000,,!آسف على تأخر هذا
Dialogue: 0,0:18:52.33,0:18:53.77,Main,,0000,0000,0000,,!شكرًا يا بابا
Dialogue: 0,0:18:54.70,0:18:55.40,Main,,0000,0000,0000,,...أبي
Dialogue: 0,0:18:59.67,0:19:02.37,Main,,0000,0000,0000,,يبدو أنّك لست نسخة ظل
Dialogue: 0,0:19:02.83,0:19:04.80,Main,,0000,0000,0000,,!لمَ فعلت هذا فجأةً؟
Dialogue: 0,0:19:05.90,0:19:08.03,Main,,0000,0000,0000,,!لكنّه خطأك أساسًا
Dialogue: 0,0:19:08.10,0:19:09.10,Main,,0000,0000,0000,,!ماذا قلت؟
Dialogue: 0,0:19:09.40,0:19:11.13,Main,,0000,0000,0000,,!بابا، أخي... أنا أيضًا
Dialogue: 0,0:19:11.20,0:19:12.97,Main,,0000,0000,0000,,!احذري يا هيماواري
Dialogue: 0,0:19:13.20,0:19:15.60,Main,,0000,0000,0000,,!توقفوا جميعًا
Dialogue: 0,0:19:16.23,0:19:17.77,Main,,0000,0000,0000,,!سأتخلّص من الكعكة
Dialogue: 0,0:19:19.70,0:19:21.77,Main,,0000,0000,0000,,!لا يمكنك فعل ذلك -\N!آسف يا أمي -
Dialogue: 0,0:19:21.83,0:19:22.63,Main,,0000,0000,0000,,!آسفة
Dialogue: 0,0:19:27.23,0:19:29.03,Main,,0000,0000,0000,,!فلنأكل الكعكة الآن
Dialogue: 0,0:19:29.53,0:19:31.37,Main,,0000,0000,0000,,!أجل، معك حق
Dialogue: 0,0:19:31.50,0:19:33.13,Main,,0000,0000,0000,,أنا أتضور جوعًا
Dialogue: 0,0:19:33.77,0:19:34.27,Main,,0000,0000,0000,,!وأنا
Dialogue: 0,0:19:34.97,0:19:37.03,Main,,0000,0000,0000,,بوروتو، اغسل يديك أوّلًا
Dialogue: 0,0:19:37.77,0:19:38.97,Main,,0000,0000,0000,,أعلم
Dialogue: 0,0:19:39.73,0:19:42.00,Main,,0000,0000,0000,,!ماما، سأساعدك
Dialogue: 0,0:19:42.60,0:19:43.47,Main,,0000,0000,0000,,!حسنًا
Dialogue: 0,0:19:43.77,0:19:46.20,Main,,0000,0000,0000,,هل يمكنك جلب الأطباق إلى الطاولة؟
Dialogue: 0,0:19:46.87,0:19:47.60,Main,,0000,0000,0000,,!حسنًا
Dialogue: 0,0:19:48.33,0:19:51.13,Main,,0000,0000,0000,,سأساعد أيضًا
Dialogue: 0,0:19:51.83,0:19:53.70,Main,,0000,0000,0000,,أبي، اجلس فحسب
Dialogue: 0,0:19:53.77,0:19:57.43,Main,,0000,0000,0000,,،لا بدّ أنّك منهك\Nلا سيّما في سنّك
Dialogue: 0,0:19:58.20,0:20:00.90,Main,,0000,0000,0000,,!لا تعاملني وكأنّي عجوز
