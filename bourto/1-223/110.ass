Dialogue: 0,0:01:34.09,0:01:38.96,ep title,,0000,0000,0000,,{\fad(300,200)}{\i1}:لفائف نينجا البخار\N!ينبوع الإحياء الساخن{\i0}
Dialogue: 0,0:01:55.00,0:01:56.00,Main,,0000,0000,0000,,!ميراي-سان
Dialogue: 0,0:01:57.63,0:01:58.84,Main,,0000,0000,0000,,هل سمعت عن الينبوع الساخن
Dialogue: 0,0:01:58.92,0:02:00.59,Main,,0000,0000,0000,,حيث يمكنك رؤية الناس الذين ماتوا؟
Dialogue: 0,0:02:01.34,0:02:02.42,Main,,0000,0000,0000,,الناس الذين ماتوا؟
Dialogue: 0,0:02:06.00,0:02:07.84,Main,,0000,0000,0000,,رؤية الأموات؟
Dialogue: 0,0:02:08.59,0:02:10.38,Main,,0000,0000,0000,,!يستحيل أن يوجد شيء كهذا
Dialogue: 0,0:02:11.00,0:02:12.00,Main,,0000,0000,0000,,!بل يوجد
Dialogue: 0,0:02:15.59,0:02:19.84,Main,,0000,0000,0000,,قطعتُ كلّ هذا الطريق لأرى أمّي المتوفّاة
Dialogue: 0,0:02:20.50,0:02:23.00,Main,,0000,0000,0000,,!بربّك! مستحيل
Dialogue: 0,0:02:24.05,0:02:25.80,Main,,0000,0000,0000,,...فكّرت ذلك أيضًا في البداية
Dialogue: 0,0:02:26.96,0:02:29.96,Main,,0000,0000,0000,,ثمّ فكّرت أنّ الأمر يستحقّ المحاولة
Dialogue: 0,0:02:31.30,0:02:34.09,Main,,0000,0000,0000,,أريد أن أرى والدتي حقًّا
Dialogue: 0,0:02:37.05,0:02:40.13,Main,,0000,0000,0000,,ألا تريدين أن تري والدك يا ميراي-سان؟
Dialogue: 0,0:02:47.17,0:02:48.59,Main,,0000,0000,0000,,...لكنّي
Dialogue: 0,0:02:49.55,0:02:50.84,Main,,0000,0000,0000,,أخشى أنّني لن أستطيع الذهاب...
Dialogue: 0,0:02:51.38,0:02:52.55,Main,,0000,0000,0000,,فهمت
Dialogue: 0,0:02:53.55,0:02:55.59,Main,,0000,0000,0000,,آسفة... أراك لاحقًا
Dialogue: 0,0:03:06.75,0:03:09.71,Main,,0000,0000,0000,,{\i1}صحيح... أملك مهمّة{\i0}
Dialogue: 0,0:03:10.34,0:03:12.63,women bath,,0000,0000,0000,,نساء
Dialogue: 0,0:03:10.34,0:03:12.63,men bath,,0000,0000,0000,,رجال
