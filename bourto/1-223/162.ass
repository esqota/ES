Dialogue: 0,0:01:34.20,0:01:39.07,ep title,,0000,0000,0000,,{\fad(100,300)}{\blur8\bord5\fs37}{\i1}!الهروب من الشّبكة الضيّقة{\i0}
Dialogue: 0,0:01:49.48,0:01:51.19,Main,,0000,0000,0000,,!نحن محاصرون بالكامل
Dialogue: 0,0:01:52.11,0:01:54.28,Main,,0000,0000,0000,,.يبدو أنّنا وقعنا في فخّهم تمامًا
Dialogue: 0,0:01:56.36,0:01:57.23,Main,,0000,0000,0000,,!إنّهما هنا
Dialogue: 0,0:01:57.32,0:01:58.32,Main,,0000,0000,0000,,!حطّموا البوّابة بسرعة
Dialogue: 0,0:01:59.98,0:02:01.48,Main,,0000,0000,0000,,!لا يمكننا كبحهم أكثر
Dialogue: 0,0:02:02.15,0:02:04.40,Main,,0000,0000,0000,,.لا أظنّ أنّهم سيصغون لنا
Dialogue: 0,0:02:05.15,0:02:06.78,Main,,0000,0000,0000,,أجل، لا يمكننا تضييع الوقت هنا
Dialogue: 0,0:02:06.86,0:02:09.48,Main,,0000,0000,0000,,.بما أنّنا بحاجة لاسترجاع خلايا هاشيراما
Dialogue: 0,0:02:17.28,0:02:18.98,Main,,0000,0000,0000,,!إنّهما هناك! في الأعلى
Dialogue: 0,0:02:41.86,0:02:42.98,Main,,0000,0000,0000,,!لا ينفكّون عن القدوم
Dialogue: 0,0:02:43.07,0:02:45.65,Main,,0000,0000,0000,,!لن تصمد التشّاكرا خاصّتنا إن كنّا بحاجة لقتالهم
Dialogue: 0,0:02:45.82,0:02:46.40,Main,,0000,0000,0000,,!هيّا
Dialogue: 0,0:02:46.53,0:02:47.32,Main,,0000,0000,0000,,!أجل
Dialogue: 0,0:02:48.03,0:02:48.94,Main,,0000,0000,0000,,!إنّهما يهربان
Dialogue: 0,0:02:49.03,0:02:49.73,Main,,0000,0000,0000,,!الحقوا بهما
Dialogue: 0,0:02:50.73,0:02:51.82,Main,,0000,0000,0000,,!ما العمل؟
Dialogue: 0,0:02:51.90,0:02:53.15,Main,,0000,0000,0000,,!اهرب فحسب حاليًّا
Dialogue: 0,0:02:59.86,0:03:00.94,Main,,0000,0000,0000,,إلى أين هربا؟
Dialogue: 0,0:03:01.03,0:03:02.28,Main,,0000,0000,0000,,!أين الكنز؟
Dialogue: 0,0:03:06.48,0:03:07.94,Main,,0000,0000,0000,,أيّ كنز؟
Dialogue: 0,0:03:08.28,0:03:10.44,Main,,0000,0000,0000,,.لا نملك أيّ شيء من ذلك
Dialogue: 0,0:03:11.53,0:03:13.23,Main,,0000,0000,0000,,.تلقّيتما الرّسالة بسرعة فعلًا
Dialogue: 0,0:03:13.65,0:03:18.19,Main,,0000,0000,0000,,سمعناهم يصيحون وينشرون أنباء\N.أنّ "شينوبي قرية الورق" هم الجناة
Dialogue: 0,0:03:18.32,0:03:19.07,Main,,0000,0000,0000,,!سحقًا
Dialogue: 0,0:03:19.28,0:03:22.03,Main,,0000,0000,0000,,!بل الجناة هم الأشخاص الّذين سرقوا خلايا هاشيراما
Dialogue: 0,0:03:22.32,0:03:24.98,Main,,0000,0000,0000,,.انطلاقًا ممّا رأيت، ثمّة الكثير من الشّينوبي السّابقين
Dialogue: 0,0:03:25.36,0:03:28.03,Main,,0000,0000,0000,,.وسيفعلون أيّ شيء من أجل المال
Dialogue: 0,0:03:28.53,0:03:31.82,Main,,0000,0000,0000,,.إن واصلنا القتال فلن نستطيع اللّحاق بالجناة الحقيقيّين
Dialogue: 0,0:03:32.36,0:03:35.40,Main,,0000,0000,0000,,.علينا تجنّب القتال ما أمكن والبحث عنهم
Dialogue: 0,0:03:36.32,0:03:37.86,Main,,0000,0000,0000,,!علينا استرجاع خلايا هاشيراما
Dialogue: 0,0:03:38.73,0:03:39.61,Main,,0000,0000,0000,,...بالمناسبة يا بوروتو
Dialogue: 0,0:03:39.69,0:03:40.98,Main,,0000,0000,0000,,ما تلك الرّائحة؟
Dialogue: 0,0:03:43.23,0:03:44.23,Main,,0000,0000,0000,,عطر؟
Dialogue: 0,0:03:45.82,0:03:47.73,Main,,0000,0000,0000,,!لقد رشّوا عليّ قارورة كاملة
Dialogue: 0,0:03:52.36,0:03:53.19,Main,,0000,0000,0000,,!أشتمّه
Dialogue: 0,0:03:53.57,0:03:54.86,Main,,0000,0000,0000,,!يمكنني شمّه
Dialogue: 0,0:03:55.65,0:03:57.19,Main,,0000,0000,0000,,!إنّه عطر
Dialogue: 0,0:04:01.19,0:04:02.28,Main,,0000,0000,0000,,.هذا سيّئ
Dialogue: 0,0:04:02.36,0:04:03.61,Main,,0000,0000,0000,,!بوروتو، تخلّص من تلك الرّائحة
Dialogue: 0,0:04:03.73,0:04:05.82,Main,,0000,0000,0000,,القول سهل! كيف أفعل ذلك؟
Dialogue: 0,0:04:06.28,0:04:07.94,Main,,0000,0000,0000,,!لا نملك خيارًا عدا تغيير الخطط
Dialogue: 0,0:04:08.36,0:04:11.19,Main,,0000,0000,0000,,سأذهب مع بوروتو لنجد طريقة للتخلّص من الرّائحة
Dialogue: 0,0:04:11.28,0:04:12.15,Main,,0000,0000,0000,,!ثمّ سنلحق بكما لاحقًا
Dialogue: 0,0:04:12.23,0:04:15.40,Main,,0000,0000,0000,,.سأبحث أنا وسارادا عن الأشخاص الّذين سرقوا خلايا هاشيراما
Dialogue: 0,0:04:16.03,0:04:17.11,Main,,0000,0000,0000,,!تلك الطّريقة الوحيدة
Dialogue: 0,0:04:17.15,0:04:18.73,Main,,0000,0000,0000,,!سنلتقي لاحقًا يا بوروتو
Dialogue: 0,0:04:19.11,0:04:20.07,Main,,0000,0000,0000,,!سحقًا
Dialogue: 0,0:04:20.23,0:04:22.36,Main,,0000,0000,0000,,!لا أصدّق أنّني أعيق الجميع بسبب هذا
Dialogue: 0,0:04:28.53,0:04:30.73,Main,,0000,0000,0000,,.يجدر أن نكون بمأمن بعد وصولنا إلى هنا
Dialogue: 0,0:04:33.23,0:04:34.86,Main,,0000,0000,0000,,...إذًا بينما نملك الوقت
Dialogue: 0,0:04:35.36,0:04:35.90,Main,,0000,0000,0000,,.أجل
Dialogue: 0,0:04:42.82,0:04:43.57,Main,,0000,0000,0000,,!يوروغا
Dialogue: 0,0:04:44.07,0:04:45.53,Main,,0000,0000,0000,,ما كنّا لنستطيع
Dialogue: 0,0:04:45.61,0:04:47.90,Main,,0000,0000,0000,,.التسّلل إلى قلعة فوشو لولا تضحيّتك
Dialogue: 0,0:04:49.23,0:04:52.23,Main,,0000,0000,0000,,.بفضلك، حصلنا على خلايا هاشيراما
Dialogue: 0,0:04:52.57,0:04:55.07,Main,,0000,0000,0000,,!أنت! توخّ أقصى درجات الحذر مع تلك
Dialogue: 0,0:04:55.19,0:04:55.86,Main,,0000,0000,0000,,.أجل
Dialogue: 0,0:04:56.15,0:04:58.32,Main,,0000,0000,0000,,لكن من المحبط أنّنا لا نستطيع استخدام قوانا الكاملة
Dialogue: 0,0:04:58.40,0:04:59.65,Main,,0000,0000,0000,,.إلى أن نصل إلى الحدود
Dialogue: 0,0:04:59.78,0:05:01.40,Main,,0000,0000,0000,,.إنّنا نكسب الوقت من أجل ذلك بالضّبط
Dialogue: 0,0:05:02.03,0:05:04.23,Main,,0000,0000,0000,,،بينما يُعرقلون أولئك الأشخاص من قرية الورق
Dialogue: 0,0:05:04.32,0:05:06.15,Main,,0000,0000,0000,,.لنبتعد من هنا قدر الإمكان
Dialogue: 0,0:05:13.48,0:05:16.69,Main,,0000,0000,0000,,كيف لي أن أتخلّص من هذه الرّائحة؟
Dialogue: 0,0:05:21.07,0:05:21.86,Main,,0000,0000,0000,,.يا بوروتو
Dialogue: 0,0:05:23.19,0:05:24.36,Main,,0000,0000,0000,,.جرّب أن تغطس في ذلك
Dialogue: 0,0:05:26.11,0:05:27.23,Main,,0000,0000,0000,,!إنّه خندق تصريف
Dialogue: 0,0:05:28.57,0:05:31.36,Main,,0000,0000,0000,,.قد تُزيل الرّائحة النّتنة رائحة العطر
Dialogue: 0,0:05:31.40,0:05:33.23,Main,,0000,0000,0000,,!مهلًا، هنالك حدّ لكلّ شيء
Dialogue: 0,0:05:33.44,0:05:35.98,Main,,0000,0000,0000,,!يستحيل أن أغوص في ذلك
Dialogue: 0,0:05:36.90,0:05:38.23,Main,,0000,0000,0000,,هل ترفض قطعًا؟
Dialogue: 0,0:05:38.78,0:05:39.98,Main,,0000,0000,0000,,.أرفض قطعًا
Dialogue: 0,0:05:40.48,0:05:41.32,Main,,0000,0000,0000,,.فهمت
Dialogue: 0,0:05:41.82,0:05:43.07,Main,,0000,0000,0000,,.لم تترك لي أيّ خيار
Dialogue: 0,0:05:57.86,0:06:00.03,Main,,0000,0000,0000,,...أظنّ أنّ هنالك حدًّا لكلّ شيء بالفعل
Dialogue: 0,0:06:00.36,0:06:02.23,Main,,0000,0000,0000,,!أخبرتك
Dialogue: 0,0:06:02.82,0:06:04.48,Main,,0000,0000,0000,,.علينا اختبار كلّ شيء عبر التّجربة والخطأ
Dialogue: 0,0:06:04.57,0:06:06.61,Main,,0000,0000,0000,,!لن أتحمّل ذلك
Dialogue: 0,0:06:06.94,0:06:09.15,Main,,0000,0000,0000,,أخفض صوتك! هل تريد أن يعثروا علينا؟
Dialogue: 0,0:06:09.44,0:06:12.57,Main,,0000,0000,0000,,.بالكاد تمكنّا من إيجاد طريقٍ لا يمكن رصده
Dialogue: 0,0:06:13.32,0:06:14.82,Main,,0000,0000,0000,,طريق لا يمكن رصده؟
Dialogue: 0,0:06:17.15,0:06:18.82,Main,,0000,0000,0000,,مستحيل. ليس من هناك...؟
Dialogue: 0,0:06:19.19,0:06:20.40,Main,,0000,0000,0000,,.بالضّبط. تعال معي
Dialogue: 0,0:06:25.15,0:06:26.32,Main,,0000,0000,0000,,هل أنت جادّ؟
Dialogue: 0,0:06:31.57,0:06:34.11,Main,,0000,0000,0000,,.أتساءل إن كان بوروتو بخير
Dialogue: 0,0:06:34.69,0:06:37.78,Main,,0000,0000,0000,,.صراحة، ربّما تقسيم الفريقين كان خطأً
Dialogue: 0,0:06:38.28,0:06:38.61,Main,,0000,0000,0000,,ماذا؟
Dialogue: 0,0:06:39.07,0:06:43.15,Main,,0000,0000,0000,,.أشعر أنّ موغينو وبوروتو ليسا متوافقين
Dialogue: 0,0:06:44.32,0:06:45.07,Main,,0000,0000,0000,,.هذا أكيد
Dialogue: 0,0:06:45.57,0:06:48.32,Main,,0000,0000,0000,,.لا يهمّ، لن يفيدنا النّدم بشيء
Dialogue: 0,0:06:49.19,0:06:51.36,Main,,0000,0000,0000,,لنركّز فقط على الحصول على شهود العيان عن الأشخاص
Dialogue: 0,0:06:51.44,0:06:53.32,Main,,0000,0000,0000,,.الّذين سرقوا خلايا هاشيراما
Dialogue: 0,0:06:53.40,0:06:54.07,Main,,0000,0000,0000,,.نعم
Dialogue: 0,0:06:55.23,0:06:58.78,Main,,0000,0000,0000,,ما رأيك أن نقصد مالك المحلّ ذلك في السّوق السّوداء؟
Dialogue: 0,0:06:59.32,0:07:00.19,Main,,0000,0000,0000,,!فهمت
Dialogue: 0,0:07:00.44,0:07:02.07,Main,,0000,0000,0000,,.الطّيور على أشكالها تقع
Dialogue: 0,0:07:02.40,0:07:03.40,Main,,0000,0000,0000,,!سأفعل هذا إذًا
Dialogue: 0,0:07:08.03,0:07:09.44,Main,,0000,0000,0000,,كيريساكي؟
Dialogue: 0,0:07:09.78,0:07:13.53,Main,,0000,0000,0000,,.كان يعرف أنّ كيريساكي ينتظر ربحًا كبيرًا
Dialogue: 0,0:07:14.11,0:07:15.23,Main,,0000,0000,0000,,إذًا ستستغلّ ذلك
Dialogue: 0,0:07:15.32,0:07:17.36,Main,,0000,0000,0000,,وتجعله يرحّب بفرصة التّعاون؟
Dialogue: 0,0:07:17.48,0:07:21.15,Main,,0000,0000,0000,,.سارادا، ابقي على استعداد خارج المحلّ تحسّبًا لحدوث أيّ شيء
Dialogue: 0,0:07:21.86,0:07:22.28,Main,,0000,0000,0000,,!أجل
Dialogue: 0,0:07:37.11,0:07:40.65,Main,,0000,0000,0000,,!من الجيّد أنّنا وجدنا بئرًا قريبًا من ذلك المصرف
Dialogue: 0,0:07:40.94,0:07:42.65,Main,,0000,0000,0000,,إذًا؟ هل أزاح الرّائحة؟
Dialogue: 0,0:07:45.32,0:07:47.57,Main,,0000,0000,0000,,.أجل، نحن بخير... على الأرجح
Dialogue: 0,0:07:49.69,0:07:50.98,Main,,0000,0000,0000,,.أجل، معك حقّ
Dialogue: 0,0:07:51.19,0:07:52.61,Main,,0000,0000,0000,,.اختفت الرّائحة أخيرًا
Dialogue: 0,0:07:53.07,0:07:55.32,Main,,0000,0000,0000,,!يمكننا الآن أن نلتقي بسارادا والمعلّم
Dialogue: 0,0:07:55.40,0:07:57.86,Main,,0000,0000,0000,,!لسنا بحاجة للقلق بشأن ملاحقتنا من أحد
Dialogue: 0,0:08:00.65,0:08:01.82,Main,,0000,0000,0000,,!انتظرا
Dialogue: 0,0:08:03.44,0:08:06.15,Main,,0000,0000,0000,,!فهمت. أظنّنا لا نستطيع خداع أنف كلب
Dialogue: 0,0:08:06.82,0:08:08.11,Main,,0000,0000,0000,,!إلى الدّرس التّالي
Dialogue: 0,0:08:08.19,0:08:09.98,Main,,0000,0000,0000,,!هذا ليس الوقت المناسب للتّفكير في ذلك
Dialogue: 0,0:08:10.32,0:08:13.36,Main,,0000,0000,0000,,.على الشّينوبي أن يبقى هادئًا إن وقع في مأزق ويفكّر في الأمور
Dialogue: 0,0:08:13.69,0:08:15.36,Main,,0000,0000,0000,,حسنًا، حسنًا. أهذا صحيح؟
Dialogue: 0,0:08:21.48,0:08:26.57,Main,,0000,0000,0000,,فهمت... شينوبي متشابهون يرتدون أقراطًا، صحيح؟
Dialogue: 0,0:08:27.23,0:08:31.11,Main,,0000,0000,0000,,.سأدفع لك أيّ مبلغ تريد إن استطعت إيجادهم
Dialogue: 0,0:08:31.65,0:08:34.44,Main,,0000,0000,0000,,لمَ قد يبحث طبيب مثلك عنهم؟
Dialogue: 0,0:08:34.90,0:08:38.23,Main,,0000,0000,0000,,.لقد هربوا دون أن يدفعوا فاتورة عمليّتهم
Dialogue: 0,0:08:38.90,0:08:41.15,Main,,0000,0000,0000,,.أنا من النّوع الّذي ينتقم بشدّة ممّن يحتال عليّ
Dialogue: 0,0:08:41.86,0:08:43.11,Main,,0000,0000,0000,,.فهمت
Dialogue: 0,0:08:43.28,0:08:44.78,Main,,0000,0000,0000,,.أنت محظوظ
Dialogue: 0,0:08:45.03,0:08:47.36,Main,,0000,0000,0000,,.صادف أن رآهم أحد
Dialogue: 0,0:08:48.36,0:08:49.28,Main,,0000,0000,0000,,!حقًّا؟
Dialogue: 0,0:08:49.28,0:08:51.57,Main,,0000,0000,0000,,.أجل، انتظر لحظة رجاءً
Dialogue: 0,0:09:03.53,0:09:06.44,Main,,0000,0000,0000,,!سحقًا، عليّ التخلّص من هذه الرّائحة بطريقةٍ ما
Dialogue: 0,0:09:06.98,0:09:10.15,Main,,0000,0000,0000,,.كلّا، من المستحيل تمويه كلبٍ عن الرّائحة تمامًا
Dialogue: 0,0:09:10.28,0:09:11.69,Main,,0000,0000,0000,,ما العمل إذًا؟
Dialogue: 0,0:09:12.07,0:09:13.61,Main,,0000,0000,0000,,!سيعثرون علينا ثانيةً بسرعة
Dialogue: 0,0:09:14.36,0:09:16.32,Main,,0000,0000,0000,,.حتّى اللّحظة، أهدافنا يبتعدون أكثر
Dialogue: 0,0:09:16.86,0:09:18.65,Main,,0000,0000,0000,,كلّ ما نستطيع فعله الآن هو نسيان موعدنا
Dialogue: 0,0:09:18.73,0:09:20.94,Main,,0000,0000,0000,,.والابتعاد عن هذه القرية بسلوك أقصر طريق ممكن
Dialogue: 0,0:09:21.28,0:09:23.15,Main,,0000,0000,0000,,.علينا المخاطرة فحسب
Dialogue: 0,0:09:23.57,0:09:25.07,Main,,0000,0000,0000,,الطّريق الأقصر؟
Dialogue: 0,0:09:29.23,0:09:29.73,Main,,0000,0000,0000,,.هذا صحيح
Dialogue: 0,0:09:30.23,0:09:32.78,Main,,0000,0000,0000,,.سنخترقهم من الوسط تمامًا في آن واحد
Dialogue: 0,0:09:37.11,0:09:37.94,Main,,0000,0000,0000,,!وجدتها
Dialogue: 0,0:09:38.32,0:09:39.36,Main,,0000,0000,0000,,!-إذًا
Dialogue: 0,0:09:42.40,0:09:43.23,Main,,0000,0000,0000,,!أنت
Dialogue: 0,0:09:43.44,0:09:44.82,Main,,0000,0000,0000,,!ما الغاية من الصّعود للأعلى؟
Dialogue: 0,0:09:45.11,0:09:48.15,Main,,0000,0000,0000,,!سنفقد طريق هروبنا إن حاصرونا هنالك في الأعلى
Dialogue: 0,0:09:48.15,0:09:49.19,Main,,0000,0000,0000,,!لا بأس
Dialogue: 0,0:09:49.32,0:09:51.15,Main,,0000,0000,0000,,!هذا الطّريق الصّحيح
Dialogue: 0,0:09:51.73,0:09:52.78,Main,,0000,0000,0000,,!كيف ذلك؟
Dialogue: 0,0:09:53.03,0:09:53.65,Main,,0000,0000,0000,,!أنت
Dialogue: 0,0:09:59.53,0:10:01.73,Main,,0000,0000,0000,,!وجدته! ذلك هو طريقنا المختصر
Dialogue: 0,0:10:12.90,0:10:14.90,Main,,0000,0000,0000,,ما الغاية من هذا؟
Dialogue: 0,0:10:16.32,0:10:19.23,Main,,0000,0000,0000,,.سرقت الكلام من طرف لساني يا كيريساكي-سان
Dialogue: 0,0:10:19.61,0:10:21.15,Main,,0000,0000,0000,,أو بالأحرى شينوبي قرية الورق؟
Dialogue: 0,0:10:22.98,0:10:25.94,Main,,0000,0000,0000,,.لا تستهن بشبكة معلوماتي
Dialogue: 0,0:10:26.28,0:10:29.32,Main,,0000,0000,0000,,وجد شخص فاطن للغاية كيريساكي الحقيقيّ نائمًا
Dialogue: 0,0:10:29.40,0:10:32.19,Main,,0000,0000,0000,,.في بيت مهجور
Dialogue: 0,0:10:32.19,0:10:33.19,Main,,0000,0000,0000,,.فهمت
Dialogue: 0,0:10:33.61,0:10:34.82,Main,,0000,0000,0000,,!—من بين الجميع
Dialogue: 0,0:10:35.86,0:10:37.40,Main,,0000,0000,0000,,.لا تغضب عليّ
Dialogue: 0,0:10:39.65,0:10:43.98,Main,,0000,0000,0000,,.هؤلاء الأشخاص لا يهتمّون بأيّ شيء... إن عرضت عليهم المال
Dialogue: 0,0:10:45.07,0:10:46.32,Main,,0000,0000,0000,,!آمل أنّك جاهز
Dialogue: 0,0:10:48.03,0:10:51.19,Main,,0000,0000,0000,,
Dialogue: 0,0:10:56.32,0:10:58.11,Main,,0000,0000,0000,,!معلّم، من هنا
Dialogue: 0,0:11:01.28,0:11:02.61,Main,,0000,0000,0000,,!شكرًا! لننسحب
Dialogue: 0,0:11:02.78,0:11:03.32,Main,,0000,0000,0000,,!نعم
Dialogue: 0,0:11:03.98,0:11:05.11,Main,,0000,0000,0000,,!لا تدعوهما يهربان
Dialogue: 0,0:11:11.57,0:11:13.15,Main,,0000,0000,0000,,!من أين أتى كلّ أولئك؟
Dialogue: 0,0:11:13.48,0:11:14.61,Main,,0000,0000,0000,,.هذا سيّئ
Dialogue: 0,0:11:14.69,0:11:16.19,Main,,0000,0000,0000,,!نحن محاصرون بالكامل
Dialogue: 0,0:11:23.32,0:11:25.11,Main,,0000,0000,0000,,!مرحبًا
Dialogue: 0,0:11:27.23,0:11:27.98,Main,,0000,0000,0000,,!ماذا؟
Dialogue: 0,0:11:29.82,0:11:31.82,Main,,0000,0000,0000,,!اقفزا
Dialogue: 0,0:11:34.53,0:11:35.69,Main,,0000,0000,0000,,!منطاد؟
Dialogue: 0,0:11:35.82,0:11:37.15,Main,,0000,0000,0000,,...لا تقل لي
Dialogue: 0,0:11:37.15,0:11:39.40,Main,,0000,0000,0000,,!أنّه سرقه؟
Dialogue: 0,0:11:56.98,0:11:59.90,Main,,0000,0000,0000,,{\pos(523.8,88.4)\c&H432E53&\3c&H57A0B4&\4c&H57A0B4&}دفّة
Dialogue: 0,0:11:56.98,0:11:59.90,Main,,0000,0000,0000,,.استولينا على منطاد بدون طيّار كان مرسيًّا
Dialogue: 0,0:12:00.15,0:12:01.86,Main,,0000,0000,0000,,.كانت فكرة بوروتو
Dialogue: 0,0:12:02.23,0:12:05.15,Main,,0000,0000,0000,,!لا يسعني سوى أن أعترف بتفكيرك السّريع
Dialogue: 0,0:12:06.94,0:12:09.28,Main,,0000,0000,0000,,لا يهمّ أيّ رائح تفوح منّي وأنا على هذا الارتفاع، صحيح؟
Dialogue: 0,0:12:09.90,0:12:11.28,Main,,0000,0000,0000,,،كما أنّنا نستطيع البحث عن الجناة
Dialogue: 0,0:12:11.36,0:12:12.78,Main,,0000,0000,0000,,!لذا فنحن نصطاد عصفورين بحجر واحد
Dialogue: 0,0:12:21.24,0:12:24.41,Main,,0000,0000,0000,,.إن استطعتنا المواصلة هكذا، سنخرج من القرية قريبًا
Dialogue: 0,0:12:24.87,0:12:25.99,Main,,0000,0000,0000,,...السّؤال الأهمّ
Dialogue: 0,0:12:26.08,0:12:29.41,Main,,0000,0000,0000,,بأيّ اتّجاه ذهب أولئك الأشخاص الّذين سرقوا خلايا هاشيراما؟
Dialogue: 0,0:12:29.62,0:12:31.49,Main,,0000,0000,0000,,.أنا واثق أنّهم لم يهربوا بعيدًا
Dialogue: 0,0:12:32.08,0:12:34.62,Main,,0000,0000,0000,,!سنعثر عليهم إن بحثنا عنهم من هذا المنطاد
Dialogue: 0,0:12:34.99,0:12:38.37,Main,,0000,0000,0000,,.أظنّ أنّ هذا خيارنا الوحيد بما أنّنا لا نملك دلائل أخرى
Dialogue: 0,0:12:40.53,0:12:41.24,Main,,0000,0000,0000,,!ما كان ذلك؟
Dialogue: 0,0:12:44.58,0:12:46.20,Main,,0000,0000,0000,,!ثمّة دخان يتصاعد من المروحة الّتي على اليسار
Dialogue: 0,0:12:46.74,0:12:47.78,Main,,0000,0000,0000,,!إنّهم هم
Dialogue: 0,0:12:51.49,0:12:52.62,Main,,0000,0000,0000,,!ما ذلك؟
Dialogue: 0,0:12:56.99,0:12:57.83,Main,,0000,0000,0000,,!أسقطوها
Dialogue: 0,0:13:08.74,0:13:09.91,Main,,0000,0000,0000,,أيمكنك الارتفاع أكثر؟
Dialogue: 0,0:13:10.28,0:13:12.33,Main,,0000,0000,0000,,!لا أستطيع بما أنّ هيكل المنطاد يحترق
Dialogue: 0,0:13:10.28,0:13:13.70,Main,,0000,0000,0000,,{\an4\c&H59A0B5&\3c&H1C3460&\4c&H1C3460&}دفّة
Dialogue: 0,0:13:12.33,0:13:13.70,Main,,0000,0000,0000,,!سوف ينفجر
Dialogue: 0,0:13:17.24,0:13:18.33,Main,,0000,0000,0000,,!لا تدعوهم يفرّون
Dialogue: 0,0:13:22.41,0:13:23.28,Main,,0000,0000,0000,,!لا أستطيع كبحه أكثر
Dialogue: 0,0:13:23.62,0:13:24.41,Main,,0000,0000,0000,,!فقط القليل بعد
Dialogue: 0,0:13:24.49,0:13:26.37,Main,,0000,0000,0000,,!نكاد نخرج من القرية
Dialogue: 0,0:13:51.37,0:13:52.24,Main,,0000,0000,0000,,هل الجميع بخير؟
Dialogue: 0,0:13:54.33,0:13:56.12,Main,,0000,0000,0000,,.ما زلنا سليمين بطريقة ما
Dialogue: 0,0:13:56.58,0:13:58.62,Main,,0000,0000,0000,,...كان ليكون من الرّائع إن خرجنا من القرية على الأقلّ، لكن
Dialogue: 0,0:14:00.45,0:14:01.99,Main,,0000,0000,0000,,.لا يبدو أنّ ذلك سيحدث
Dialogue: 0,0:14:24.41,0:14:26.24,Main,,0000,0000,0000,,ألم يبقَ لنا خيار آخر عدا القتال؟
Dialogue: 0,0:14:26.24,0:14:28.08,Main,,0000,0000,0000,,!...لكن كلّ هؤلاء
Dialogue: 0,0:14:28.28,0:14:29.41,Main,,0000,0000,0000,,!رفاق
Dialogue: 0,0:14:30.33,0:14:31.33,Main,,0000,0000,0000,,!من هنا
Dialogue: 0,0:14:35.08,0:14:35.99,Main,,0000,0000,0000,,...أنت
Dialogue: 0,0:14:38.37,0:14:40.12,Main,,0000,0000,0000,,!أنت ذلك الشقيّ من السّوق السّوداء
Dialogue: 0,0:14:42.28,0:14:44.20,Main,,0000,0000,0000,,!من يهتمّ لمن أكون؟ أسرعوا فحسب
Dialogue: 0,0:14:57.33,0:14:59.20,Main,,0000,0000,0000,,!لم أعلم بوجود ممرّ كهذا تحت القرية
Dialogue: 0,0:14:59.37,0:15:02.24,Main,,0000,0000,0000,,.إنّه نظام صرف صحيّ مهجور على الأغلب
Dialogue: 0,0:15:02.41,0:15:04.03,Main,,0000,0000,0000,,.يمكنكم الاطمئنان الآن
Dialogue: 0,0:15:04.12,0:15:06.53,Main,,0000,0000,0000,,.لا يعرف الكبار شيئًا عن هذا المكان
Dialogue: 0,0:15:07.03,0:15:10.24,Main,,0000,0000,0000,,لمَ تساعدنا؟
Dialogue: 0,0:15:10.33,0:15:13.12,Main,,0000,0000,0000,,.ذلك لأنّني مدين لكم... بالكثير
Dialogue: 0,0:15:13.24,0:15:14.24,Main,,0000,0000,0000,,مدين لنا؟
Dialogue: 0,0:15:14.33,0:15:16.53,Main,,0000,0000,0000,,.اسألوا صديقكم بشأن التّفاصيل
Dialogue: 0,0:15:17.24,0:15:18.33,Main,,0000,0000,0000,,صديقنا؟
Dialogue: 0,0:15:22.24,0:15:23.87,Main,,0000,0000,0000,,.وصلنا. هذا هو المكان
Dialogue: 0,0:15:28.91,0:15:29.53,Main,,0000,0000,0000,,.أهلًا
Dialogue: 0,0:15:29.78,0:15:30.66,Main,,0000,0000,0000,,!ميتسكي
Dialogue: 0,0:15:30.74,0:15:31.66,Main,,0000,0000,0000,,!كيف—؟
Dialogue: 0,0:15:33.08,0:15:34.20,Main,,0000,0000,0000,,!تحسّن حالك الآن؟
Dialogue: 0,0:15:34.41,0:15:36.28,Main,,0000,0000,0000,,.أجل، أنا بخير الآن
Dialogue: 0,0:15:36.41,0:15:37.20,Main,,0000,0000,0000,,!حمدًا لهذا
Dialogue: 0,0:15:37.33,0:15:38.95,Main,,0000,0000,0000,,!كنّا قلقين جدًّا
Dialogue: 0,0:15:39.66,0:15:41.70,Main,,0000,0000,0000,,لكن لمَ أنت هنا؟
Dialogue: 0,0:15:42.16,0:15:44.53,Main,,0000,0000,0000,,.أسرعت بالمجيء فور أن أتيحت لي الفرصة
Dialogue: 0,0:15:45.49,0:15:46.37,Main,,0000,0000,0000,,.معها
Dialogue: 0,0:15:49.03,0:15:50.70,Main,,0000,0000,0000,,!كنتِ الفتاة الّتي في المشفى
Dialogue: 0,0:15:51.33,0:15:53.28,Main,,0000,0000,0000,,!شفي كلاكما
Dialogue: 0,0:15:53.58,0:15:54.58,Main,,0000,0000,0000,,!حمدًا لهذا
Dialogue: 0,0:15:55.24,0:15:59.37,Main,,0000,0000,0000,,!أخبرت أخي أنّه خاطر بحياته من أجل إنقاذ حياتي
Dialogue: 0,0:15:59.99,0:16:01.33,Main,,0000,0000,0000,,.كونا أختي الصّغيرة
Dialogue: 0,0:16:02.28,0:16:04.41,Main,,0000,0000,0000,,.شكرًا لكم على حمايتها
Dialogue: 0,0:16:06.99,0:16:10.87,Main,,0000,0000,0000,,...الشّخص الّذي تركها على عتبة مشفى يوبينا-سان
Dialogue: 0,0:16:11.28,0:16:11.91,Main,,0000,0000,0000,,!كان أنا
Dialogue: 0,0:16:12.28,0:16:14.58,Main,,0000,0000,0000,,.لم أملك خيارًا آخر... بما أنّني لا أستطيع دفع رسوم علاجها
Dialogue: 0,0:16:15.20,0:16:17.95,Main,,0000,0000,0000,,.لقد أنقذتم حياتي جميعًا
Dialogue: 0,0:16:18.33,0:16:20.37,Main,,0000,0000,0000,,.هذه هي الصّلة إذًا
Dialogue: 0,0:16:20.49,0:16:21.95,Main,,0000,0000,0000,,.تحصد ما تزرعه
Dialogue: 0,0:16:22.03,0:16:24.53,Main,,0000,0000,0000,,.الخير الّذي تفعله للآخرين هو خيرٌ تفعله لنفسك
Dialogue: 0,0:16:25.91,0:16:26.49,Main,,0000,0000,0000,,
Dialogue: 0,0:16:28.66,0:16:31.37,Main,,0000,0000,0000,,.رائحتك غريبة يا بوروتو
Dialogue: 0,0:16:32.24,0:16:34.78,Main,,0000,0000,0000,,...حدثت الكثير من الأمور. الكثير
Dialogue: 0,0:16:37.28,0:16:38.28,Main,,0000,0000,0000,,.دعونا نقيّم وضعنا
Dialogue: 0,0:16:38.87,0:16:42.08,Main,,0000,0000,0000,,من خدعنا وهرب بخلايا هاشيراما
Dialogue: 0,0:16:42.16,0:16:44.03,Main,,0000,0000,0000,,كان أولئك المتشبّهين بالشّينوبي، صحيح؟
Dialogue: 0,0:16:44.37,0:16:45.20,Main,,0000,0000,0000,,.أجل
Dialogue: 0,0:16:45.28,0:16:47.20,Main,,0000,0000,0000,,.أذكر رؤية تلك الأقراط
Dialogue: 0,0:16:52.37,0:16:56.37,Main,,0000,0000,0000,,.كانوا متنكّرين عندما التقينا كيريساكي في الحانة
Dialogue: 0,0:16:56.41,0:16:59.53,Main,,0000,0000,0000,,إذًا كنّا مراقبين مذّاك الحين؟
Dialogue: 0,0:16:59.87,0:17:00.78,Main,,0000,0000,0000,,.غالبًا
Dialogue: 0,0:17:01.20,0:17:04.70,Main,,0000,0000,0000,,استخدموا طريقةً ما لتجاوز الحراسة المحكمة
Dialogue: 0,0:17:05.08,0:17:06.87,Main,,0000,0000,0000,,...وسبقونا بخطوة ثمّ
Dialogue: 0,0:17:06.95,0:17:08.99,Main,,0000,0000,0000,,قتلوا محظيّة القلعة...
Dialogue: 0,0:17:09.08,0:17:10.91,Main,,0000,0000,0000,,.وسرقوا خلايا هاشيراما
Dialogue: 0,0:17:11.70,0:17:14.28,Main,,0000,0000,0000,,لا ندري حتّى من أيّ قرية هم، صحيح؟
Dialogue: 0,0:17:15.45,0:17:17.83,Main,,0000,0000,0000,,.هذا الدّليل الوحيد الّذي نملك
Dialogue: 0,0:17:24.24,0:17:26.41,Main,,0000,0000,0000,,.قد يأتي بفائدة في ملاحقة الجناة
Dialogue: 0,0:17:27.20,0:17:29.24,Main,,0000,0000,0000,,،لكن يا رفاق، بينما نقوم نحن بهذا
Dialogue: 0,0:17:29.33,0:17:31.91,Main,,0000,0000,0000,,ألا يمكن أنّهم يغادرون أرض الصّمت؟
Dialogue: 0,0:17:32.20,0:17:35.20,Main,,0000,0000,0000,,،بشأن ذلك، أخبرتني يوبينا-سان أنّ خلايا هاشيراما غير مستقرّة
Dialogue: 0,0:17:35.20,0:17:37.33,Main,,0000,0000,0000,,،وعندما تتأرجح
Dialogue: 0,0:17:37.41,0:17:40.28,Main,,0000,0000,0000,,.ثمّة احتمال كبير أن تخرج عن السّيطرة
Dialogue: 0,0:17:40.74,0:17:43.37,Main,,0000,0000,0000,,إذًا لا يمكنك الإسراع وأنت تتعامل معها؟
Dialogue: 0,0:17:43.45,0:17:44.37,Main,,0000,0000,0000,,.فهمت
Dialogue: 0,0:17:44.78,0:17:47.08,Main,,0000,0000,0000,,لهذا كلّفوا أنفسهم عناء
Dialogue: 0,0:17:47.16,0:17:50.20,Main,,0000,0000,0000,,.جعلنا إلهاءً. لأجل كسب الوقت
Dialogue: 0,0:17:50.78,0:17:53.20,Main,,0000,0000,0000,,لكن ألا توجد طرق عديدة للحدود؟
Dialogue: 0,0:17:53.83,0:17:55.87,Main,,0000,0000,0000,,...ما لم نعلم أيّ طريق سنسلك
Dialogue: 0,0:17:56.20,0:17:58.12,Main,,0000,0000,0000,,فسيكون إيجادهم صعبًا، صحيح؟
Dialogue: 0,0:17:59.87,0:18:02.49,Main,,0000,0000,0000,,.أظنّنا قد نستطيع المساعدة
Dialogue: 0,0:18:03.78,0:18:04.49,Main,,0000,0000,0000,,!كيف؟
Dialogue: 0,0:18:06.20,0:18:07.70,Main,,0000,0000,0000,,.راقبوا فحسب
Dialogue: 0,0:18:10.28,0:18:11.41,Main,,0000,0000,0000,,.هذا كاتانا
Dialogue: 0,0:18:11.91,0:18:13.24,Main,,0000,0000,0000,,!هل تسمعونني؟ حوّل
Dialogue: 0,0:18:16.33,0:18:18.16,Main - Italics,,0000,0000,0000,,!أسمعك بوضوح، حوّل
Dialogue: 0,0:18:18.58,0:18:19.53,Main,,0000,0000,0000,,!مذهل
Dialogue: 0,0:18:20.20,0:18:22.20,Main,,0000,0000,0000,,!هل أنتم متّصلون بهذه المسافة بأنبوب فحسب؟
Dialogue: 0,0:18:22.99,0:18:25.08,Main - Italics,,0000,0000,0000,,!أسمعك بوضوح هنا أيضًا، حوّل
Dialogue: 0,0:18:25.66,0:18:28.24,Main - Italics,,0000,0000,0000,,!قائد كاتانا! نحن جاهزون في أيّ وقف! حوّل
Dialogue: 0,0:18:29.24,0:18:31.20,Main,,0000,0000,0000,,!وهناك الكثير
Dialogue: 0,0:18:32.62,0:18:34.83,Main,,0000,0000,0000,,ثمّة أمّة أخرى منتشرة تحت الأرض
Dialogue: 0,0:18:34.91,0:18:36.24,Main,,0000,0000,0000,,!وهي تعود لنا فقط
Dialogue: 0,0:18:37.49,0:18:39.03,Main,,0000,0000,0000,,.اسمعوا، هذه مهمّة
Dialogue: 0,0:18:39.53,0:18:43.62,Main,,0000,0000,0000,,.احصلوا لي على معلومات عن مشبوهين يرتدون أقراطًا
Dialogue: 0,0:18:43.78,0:18:45.83,Main,,0000,0000,0000,,.يجدر أنّهم متّجهون خارج القرية
Dialogue: 0,0:18:46.83,0:18:47.99,Main - Italics,,0000,0000,0000,,!عُلم
Dialogue: 0,0:18:48.83,0:18:49.99,Main,,0000,0000,0000,,
Dialogue: 0,0:18:50.37,0:18:51.24,Main,,0000,0000,0000,,.انتظروا وسترون
Dialogue: 0,0:18:51.33,0:18:53.33,Main,,0000,0000,0000,,.سنجدهم بكلّ سهولة
Dialogue: 0,0:18:55.24,0:18:56.62,Main - Italics,,0000,0000,0000,,!تقرير شهود
Dialogue: 0,0:18:56.91,0:18:59.95,Main - Italics,,0000,0000,0000,,.ثمّة شهود رأوا ثلاثيًّا يرتدون أقراطًا
Dialogue: 0,0:19:00.03,0:19:00.78,Main,,0000,0000,0000,,أرأيتم؟
Dialogue: 0,0:19:00.99,0:19:03.53,Main - Italics,,0000,0000,0000,,.كانوا يسلكون طريقًا داخليًّا يقود إلى الحدود على الأغلب
Dialogue: 0,0:19:04.24,0:19:05.33,Main,,0000,0000,0000,,!حسنًا
Dialogue: 0,0:19:05.91,0:19:07.62,Main,,0000,0000,0000,,!هذا مبهر حقًّا
Dialogue: 0,0:19:07.95,0:19:10.37,Main,,0000,0000,0000,,،فضلًا عن ذلك، إن استطعنا استخدام ممرّ تحأرضيّ
Dialogue: 0,0:19:10.45,0:19:11.91,Main,,0000,0000,0000,,.بإمكاننا ملاحقتهم بسلوك أقصر طريق
Dialogue: 0,0:19:12.41,0:19:14.33,Main,,0000,0000,0000,,.هكذا أتينا إلى هنا أيضًا
Dialogue: 0,0:19:14.53,0:19:17.28,Main,,0000,0000,0000,,.أجل، نملك مخارجَ في كلّ مكان
Dialogue: 0,0:19:17.91,0:19:19.91,Main,,0000,0000,0000,,.لا نستطيع شكركم بما يكفي
Dialogue: 0,0:19:20.33,0:19:22.37,Main,,0000,0000,0000,,!أجل، شكرًا لكم
Dialogue: 0,0:19:22.49,0:19:24.03,Main,,0000,0000,0000,,!لا عليكم
Dialogue: 0,0:19:24.20,0:19:26.08,Main,,0000,0000,0000,,هذا أقلّ ما يمكنني فعله
Dialogue: 0,0:19:26.16,0:19:28.45,Main,,0000,0000,0000,,.لأردّ لكم المعروف الّذي أدين لكم وأختي به
Dialogue: 0,0:19:29.20,0:19:31.20,Main,,0000,0000,0000,,!لنسرع! سأقودكم إلى حافّة الحدود
Dialogue: 0,0:19:32.53,0:19:34.58,Main,,0000,0000,0000,,!توخّوا الحذر يا أختي وإخواني
Dialogue: 0,0:19:51.12,0:19:53.08,Main,,0000,0000,0000,,.مذاقه كالرّمل تمامًا
Dialogue: 0,0:20:03.95,0:20:06.91,Main,,0000,0000,0000,,...قطعتُ كلّ المسافة إلى الضّواحي
Dialogue: 0,0:20:07.24,0:20:09.45,Main,,0000,0000,0000,,.أظنّني أستحقّ أن أحظى بمزيد من المرح
Dialogue: 0,0:20:12.53,0:20:14.24,Main,,0000,0000,0000,,!شكرًا على الوجبة
Dialogue: 0,0:20:28.70,0:20:30.74,Main,,0000,0000,0000,,.هنا سنودّعك يا كاتارا
Dialogue: 0,0:20:31.24,0:20:32.24,Main,,0000,0000,0000,,.نحن مدينون لك
Dialogue: 0,0:20:32.53,0:20:35.08,Main,,0000,0000,0000,,!أجل! بالتّوفيق! لا تموتوا
Dialogue: 0,0:20:38.41,0:20:40.33,Main,,0000,0000,0000,,!إنّهم أطفال بهمّة عالية
Dialogue: 0,0:20:40.45,0:20:41.24,Main,,0000,0000,0000,,!صحيح
Dialogue: 0,0:20:41.41,0:20:44.37,Main,,0000,0000,0000,,.والآن، حان دورنا لملاحقتهم
Dialogue: 0,0:20:44.91,0:20:46.53,Main,,0000,0000,0000,,.لا نملك وقتًا نضيّعه
Dialogue: 0,0:20:47.33,0:20:50.66,Main,,0000,0000,0000,,.سننقسم ونتعقّب الأشخاص الّذين سرقوا خلايا هاشيراما
Dialogue: 0,0:20:51.20,0:20:52.91,Main,,0000,0000,0000,,!ستتولّون التعقّب أنتم الثّلاثة معًا
Dialogue: 0,0:20:53.28,0:20:56.24,Main,,0000,0000,0000,,.استدعوا الدّعم فور أن تجدوا دليلًا
Dialogue: 0,0:20:57.03,0:20:58.83,Main,,0000,0000,0000,,.سأكرّر هذا، لكن لا تقاتلوهم لوحدكم
Dialogue: 0,0:20:59.03,0:21:00.28,Main,,0000,0000,0000,,!أجل، نعلم
Dialogue: 0,0:21:00.95,0:21:02.20,Main,,0000,0000,0000,,!راقب فحسب
Dialogue: 0,0:21:02.20,0:21:03.66,Main,,0000,0000,0000,,!سألحق بهم
Dialogue: 0,0:21:04.83,0:21:05.95,Main,,0000,0000,0000,,!هيّا بنا يا موغينو
Dialogue: 0,0:21:06.24,0:21:06.87,Main,,0000,0000,0000,,.أجل
Dialogue: 0,0:21:08.20,0:21:10.08,Main,,0000,0000,0000,,!لنجدهم يا بوروتو، ميتسكي
Dialogue: 0,0:21:10.24,0:21:11.28,Main,,0000,0000,0000,,!أجل
Dialogue: 0,0:21:16.41,0:21:18.41,Main,,0000,0000,0000,,...تعقّب... تعقّب
Dialogue: 0,0:21:18.95,0:21:20.58,Main,,0000,0000,0000,,،على أيّ حال، بعد وصولنا إلى هذا الحدّ
Dialogue: 0,0:21:20.66,0:21:22.58,Main,,0000,0000,0000,,.يبدو أنّنا لسنا بحاجة للقلق بشأن ملاحقة الغير لنا
Dialogue: 0,0:21:22.70,0:21:24.03,Main,,0000,0000,0000,,!لا ترخِ دفاعك
Dialogue: 0,0:21:24.08,0:21:25.53,Main,,0000,0000,0000,,ثمّة شينوبي من دول أخرى
Dialogue: 0,0:21:25.62,0:21:27.20,Main,,0000,0000,0000,,.يحاولون الحصول على خلايا هاشيراما أيضًا
Dialogue: 0,0:21:27.45,0:21:28.87,Main,,0000,0000,0000,,!أدري ذلك
Dialogue: 0,0:21:36.20,0:21:37.20,Main,,0000,0000,0000,,!بوروتو! سارادا
Dialogue: 0,0:21:43.45,0:21:44.20,Main,,0000,0000,0000,,أسلوب البرق؟
Dialogue: 0,0:21:44.37,0:21:45.58,Main,,0000,0000,0000,,!ما كان ذلك فجأةً؟
Dialogue: 0,0:21:50.53,0:21:52.08,Main,,0000,0000,0000,,من هم؟
Dialogue: 0,0:23:27.11,0:23:29.03,Main,,0000,0000,0000,,،مع أنّنا لا نملك خلايا هاشيراما
Dialogue: 0,0:23:29.11,0:23:31.20,Main,,0000,0000,0000,,!إلّا أنّ النّاس يستمرّون في استهدافنا! من هم؟
Dialogue: 0,0:23:31.24,0:23:32.24,Main,,0000,0000,0000,,.لا أدري
Dialogue: 0,0:23:32.32,0:23:35.07,Main,,0000,0000,0000,,.لكن من الواضح أنّهم يلاحقوننا
Dialogue: 0,0:23:35.24,0:23:36.57,Main,,0000,0000,0000,,!—سحقًا! على هذا الحال
Dialogue: 0,0:23:36.66,0:23:39.28,Main,,0000,0000,0000,,.علينا أن نهزمهم، وإلّا لن نستطيع التقدّم
Dialogue: 0,0:23:39.70,0:23:40.82,Main,,0000,0000,0000,,بوروتو! ما العمل؟
Dialogue: 0,0:23:41.20,0:23:44.11,Main,,0000,0000,0000,,:في الحلقة القادمة
Dialogue: 0,0:23:44.20,0:23:45.36,Main,,0000,0000,0000,,الملاحِقون
Dialogue: 0,0:23:44.20,0:23:53.82,nxt ep title,,0000,0000,0000,,{\blur3\fad(300,000)}الملاحِقون\N\N
Dialogue: 0,0:23:45.70,0:23:47.24,Main,,0000,0000,0000,,علينا إنهاء هذا بسرعة
Dialogue: 0,0:23:47.32,0:23:49.53,Main,,0000,0000,0000,,!واللّحاق بالثّلاثيّ ذوي الأقراط
