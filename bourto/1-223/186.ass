Dialogue: 0,0:01:34.98,0:01:39.88,ep title,,0000,0000,0000,,{\fad(300,500)}{\blur4\shad3\bord3\}كيف تستخدمها
Dialogue: 0,0:01:46.25,0:01:49.48,Main,,0000,0000,0000,,سيّدي الصّغير... هل أنت بخير حقًّا؟
Dialogue: 0,0:01:49.95,0:01:50.65,Main,,0000,0000,0000,,.أجل
Dialogue: 0,0:01:50.78,0:01:53.12,Main,,0000,0000,0000,,!عليك وتشامارو الاختباء هناك
Dialogue: 0,0:01:53.22,0:01:54.12,Main,,0000,0000,0000,,.مفهوم
Dialogue: 0,0:01:56.58,0:01:57.82,Main,,0000,0000,0000,,كيف يبدو الوضع يا ميتسكي؟
Dialogue: 0,0:02:07.05,0:02:09.02,Main,,0000,0000,0000,,.ليس بعد. لا أراه
Dialogue: 0,0:02:09.62,0:02:11.48,Main,,0000,0000,0000,,،مع أنّه ما عاد يملك البياكوغان
Dialogue: 0,0:02:11.55,0:02:14.05,Main,,0000,0000,0000,,.فمن الواضح أنّه ما زال محاربًا قويًّا
Dialogue: 0,0:02:14.68,0:02:16.08,Main,,0000,0000,0000,,!لا تهملوا دفاعكم
Dialogue: 0,0:02:16.35,0:02:17.15,Main,,0000,0000,0000,,!حاضر
Dialogue: 0,0:02:17.48,0:02:18.62,Main,,0000,0000,0000,,!بالطّبع لا
Dialogue: 0,0:02:19.12,0:02:21.02,Main,,0000,0000,0000,,...بعد ما فعله لموغينو-سان
Dialogue: 0,0:02:22.75,0:02:27.62,Main - flashback,,0000,0000,0000,,.شعرتُ بالغيرة لطريقة إتمامك وعيشك لحياة شينوبي
Dialogue: 0,0:02:28.48,0:02:29.48,Main - flashback,,0000,0000,0000,,.أنت مخطئ
Dialogue: 0,0:02:30.25,0:02:31.78,Main - flashback,,0000,0000,0000,,.أنا لستُ شينوبي
Dialogue: 0,0:02:36.68,0:02:37.75,Main - flashback,,0000,0000,0000,,.أنا أداة
Dialogue: 0,0:02:39.95,0:02:40.78,Main,,0000,0000,0000,,...بوروتو
Dialogue: 0,0:02:41.28,0:02:44.98,Main,,0000,0000,0000,,.قال آو أنّه تخلّى عن كونه شينوبي وأصبح أداةً
Dialogue: 0,0:02:45.78,0:02:49.15,Main,,0000,0000,0000,,!إذًا، علينا أن نهزمه بقوّتنا كشينوبي
Dialogue: 0,0:02:50.55,0:02:52.12,Main,,0000,0000,0000,,!آو قادم من هذا الاتّجاه
Dialogue: 0,0:03:05.12,0:03:06.98,Main,,0000,0000,0000,,أيعتبرون هذا اختباءً؟
Dialogue: 0,0:03:08.28,0:03:11.42,Main,,0000,0000,0000,,.إلّا أنّهم يبدون جادّين لتسوية الأمر هنا والآن
Dialogue: 0,0:03:15.75,0:03:17.32,Main,,0000,0000,0000,,!اخرجوا
Dialogue: 0,0:03:32.72,0:03:34.42,Main,,0000,0000,0000,,!أسلوب البرق: برق الأفعى
Dialogue: 0,0:03:50.88,0:03:51.72,Main,,0000,0000,0000,,!—لن تهرب
Dialogue: 0,0:03:51.78,0:03:53.62,Main,,0000,0000,0000,,!أسلوب النّار: النّيازك الملتهبة
Dialogue: 0,0:03:54.58,0:03:55.18,Main,,0000,0000,0000,,!—أيّها الـ
Dialogue: 0,0:04:04.08,0:04:06.95,Main - Italics,,0000,0000,0000,,.يشنّون هجمات متتالية دون اعتبار لاستنزاف التشّاكرا
Dialogue: 0,0:04:07.35,0:04:08.75,Main - Italics,,0000,0000,0000,,.إنّهم يدبّرون أمرًا
Dialogue: 0,0:04:25.32,0:04:25.98,Main,,0000,0000,0000,,!خلفك
Dialogue: 0,0:04:29.85,0:04:32.42,Main,,0000,0000,0000,,أدوات النّينجا العلميّة الّتي يصنعها \N.الدّكتور كاتاسكي استثنائيّة حقًّا
Dialogue: 0,0:04:32.95,0:04:34.95,Main,,0000,0000,0000,,!إنّها تصمد طويلًا حقًّا
Dialogue: 0,0:04:39.28,0:04:41.05,Main,,0000,0000,0000,,
Dialogue: 0,0:04:44.52,0:04:46.25,Main,,0000,0000,0000,,!أسلوب النّار: تقنية كرة النّار
Dialogue: 0,0:04:47.22,0:04:48.75,Main,,0000,0000,0000,,لا تفهمون فحسب، أليس كذلك؟
Dialogue: 0,0:04:50.28,0:04:51.42,Main,,0000,0000,0000,,!الآن يا ميتسكي
Dialogue: 0,0:04:51.48,0:04:52.08,Main,,0000,0000,0000,,!حاضر
Dialogue: 0,0:05:03.35,0:05:04.38,Main,,0000,0000,0000,,!لنضربه بالتّرادف
Dialogue: 0,0:05:04.45,0:05:04.98,Main,,0000,0000,0000,,!أجل
Dialogue: 0,0:05:18.65,0:05:20.32,Main - Italics,,0000,0000,0000,,.أعلم ماذا تفعلون
Dialogue: 0,0:05:20.88,0:05:25.18,Main - Italics,,0000,0000,0000,,.ينبغي أن تعرفوا أنّ مثل هذه الهجمات لا تكفي لإطاحتي
Dialogue: 0,0:05:26.08,0:05:28.55,Main - Italics,,0000,0000,0000,,.ما يعني أنّ هذا إلهاء
Dialogue: 0,0:05:32.98,0:05:35.02,Main - Italics,,0000,0000,0000,,.لا أرى الشّقيّ ابن الهوكاغي
Dialogue: 0,0:05:36.88,0:05:40.12,Main - Italics,,0000,0000,0000,,هل أخذ الدّكتور كاتاسكي وهرب؟
Dialogue: 0,0:05:41.65,0:05:44.15,Main - Italics,,0000,0000,0000,,.كلّا، بل العكس
Dialogue: 0,0:05:44.82,0:05:47.38,Main - Italics,,0000,0000,0000,,!إنّه نقطة الارتكاز الّتي تستند إليها خطّتهم
Dialogue: 0,0:05:48.15,0:05:51.15,Main - Italics,,0000,0000,0000,,.لا بدّ أنّه في نقطتي العمياء يتربّص فرصةً للهجوم
Dialogue: 0,0:05:52.98,0:05:55.25,Main - Italics,,0000,0000,0000,,!اخرج يا أوزوماكي بوروتو
Dialogue: 0,0:05:56.85,0:05:58.55,Main - Italics,,0000,0000,0000,,!أنا من سيجعلك ضحيّته
Dialogue: 0,0:05:59.98,0:06:01.22,Main - Italics,,0000,0000,0000,,...عليك أن تظهر
Dialogue: 0,0:06:01.28,0:06:03.35,Main - Italics,,0000,0000,0000,,قبل أن يستنزف أصدقاؤك كامل قوّتهم، أليس كذلك؟
Dialogue: 0,0:06:04.65,0:06:05.58,Main - Italics,,0000,0000,0000,,!هيّا
Dialogue: 0,0:06:06.12,0:06:07.08,Main - Italics,,0000,0000,0000,,من الجانب؟
Dialogue: 0,0:06:07.15,0:06:08.22,Main - Italics,,0000,0000,0000,,أم الوراء؟
Dialogue: 0,0:06:08.28,0:06:09.32,Main - Italics,,0000,0000,0000,,...أو ربّما
Dialogue: 0,0:06:09.38,0:06:10.58,Main - Italics,,0000,0000,0000,,من الأعلى؟
Dialogue: 0,0:06:40.58,0:06:41.98,Main,,0000,0000,0000,,.يا للأسف
Dialogue: 0,0:06:42.95,0:06:46.08,Main,,0000,0000,0000,,.كشفتُ خطّتكم بالكامل
Dialogue: 0,0:06:53.58,0:06:54.35,Main,,0000,0000,0000,,!ماذا؟
Dialogue: 0,0:06:55.48,0:06:58.72,Main,,0000,0000,0000,,.كلّا، لا تدري شيئًا
Dialogue: 0,0:07:01.02,0:07:02.48,Main,,0000,0000,0000,,نسخة ظلّ؟
Dialogue: 0,0:07:06.32,0:07:08.32,Main,,0000,0000,0000,,مـ-ما هذا الشّيء؟
Dialogue: 0,0:07:09.15,0:07:10.72,Main,,0000,0000,0000,,...إنّ أداة النّينجا العلميّة
Dialogue: 0,0:07:11.52,0:07:14.18,Main,,0000,0000,0000,,!تستنزف قوّتي
Dialogue: 0,0:07:22.45,0:07:23.38,Main,,0000,0000,0000,,!ميتسكي
Dialogue: 0,0:07:23.45,0:07:24.22,Main,,0000,0000,0000,,!أنا بخير
Dialogue: 0,0:07:25.08,0:07:26.05,Main,,0000,0000,0000,,!سحقًا
Dialogue: 0,0:07:28.05,0:07:29.98,Main,,0000,0000,0000,,!يبدو أنّك قوّتك قد خارت
Dialogue: 0,0:07:31.38,0:07:33.02,Main,,0000,0000,0000,,!كما أنّ حركاتك صارت أبطأ
Dialogue: 0,0:07:33.62,0:07:35.05,Main - Italics,,0000,0000,0000,,.نلت منّي يا فتى
Dialogue: 0,0:07:35.65,0:07:39.55,Main,,0000,0000,0000,,!لكنّ هذا لا يغيّر من حقيقة أنّ تقنيّتك لن تفلح عليّ
Dialogue: 0,0:07:52.12,0:07:53.38,Main,,0000,0000,0000,,!راسينغان
Dialogue: 0,0:08:10.82,0:08:14.52,Main,,0000,0000,0000,,باختصار، هذه جيتسو تمتصّ الجيتسو، صحيح؟
Dialogue: 0,0:08:15.65,0:08:18.62,Main,,0000,0000,0000,,.لذا ما كان عليّ سوى أن أمتصّ خاصّتك
Dialogue: 0,0:08:21.62,0:08:22.95,Main,,0000,0000,0000,,!أيّها الشّقيّ
Dialogue: 0,0:08:23.32,0:08:26.52,Main,,0000,0000,0000,,...كما كلّ شيء، الأمر يعتمد على طريقة استخدامك له
Dialogue: 0,0:08:26.92,0:08:27.65,Main,,0000,0000,0000,,أليس كذلك؟
Dialogue: 0,0:08:41.28,0:08:42.01,Main,,0000,0000,0000,,!سيّدي الصّغير
Dialogue: 0,0:08:43.18,0:08:45.28,Main,,0000,0000,0000,,.سار الأمر بخير أيّها الدّكتور كاتاسكي
Dialogue: 0,0:08:46.45,0:08:48.95,Main,,0000,0000,0000,,.لكنّي لم أتمكّن من الإجهاز عليه
Dialogue: 0,0:08:57.85,0:08:59.95,Main,,0000,0000,0000,,.ما عاد ذلك الشّيء ينفعك
Dialogue: 0,0:09:01.08,0:09:03.81,Main,,0000,0000,0000,,.لن تستطيع امتصاص الجيتسو بعد الآن
Dialogue: 0,0:09:12.81,0:09:14.05,Main,,0000,0000,0000,,!بوروتو
Dialogue: 0,0:09:31.15,0:09:31.95,Main,,0000,0000,0000,,!أخي
Dialogue: 0,0:09:32.71,0:09:33.41,Main,,0000,0000,0000,,!معلّم
Dialogue: 0,0:09:33.48,0:09:34.38,Main,,0000,0000,0000,,!أخي
Dialogue: 0,0:09:36.01,0:09:37.58,Main,,0000,0000,0000,,!لا بأس! ما زال يتنفّس
Dialogue: 0,0:09:37.61,0:09:38.71,Main,,0000,0000,0000,,!ما هذا؟
Dialogue: 0,0:09:38.78,0:09:39.98,Main,,0000,0000,0000,,!أتى ذلك من السّماء فجأةً
Dialogue: 0,0:09:50.75,0:09:51.81,Main,,0000,0000,0000,,!—تلك
Dialogue: 0,0:09:58.41,0:09:59.61,Main,,0000,0000,0000,,...نلتم منّي حقًّا
Dialogue: 0,0:10:01.11,0:10:02.81,Main,,0000,0000,0000,,ما تلك بالضّبط؟
Dialogue: 0,0:10:05.25,0:10:08.88,Main,,0000,0000,0000,,.لم أتوقّع أن ألجأ لاستخدام مرايا الدرونات هذه
Dialogue: 0,0:10:09.55,0:10:10.41,Main,,0000,0000,0000,,درونات؟
Dialogue: 0,0:10:10.81,0:10:16.25,Main,,0000,0000,0000,,يبدو أنّها أجهزة تنقل تشاكرا آو-دونو على \N.مسافات بعيدة، ما يتيح شنّ هجمات عن بعد
Dialogue: 0,0:10:16.58,0:10:19.91,Main,,0000,0000,0000,,باختصار، يمكنه أن يشنّ وابلًا من \N.قنابل الجيتسو من الأعلى كالمطر
Dialogue: 0,0:10:20.58,0:10:22.11,Main,,0000,0000,0000,,.هذا هو سلاحه السّرّيّ إذًا
Dialogue: 0,0:10:24.05,0:10:26.15,Main,,0000,0000,0000,,...أملتُ حقًّا
Dialogue: 0,0:10:27.48,0:10:29.61,Main,,0000,0000,0000,,...ألّا أضطرّ لاستخدامها، لكن
Dialogue: 0,0:10:31.75,0:10:33.75,Main,,0000,0000,0000,,.أجل، أفهم لماذا
Dialogue: 0,0:10:34.55,0:10:38.18,Main,,0000,0000,0000,,.أسلوب القتال هذا لا يشبه النّينجا بتاتًا
Dialogue: 0,0:10:40.71,0:10:42.75,Main,,0000,0000,0000,,هل تحاول استفزازي؟
Dialogue: 0,0:10:43.15,0:10:44.08,Main,,0000,0000,0000,,.ليس تمامًا
Dialogue: 0,0:10:44.91,0:10:46.91,Main,,0000,0000,0000,,.إنّه رأيي الصّريح فحسب
Dialogue: 0,0:10:47.55,0:10:52.55,Main,,0000,0000,0000,,يبدو أنّك اخترت أن تكون أداةً بيد الكارا \N.أو أيًّا كان اسمهم، بدل أن تكون شينوبي
Dialogue: 0,0:10:53.05,0:10:58.31,Main,,0000,0000,0000,,لكن يبدو لي أنّك ما زلت تملك بعض \N.المشاعر العالقة لكونك شينوبي
Dialogue: 0,0:10:59.75,0:11:01.21,Main,,0000,0000,0000,,...لقد متُّ
Dialogue: 0,0:11:02.95,0:11:04.15,Main,,0000,0000,0000,,!كشينوبي
Dialogue: 0,0:11:06.25,0:11:09.58,Main,,0000,0000,0000,,.وبفضلها، وُلدتُ من جديد
Dialogue: 0,0:11:11.51,0:11:13.18,Main,,0000,0000,0000,,،كنتُ بلا نفع
Dialogue: 0,0:11:13.25,0:11:16.58,Main,,0000,0000,0000,,.لكنّهم أعطوني قوى جديدة وأعطوا لحياتي معنى
Dialogue: 0,0:11:16.91,0:11:17.78,Main,,0000,0000,0000,,معنى؟
Dialogue: 0,0:11:18.65,0:11:20.18,Main,,0000,0000,0000,,،هذا يضع نهايةً للشّينوبي
Dialogue: 0,0:11:20.25,0:11:21.85,Main,,0000,0000,0000,,.ولقوّتهم الوضيعة والقديمة
Dialogue: 0,0:11:23.08,0:11:25.75,Main,,0000,0000,0000,,.ينبغي أن ننتقل إلى قوّة جديدة
Dialogue: 0,0:11:27.28,0:11:30.15,Main,,0000,0000,0000,,.بصفتي أداتهم، بات لحياتي معنى
Dialogue: 0,0:11:31.11,0:11:34.25,Main,,0000,0000,0000,,هل تدري لمَ مات موغينو؟
Dialogue: 0,0:11:35.41,0:11:37.15,Main,,0000,0000,0000,,.لأنّه كان يفتقر للقوّة
Dialogue: 0,0:11:37.85,0:11:39.35,Main,,0000,0000,0000,,...لو أنّه كان قويًّا
Dialogue: 0,0:11:40.05,0:11:42.25,Main,,0000,0000,0000,,.لما مات
Dialogue: 0,0:11:43.78,0:11:45.28,Main,,0000,0000,0000,,!—أيّها الـ
Dialogue: 0,0:11:46.45,0:11:50.68,Main,,0000,0000,0000,,.لا يمكن للجميع أن يصبحوا أقوياء مثل أبيك
Dialogue: 0,0:11:51.31,0:11:52.35,Main,,0000,0000,0000,,.هذا صحيح
Dialogue: 0,0:11:53.35,0:11:55.31,Main,,0000,0000,0000,,.ذلك مستحيل بالنّسبة للعديد
Dialogue: 0,0:11:55.61,0:11:58.85,Main,,0000,0000,0000,,يتكبّدون الخسائر فحسب وينتهي \N.بهم المطاف يستهلكون أنفسهم
Dialogue: 0,0:12:00.88,0:12:04.25,Main,,0000,0000,0000,,.ولهذا نحتاج إلى قوّة جديدة
Dialogue: 0,0:12:05.05,0:12:07.48,Main,,0000,0000,0000,,.ولا أهتمّ إن كانت تشبه أسلوب النّينجا أم لا
Dialogue: 0,0:12:07.68,0:12:10.01,Main,,0000,0000,0000,,.فقد تخلّيتُ عن كوني شينوبي
Dialogue: 0,0:12:10.08,0:12:13.45,Main,,0000,0000,0000,,!أنا نسل جديد من البشر، نسل بقوى جديدة
Dialogue: 0,0:12:17.21,0:12:19.11,Main,,0000,0000,0000,,!سارادا! ميتسكي! اعتنيا بالمعلّم والدّكتور
Dialogue: 0,0:12:19.18,0:12:20.85,Main,,0000,0000,0000,,!ماذا؟! انتظر يا بوروتو
Dialogue: 0,0:12:21.05,0:12:22.65,Main,,0000,0000,0000,,!دعا الأمر لي
Dialogue: 0,0:12:29.65,0:12:30.65,Main,,0000,0000,0000,,!بوروتو
Dialogue: 0,0:13:21.55,0:13:22.41,Main,,0000,0000,0000,,!نجح
Dialogue: 0,0:13:24.28,0:13:25.75,Main,,0000,0000,0000,,!أسلوب الماء: اندفاع الموجة
Dialogue: 0,0:13:41.48,0:13:45.65,Main,,0000,0000,0000,,لا يمكن لأسلوب ماء من هذا المستوى \N.أن يتغلّب على جيتسو قنابل الدرونات خاصّتي
Dialogue: 0,0:13:48.41,0:13:49.25,Main,,0000,0000,0000,,هكذا إذًا؟
Dialogue: 0,0:13:49.91,0:13:52.11,Main,,0000,0000,0000,,،أظنّ أنّك كنتَ شينوبي من قرية الضّباب حقًّا
Dialogue: 0,0:13:52.18,0:13:54.21,Main,,0000,0000,0000,,.بما أنّك تنتقد أسلوب الماء خاصّتي
Dialogue: 0,0:13:55.85,0:13:57.21,Main,,0000,0000,0000,,أيمكنني أن أسألك شيئًا؟
Dialogue: 0,0:13:58.55,0:14:01.08,Main,,0000,0000,0000,,.أنا واثق أنّك كنت تستطيع العودة إلى قريتك
Dialogue: 0,0:14:01.81,0:14:03.95,Main,,0000,0000,0000,,فلمَ لم تعد؟
Dialogue: 0,0:14:10.05,0:14:11.68,Main,,0000,0000,0000,,.لم أستطع
Dialogue: 0,0:14:13.18,0:14:17.38,Main,,0000,0000,0000,,حتّى إن استطعت أن أسير باستخدام \N،الأطراف الاصطناعيّة الّتي ابتكرها الدّكتور
Dialogue: 0,0:14:17.45,0:14:19.48,Main,,0000,0000,0000,,.ما عدت أستطيع العيش كشينوبي
Dialogue: 0,0:14:20.78,0:14:23.68,Main,,0000,0000,0000,,...كنتُ أستميت للنّجاة
Dialogue: 0,0:14:24.55,0:14:26.81,Main,,0000,0000,0000,,.لكن ما كان ينتظرني هو موتي كشينوبي
Dialogue: 0,0:14:28.65,0:14:30.85,Main,,0000,0000,0000,,!مع ذلك، ما زلتَ أنت
Dialogue: 0,0:14:31.58,0:14:32.65,Main,,0000,0000,0000,,!—وإن كنت لا تستطيع القتال
Dialogue: 0,0:14:32.71,0:14:34.01,Main,,0000,0000,0000,,.حاول أن تتخيّل
Dialogue: 0,0:14:34.31,0:14:38.35,Main,,0000,0000,0000,,.يومًا ما، تجد أنّك سُلبتَ قواك كشينوبي
Dialogue: 0,0:14:40.55,0:14:44.25,Main,,0000,0000,0000,,أيمكنك أن تتقبّل نفسك في ذلك الوضع؟
Dialogue: 0,0:15:05.78,0:15:07.05,Main,,0000,0000,0000,,...أصبحتُ
Dialogue: 0,0:15:07.45,0:15:09.25,Main,,0000,0000,0000,,.عديم النّفع حرفيًّا
Dialogue: 0,0:15:11.18,0:15:15.31,Main,,0000,0000,0000,,.لم أستطع أن أعيش كما كنت أفعل
Dialogue: 0,0:15:17.85,0:15:20.18,Main,,0000,0000,0000,,...الكارا
Dialogue: 0,0:15:21.48,0:15:24.01,Main,,0000,0000,0000,,.أعطتني قوّة ومعنى لحياتي
Dialogue: 0,0:15:29.35,0:15:32.01,Main,,0000,0000,0000,,،جعلوني أعيش
Dialogue: 0,0:15:32.68,0:15:36.15,Main,,0000,0000,0000,,لذا قرّرتُ أن أكرّس حياتي لهم
Dialogue: 0,0:15:36.21,0:15:37.75,Main,,0000,0000,0000,,.كأداتهم
Dialogue: 0,0:15:41.38,0:15:42.38,Main,,0000,0000,0000,,،في تلك الحالة
Dialogue: 0,0:15:42.88,0:15:44.78,Main,,0000,0000,0000,,.لن أخسر أمامك
Dialogue: 0,0:15:46.21,0:15:49.71,Main,,0000,0000,0000,,.أثني عليك حقًّا على دفعي لهذا الحدّ
Dialogue: 0,0:15:50.75,0:15:53.48,Main,,0000,0000,0000,,!لكنّ أمرك ينتهي الآن
Dialogue: 0,0:16:11.71,0:16:15.58,Main,,0000,0000,0000,,.نسخة ظلّ. إنّها تقنيّة قويّة بحقّ
Dialogue: 0,0:16:15.88,0:16:18.91,Main,,0000,0000,0000,,،لكن مع أنّ كلّ نسخ ظلّك ظاهرة جسديًّا
Dialogue: 0,0:16:19.21,0:16:21.58,Main,,0000,0000,0000,,.إلّا أنّك لا تستطيع نسخ الأدوات المعقّدة
Dialogue: 0,0:16:22.15,0:16:24.48,Main,,0000,0000,0000,,،لذا، من الواضح أنّك هو الحقيقيّ
Dialogue: 0,0:16:24.55,0:16:26.78,Main,,0000,0000,0000,,.بما أنّك ترتدي القفّاز
Dialogue: 0,0:16:29.25,0:16:30.35,Main,,0000,0000,0000,,!بوروتو
Dialogue: 0,0:16:36.45,0:16:38.61,Main,,0000,0000,0000,,.لا تتسرّعي! انتظري هناك
Dialogue: 0,0:16:39.55,0:16:41.65,Main,,0000,0000,0000,,.سيحين دوركم فور أن أفرغ منه
Dialogue: 0,0:16:43.35,0:16:44.41,Main,,0000,0000,0000,,.والآن
Dialogue: 0,0:16:45.51,0:16:47.61,Main,,0000,0000,0000,,...عندما التقينا في القطار السّريع
Dialogue: 0,0:16:49.85,0:16:53.65,Main,,0000,0000,0000,,وجّهتُ مفكًّا نحوك هكذا، صحيح؟
Dialogue: 0,0:16:55.18,0:16:59.11,Main,,0000,0000,0000,,.لو أنّك كنت عدوّي آنذاك، لكنت ميّتًا الآن
Dialogue: 0,0:17:00.21,0:17:03.38,Main,,0000,0000,0000,,.لكن يبدو أنّ القدر أجّل نفسه فحسب
Dialogue: 0,0:17:05.68,0:17:07.15,Main,,0000,0000,0000,,...إن كنت
Dialogue: 0,0:17:07.58,0:17:09.01,Main,,0000,0000,0000,,...لم تعد نينجا
Dialogue: 0,0:17:09.15,0:17:10.75,Main,,0000,0000,0000,,...بعد الآن
Dialogue: 0,0:17:13.71,0:17:15.91,Main,,0000,0000,0000,,!فلا يمكنك هزيمتي
Dialogue: 0,0:17:21.95,0:17:25.15,Main,,0000,0000,0000,,!فهمت! سلّح إحدى نسخه بالقفّاز
Dialogue: 0,0:17:26.05,0:17:28.45,Main,,0000,0000,0000,,!على النّينجا أن يقرأ ما بين السّطور
Dialogue: 0,0:17:28.51,0:17:29.35,Main,,0000,0000,0000,,!أين أنت؟
Dialogue: 0,0:17:31.45,0:17:32.35,Main,,0000,0000,0000,,!—أيّها الـ
Dialogue: 0,0:17:36.75,0:17:37.91,Main,,0000,0000,0000,,!راسينغان
Dialogue: 0,0:18:18.01,0:18:20.68,Main,,0000,0000,0000,,.أحسنت. لقد فزت
Dialogue: 0,0:18:31.25,0:18:32.21,Main,,0000,0000,0000,,.افعلها
Dialogue: 0,0:18:33.08,0:18:36.08,Main,,0000,0000,0000,,.ما عدتُ أستطيع الحراك. ولا أملك إرادة للقتال
Dialogue: 0,0:18:36.51,0:18:40.08,Main,,0000,0000,0000,,.يمكنك أن تقتلني بسهولة بذلك المفكّ الوضيع الآن
Dialogue: 0,0:18:41.45,0:18:43.88,Main,,0000,0000,0000,,.انتقم لموغينو
Dialogue: 0,0:18:45.58,0:18:48.25,Main,,0000,0000,0000,,.أنا واثق أنّه سيسعد لذلك في الحياة الآخرة
Dialogue: 0,0:19:06.41,0:19:07.78,Main,,0000,0000,0000,,ماذا تفعل بظنّك؟
Dialogue: 0,0:19:10.98,0:19:14.18,Main,,0000,0000,0000,,يمكنك أن تصلح ذراعك وساقك المعطّلتين بهذا، صحيح؟
Dialogue: 0,0:19:14.85,0:19:16.98,Main,,0000,0000,0000,,تظهر الرّحمة لعدوّك؟
Dialogue: 0,0:19:17.61,0:19:19.75,Main,,0000,0000,0000,,...يا لسذاجتك، من شابه أباه فما ظلم
Dialogue: 0,0:19:20.35,0:19:23.78,Main,,0000,0000,0000,,.تابع هكذا وستودي نفسك لموتك لا محالة
Dialogue: 0,0:19:28.98,0:19:30.11,Main,,0000,0000,0000,,!كونوهامارو-سينسي
Dialogue: 0,0:19:31.05,0:19:32.78,Main,,0000,0000,0000,,هل فقدت وعيي؟
Dialogue: 0,0:19:34.25,0:19:35.01,Main,,0000,0000,0000,,!أين آو؟
Dialogue: 0,0:19:35.55,0:19:36.55,Main,,0000,0000,0000,,.لا بأس
Dialogue: 0,0:19:37.55,0:19:39.31,Main,,0000,0000,0000,,.انتهت المعركة
Dialogue: 0,0:19:43.41,0:19:45.38,Main,,0000,0000,0000,,.لن أسامحك أبدًا
Dialogue: 0,0:19:46.31,0:19:48.65,Main,,0000,0000,0000,,.لكنّي شينوبي
Dialogue: 0,0:19:49.48,0:19:53.35,Main,,0000,0000,0000,,.لا أسخّر قوّتي في قتل أحد لا يستطيع حتّى الحراك
Dialogue: 0,0:19:54.28,0:19:55.81,Main,,0000,0000,0000,,.يا للحماقة
Dialogue: 0,0:19:56.61,0:19:57.91,Main,,0000,0000,0000,,.كما قل
Dialogue: 0,0:19:58.51,0:20:00.95,Main,,0000,0000,0000,,.مهما كان الأمر، فهو يعتمد على طريقة استخدامك له
Dialogue: 0,0:20:01.81,0:20:04.58,Main,,0000,0000,0000,,...لذا، حتّى بقوّتك تلك
Dialogue: 0,0:20:04.95,0:20:06.85,Main,,0000,0000,0000,,ينبغي أن تستطيع استخدامها لفعل الخير، صحيح؟
Dialogue: 0,0:20:09.18,0:20:10.71,Main,,0000,0000,0000,,.أنا أداة
Dialogue: 0,0:20:11.41,0:20:15.25,Main,,0000,0000,0000,,.والأداة لا تفكّر في كيف يتمّ استخدامها
Dialogue: 0,0:20:17.05,0:20:17.95,Main,,0000,0000,0000,,!هذا غير صحيح
Dialogue: 0,0:20:18.35,0:20:21.31,Main,,0000,0000,0000,,هذا ينطبق فقط على أدوات النّينجا \N.العلميّة المزروعة في جسدك
Dialogue: 0,0:20:24.11,0:20:26.58,Main,,0000,0000,0000,,!أنت حيّ! لستَ أداةً
Dialogue: 0,0:20:26.91,0:20:30.08,Main,,0000,0000,0000,,.الأداة لا تحزن على موت أصدقائها
Dialogue: 0,0:20:31.65,0:20:33.65,Main,,0000,0000,0000,,...إن كنت تستطيع أن تقف وتسير
Dialogue: 0,0:20:34.01,0:20:36.41,Main,,0000,0000,0000,,...باستخدام الأطراف الّتي منحك إيّاها الدّكتور
Dialogue: 0,0:20:37.85,0:20:40.45,Main,,0000,0000,0000,,!لا تيأس... من الحياة
Dialogue: 0,0:20:48.85,0:20:49.75,Main,,0000,0000,0000,,!بوروتو
Dialogue: 0,0:20:50.38,0:20:51.21,Main,,0000,0000,0000,,!أخي
Dialogue: 0,0:20:51.95,0:20:53.98,Main,,0000,0000,0000,,.سنسلّم آو إلى قرية الورق
Dialogue: 0,0:20:54.61,0:20:57.85,Main,,0000,0000,0000,,!سنتواصل مع المقرّ وننتظر وصول الدّعم
Dialogue: 0,0:20:58.31,0:20:59.55,Main,,0000,0000,0000,,!عُلم
Dialogue: 0,0:21:01.18,0:21:02.25,Main,,0000,0000,0000,,.يا إلهي
Dialogue: 0,0:21:03.08,0:21:06.08,Main,,0000,0000,0000,,.على كلّ حال، أحسنتم جميعًا
Dialogue: 0,0:21:06.85,0:21:09.95,Main,,0000,0000,0000,,!تخطّت هذه المهمّة نطاق الغينين بكثير
Dialogue: 0,0:21:10.38,0:21:11.65,Main,,0000,0000,0000,,!معك حقّ
Dialogue: 0,0:21:11.71,0:21:14.51,Main,,0000,0000,0000,,!إنّهم شينوبي يفخر بهم أيّ أحد أينما كان
Dialogue: 0,0:21:15.01,0:21:16.68,Main,,0000,0000,0000,,.يبدو المستقبل باهرًا
Dialogue: 0,0:21:36.08,0:21:37.51,Main,,0000,0000,0000,,!كاشين كوجي
Dialogue: 0,0:21:42.28,0:21:44.85,Main,,0000,0000,0000,,!تقنيّة الاستدعاء: ضفدع البخار
Dialogue: 0,0:23:26.40,0:23:28.53,Main,,0000,0000,0000,,...آو، بطل قرية الضّباب
Dialogue: 0,0:23:29.00,0:23:31.03,Main,,0000,0000,0000,,.لا أصدّق أنّك لم تستطع إتمام هذه المهمّة
Dialogue: 0,0:23:31.10,0:23:33.97,Main,,0000,0000,0000,,.يبدو أنّك توكّلتُ عليك وآمنتُ بك أكثر من اللّازم كخارجيّ
Dialogue: 0,0:23:34.07,0:23:35.23,Main,,0000,0000,0000,,!إنّه مع آو
Dialogue: 0,0:23:35.57,0:23:37.43,Main,,0000,0000,0000,,!ما يعني أنّه مع الكارا أيضًا
Dialogue: 0,0:23:37.80,0:23:40.33,Main,,0000,0000,0000,,!كما أنّ هذه التشّاكرا الغريبة خطيرة
Dialogue: 0,0:23:40.50,0:23:41.87,Main,,0000,0000,0000,,!من تكون بالضّبط؟
Dialogue: 0,0:23:42.37,0:23:45.30,Main,,0000,0000,0000,,:في الحلقة القادمة
Dialogue: 0,0:23:45.37,0:23:46.27,Main,,0000,0000,0000,,"وتد"
Dialogue: 0,0:23:45.37,0:23:53.87,nxt ep title,,0000,0000,0000,,{\fs36\blur2\fad(300,000)\}وتد
Dialogue: 0,0:23:46.50,0:23:48.23,Main,,0000,0000,0000,,.أنا كاشين كوجي
Dialogue: 0,0:23:48.60,0:23:51.30,Main,,0000,0000,0000,,!سعيد للقائك يا... أوزوماكي بوروتو
