Dialogue: 0,0:01:57.45,0:02:01.05,thunder burger,,0000,0000,0000,,برغر الرّعد
Dialogue: 0,0:01:57.45,0:02:02.60,ep title,,0000,0000,0000,,{\fad(300,900)}{\blur4\shad3\bord3\}الملاحقة
Dialogue: 0,0:02:01.71,0:02:03.05,Main,,0000,0000,0000,,هل سمعتم؟
Dialogue: 0,0:02:03.58,0:02:05.98,Main,,0000,0000,0000,,.تسلّل لصّ إلى قسم المحفوظات
Dialogue: 0,0:02:06.25,0:02:07.55,Main,,0000,0000,0000,,!سمعت بشأن ذلك
Dialogue: 0,0:02:08.08,0:02:10.78,Main,,0000,0000,0000,,ماذا سرق الدّخيل إذًا؟
Dialogue: 0,0:02:11.01,0:02:13.11,Main,,0000,0000,0000,,.بيانات عن الشّينوبي
Dialogue: 0,0:02:13.41,0:02:14.91,Main,,0000,0000,0000,,بيانات؟
Dialogue: 0,0:02:15.28,0:02:18.15,Main,,0000,0000,0000,,ساعدت شركة عائلتي في رقمنة بيانات
Dialogue: 0,0:02:18.21,0:02:22.41,Main,,0000,0000,0000,,.خلفيّات وإنجازات شينوبي هذه القرية
Dialogue: 0,0:02:22.78,0:02:25.11,Main,,0000,0000,0000,,!قام بنسخها وسرقتها
Dialogue: 0,0:02:26.38,0:02:28.41,Main,,0000,0000,0000,,.لا أفهم لم قد يحتاج المرء لفعل ذلك
Dialogue: 0,0:02:28.68,0:02:30.95,Main,,0000,0000,0000,,.هذا هو سبب سرقتها
Dialogue: 0,0:02:31.58,0:02:33.21,Main,,0000,0000,0000,,!الورق هو الأفضل
Dialogue: 0,0:02:33.58,0:02:36.25,Main,,0000,0000,0000,,...أنا متيقّن أنّه يمكن سرقة الورق أيضًا
Dialogue: 0,0:02:36.38,0:02:38.75,Main,,0000,0000,0000,,!إيوابي، هذا سخيف
Dialogue: 0,0:02:40.45,0:02:44.08,Main,,0000,0000,0000,,.الجميع يتحدّثون عن التسلّل
Dialogue: 0,0:02:44.45,0:02:46.81,Main,,0000,0000,0000,,.لذا حدث الأمر فعلًا
Dialogue: 0,0:02:46.91,0:02:47.91,Main,,0000,0000,0000,,.أجل
Dialogue: 0,0:02:47.98,0:02:53.78,Main,,0000,0000,0000,,أخبرني أبي أنّ السّارق رجل مخادع مكسيّ \N.بعباية من رأسه وحتّى أخمص قدميه
Dialogue: 0,0:02:55.48,0:02:56.48,Main,,0000,0000,0000,,،بسبب ذلك
Dialogue: 0,0:02:56.55,0:02:58.25,Main,,0000,0000,0000,,،شدّدوا الحراسة في القرية
Dialogue: 0,0:02:58.31,0:02:59.61,Main,,0000,0000,0000,,.ولا سيّما حول المحفوظات
Dialogue: 0,0:03:00.05,0:03:02.01,Main,,0000,0000,0000,,مجرم غامض إذًا؟
Dialogue: 0,0:03:02.38,0:03:04.65,Main,,0000,0000,0000,,.أتساءل كيف دخل
Dialogue: 0,0:03:05.15,0:03:08.68,Main,,0000,0000,0000,,.بشأن ذلك، ذكرت والدتي شيئًا مثيرًا للاهتمام
Dialogue: 0,0:03:10.05,0:03:12.08,Main,,0000,0000,0000,,تدريان بشأن نظام استشعار القرية، أليس كذلك؟
Dialogue: 0,0:03:12.68,0:03:15.31,Main,,0000,0000,0000,,يمكنه أن يعرف على الفور حال \N.دخول شخص غير مسجّل إلى القرية
Dialogue: 0,0:03:16.01,0:03:18.85,Main,,0000,0000,0000,,.لكنّهم لم يستشعروا أيّ شيء قبل أو بعد الحادثة
Dialogue: 0,0:03:19.41,0:03:21.18,Main,,0000,0000,0000,,...هذا عملٌ داخليّ إذًا
Dialogue: 0,0:03:21.81,0:03:25.11,Main,,0000,0000,0000,,.أي أنّ هناك احتمال وجود جاسوس في قرية الورق
Dialogue: 0,0:03:25.41,0:03:27.01,Main,,0000,0000,0000,,.لم يُحدّد ذلك
Dialogue: 0,0:03:27.85,0:03:31.01,Main,,0000,0000,0000,,.يبدو أنّ شرطة قرية الورق ستتحرّى بشأن ذلك الاحتمال بحذر
Dialogue: 0,0:03:32.75,0:03:33.75,Main,,0000,0000,0000,,!مهلًا، مهلًا
Dialogue: 0,0:03:33.95,0:03:37.48,Main,,0000,0000,0000,,!لمَ لا نقبض على ذلك الدّخيل؟
Dialogue: 0,0:03:37.71,0:03:38.71,Main,,0000,0000,0000,,!ماذا؟
Dialogue: 0,0:03:39.05,0:03:42.21,Main,,0000,0000,0000,,!سيكون ذلك ممتعًا، كعرض تحرّي
Dialogue: 0,0:03:42.35,0:03:44.45,Main,,0000,0000,0000,,!إنّه مليء بالغموض! إنّه غامض
Dialogue: 0,0:03:44.85,0:03:47.05,Main,,0000,0000,0000,,ألستما متحمّسين؟
Dialogue: 0,0:03:47.88,0:03:50.25,Main,,0000,0000,0000,,...تأثّرت من قبل بعض التّفاهات ثانيةً
Dialogue: 0,0:03:50.71,0:03:53.85,Main,,0000,0000,0000,,.لسنا متيقّنين حتّى إن كان الدّخيل في القرية
Dialogue: 0,0:03:54.28,0:03:55.68,Main,,0000,0000,0000,,.ربّما غادر بالفعل
Dialogue: 0,0:03:55.88,0:03:57.38,Main,,0000,0000,0000,,!لا، ما زال هنا
Dialogue: 0,0:03:57.55,0:04:02.11,Main,,0000,0000,0000,,!حدسي يخبرني أنّه ما زال يترصّد
Dialogue: 0,0:04:02.35,0:04:04.11,Main,,0000,0000,0000,,حدسك ثانيةً؟
Dialogue: 0,0:04:04.75,0:04:08.15,Main,,0000,0000,0000,,.هذا دقيق للغاية، لذا أظنّنا نستطيع المحاولة
Dialogue: 0,0:04:09.08,0:04:10.78,Main,,0000,0000,0000,,!هذا ما أريد سماعه
Dialogue: 0,0:04:11.78,0:04:13.18,Main,,0000,0000,0000,,.لا أحبّذ هذا
Dialogue: 0,0:04:13.58,0:04:16.08,Main,,0000,0000,0000,,!انتظر فحسب يا سارق البيانات
Dialogue: 0,0:04:16.45,0:04:19.68,Main,,0000,0000,0000,,!ستزجّ بك إينو-شيكا-تشو في السّجن
Dialogue: 0,0:04:27.78,0:04:30.71,Main,,0000,0000,0000,,...حدسي يخبرني أنّه في الجوار
Dialogue: 0,0:04:32.88,0:04:36.01,Main,,0000,0000,0000,,أين أنت أيّها الدّخيل الصّغير؟
Dialogue: 0,0:04:36.41,0:04:38.38,Main,,0000,0000,0000,,.لسنا نبحث عن قطّ
Dialogue: 0,0:04:38.85,0:04:41.61,Main,,0000,0000,0000,,.ما كنّا لنحتاج شرطة قرية الورق إن كان بإمكاننا إيجاده بتلك السّهولة
Dialogue: 0,0:04:41.95,0:04:44.38,Main,,0000,0000,0000,,،وأيضًا، إن كان عمل من الدّاخل
Dialogue: 0,0:04:44.45,0:04:47.15,Main,,0000,0000,0000,,.فلا بدّ أنّ الفاعل يتجوّل في القرية ببالٍ هانئ
Dialogue: 0,0:04:48.81,0:04:52.15,Main,,0000,0000,0000,,،لست أبحث عن الدّخيل
Dialogue: 0,0:04:52.21,0:04:53.78,Main,,0000,0000,0000,,!بل عن مخبئه السّرّيّ
Dialogue: 0,0:04:54.15,0:04:55.98,Main,,0000,0000,0000,,مخبأ سرّيّ؟
Dialogue: 0,0:04:56.28,0:04:57.28,Main,,0000,0000,0000,,!أجل
Dialogue: 0,0:04:57.35,0:05:00.31,Main,,0000,0000,0000,,"،في العرض، "المحقّق الوسيم الممتاز
Dialogue: 0,0:05:00.38,0:05:03.05,Main,,0000,0000,0000,,...قالوا أنّ المباني القديمة والمهجورة الّتي تملك إطلالة جيّدة
Dialogue: 0,0:05:03.11,0:05:04.45,Main,,0000,0000,0000,,،والبعيدة عن تجمّع النّاس
Dialogue: 0,0:05:04.51,0:05:05.78,Main,,0000,0000,0000,,!هي الأكثر شبهة
Dialogue: 0,0:05:06.15,0:05:08.58,Main,,0000,0000,0000,,...أشكّ أنّك ستجدين شيئًا كذاك بتلك السّهولة
Dialogue: 0,0:05:12.78,0:05:14.51,Main,,0000,0000,0000,,!انظرا، وجدتُ واحدًا
Dialogue: 0,0:05:14.58,0:05:15.58,Main,,0000,0000,0000,,!حقًّا؟
Dialogue: 0,0:05:15.65,0:05:17.48,Main,,0000,0000,0000,,.لا أصدّق أنّها وجدت شيئًا بهذه السّرعة
Dialogue: 0,0:05:17.81,0:05:20.58,Main,,0000,0000,0000,,!هيّا! لنسرع إلى الدّاخل
Dialogue: 0,0:05:24.88,0:05:28.71,Main,,0000,0000,0000,,المعذرة! هل من أحد هنا؟
Dialogue: 0,0:05:33.91,0:05:35.51,Main,,0000,0000,0000,,.يبدو فارغًا
Dialogue: 0,0:05:36.45,0:05:37.98,Main,,0000,0000,0000,,.ليس هناك وجود للتشّاكرا أيضًا
Dialogue: 0,0:05:38.45,0:05:39.68,Main,,0000,0000,0000,,حدسي يخبرني
Dialogue: 0,0:05:39.75,0:05:41.58,Main,,0000,0000,0000,,!أنّ هناك شيء مريب يحدث هنا بالتّأكيد
Dialogue: 0,0:05:41.85,0:05:43.38,Main,,0000,0000,0000,,!ابحث أكثر في الأرجاء يا إينوجين
Dialogue: 0,0:05:43.75,0:05:45.18,Main,,0000,0000,0000,,!حسنًا، حسنًا
Dialogue: 0,0:05:47.38,0:05:49.01,Main,,0000,0000,0000,,.يبدو أنّنا يمكننا الصّعود إلى الطّابق الأعلى
Dialogue: 0,0:05:49.28,0:05:50.28,Main,,0000,0000,0000,,أتريدان الصّعود؟
Dialogue: 0,0:05:59.48,0:06:03.05,Main,,0000,0000,0000,,...هذا المكان الأمثل لمراقبة القرية
Dialogue: 0,0:06:04.55,0:06:05.95,Main,,0000,0000,0000,,.لا، محال
Dialogue: 0,0:06:06.21,0:06:09.15,Main,,0000,0000,0000,,.أتساءل إن كان هناك أيّ شيء مريب هنا
Dialogue: 0,0:06:10.98,0:06:13.45,Main,,0000,0000,0000,,!وجدتُ شيئًا مشبوهًا
Dialogue: 0,0:06:13.71,0:06:15.95,Main,,0000,0000,0000,,!يستحيل أن تجدي شيئًا بتلك السّهولة
Dialogue: 0,0:06:16.25,0:06:17.25,Main,,0000,0000,0000,,!—ذلك
Dialogue: 0,0:06:17.71,0:06:18.81,Main,,0000,0000,0000,,!تنحّي يا تشو تشو
Dialogue: 0,0:06:20.85,0:06:22.75,Main,,0000,0000,0000,,...ما سُرق هي البيانات
Dialogue: 0,0:06:26.35,0:06:27.55,Main,,0000,0000,0000,,!أهذا مخطّط؟
Dialogue: 0,0:06:28.18,0:06:29.85,Main,,0000,0000,0000,,من أجل الدّخول للسّرقة؟
Dialogue: 0,0:06:30.31,0:06:32.38,Main,,0000,0000,0000,,!أصبتُ إذًا
Dialogue: 0,0:06:32.81,0:06:34.78,Main,,0000,0000,0000,,!كان حدسي مذهلًا
Dialogue: 0,0:06:35.05,0:06:37.11,Main,,0000,0000,0000,,!أكان هذا مخبأ الدّخيل فعلًا؟
Dialogue: 0,0:06:37.68,0:06:39.41,Main,,0000,0000,0000,,أين هي البيانات المسروقة إذًا؟
Dialogue: 0,0:06:40.18,0:06:43.11,Main,,0000,0000,0000,,.لا يبدو أنّها هنا
Dialogue: 0,0:06:43.71,0:06:47.95,Main,,0000,0000,0000,,.لكنّ حدس تشو تشو بات مؤتمنًا للغاية
Dialogue: 0,0:06:48.11,0:06:51.35,Main,,0000,0000,0000,,!قد نستطيع القبض على الدّخيل فعلًا
Dialogue: 0,0:06:51.45,0:06:53.65,Main,,0000,0000,0000,,.لا ندري ما قد نجد
Dialogue: 0,0:06:53.88,0:06:55.18,Main,,0000,0000,0000,,.لا تهملي دفاعك
Dialogue: 0,0:06:58.91,0:07:00.35,Main,,0000,0000,0000,,!هناك أحد في الأسفل
Dialogue: 0,0:07:00.45,0:07:01.45,Main,,0000,0000,0000,,!ماذا؟
Dialogue: 0,0:07:05.65,0:07:09.18,Main,,0000,0000,0000,,!حاصرناك أيّها الدّخيل سارق البيانات
Dialogue: 0,0:07:09.48,0:07:10.58,Main,,0000,0000,0000,,دخيل؟
Dialogue: 0,0:07:11.75,0:07:12.78,Main,,0000,0000,0000,,أنا؟
Dialogue: 0,0:07:13.51,0:07:14.85,Main,,0000,0000,0000,,!السّادس؟
Dialogue: 0,0:07:16.78,0:07:19.31,Main,,0000,0000,0000,,ماذا كنت تفعل هنا إذًا؟
Dialogue: 0,0:07:19.81,0:07:23.38,Main,,0000,0000,0000,,.في الواقع، خرجت لأتمشّى وإذا بي أصادف هذا المكان
Dialogue: 0,0:07:23.71,0:07:25.15,Main,,0000,0000,0000,,خرجت لتتمشّى؟
Dialogue: 0,0:07:25.45,0:07:26.81,Main,,0000,0000,0000,,!أخطأناك مع شخص آخر تمامًا
Dialogue: 0,0:07:27.11,0:07:28.48,Main,,0000,0000,0000,,!آسف، آسف
Dialogue: 0,0:07:29.65,0:07:32.38,Main,,0000,0000,0000,,،كنت تبحث عن مخبأ الدّخيل
Dialogue: 0,0:07:32.45,0:07:33.45,Main,,0000,0000,0000,,أليس كذلك؟
Dialogue: 0,0:07:35.35,0:07:36.88,Main,,0000,0000,0000,,كانت مجموعة كبيرة من الأشخاص لتفلت الانتباه
Dialogue: 0,0:07:37.25,0:07:38.78,Main,,0000,0000,0000,,.وهناك احتمال أنّه عمل من الدّاخل
Dialogue: 0,0:07:39.11,0:07:40.18,Main,,0000,0000,0000,,...لهذا أتيت لوحدك
Dialogue: 0,0:07:40.88,0:07:43.58,Main,,0000,0000,0000,,.لكنّها ظهرنا فجأةً
Dialogue: 0,0:07:44.48,0:07:46.05,Main,,0000,0000,0000,,.نلت منّي
Dialogue: 0,0:07:46.45,0:07:48.25,Main,,0000,0000,0000,,.أنت ابن شيكامارو بحقّ
Dialogue: 0,0:07:52.45,0:07:54.61,Main,,0000,0000,0000,,إذًا كنت تتحرّى بنفسك
Dialogue: 0,0:07:54.68,0:07:55.98,Main,,0000,0000,0000,,بعد أن أخبرك أبي بما جرى؟
Dialogue: 0,0:07:56.21,0:07:58.65,Main,,0000,0000,0000,,،أجل. فكّرتُ أنّه إن كان يملك مخبأً
Dialogue: 0,0:07:58.71,0:08:00.25,Main,,0000,0000,0000,,.فسيكون بالجوار
Dialogue: 0,0:08:01.08,0:08:02.75,Main,,0000,0000,0000,,.لكن غير ذلك، أنتم مذهلون يا أطفال
Dialogue: 0,0:08:03.28,0:08:05.21,Main,,0000,0000,0000,,.لا أصدّق أنّكم وجدتم هذا المكان
Dialogue: 0,0:08:05.51,0:08:07.51,Main,,0000,0000,0000,,...حالفنا الحظّ قليلًا فحسب
Dialogue: 0,0:08:07.58,0:08:11.75,Main,,0000,0000,0000,,!حتّى إن كنت السّادس، لن أدعك تسرق غنيمتي الكبيرة
Dialogue: 0,0:08:12.11,0:08:14.31,Main,,0000,0000,0000,,.لن أفعل
Dialogue: 0,0:08:14.58,0:08:17.38,Main,,0000,0000,0000,,بل في الواقع، لمَ لا نعمل معًا؟
Dialogue: 0,0:08:17.98,0:08:20.75,Main,,0000,0000,0000,,نجد الدّخيل سويًّا؟
Dialogue: 0,0:08:21.05,0:08:22.05,Main,,0000,0000,0000,,.أجل
Dialogue: 0,0:08:22.11,0:08:26.11,Main,,0000,0000,0000,,،أحدكم ماهر ما يكفي ليستشعرني حتّى أنا
Dialogue: 0,0:08:26.18,0:08:27.61,Main,,0000,0000,0000,,.والآخر يملك حدسًا عظيمًا
Dialogue: 0,0:08:28.65,0:08:32.68,Main,,0000,0000,0000,,.أظنّنا كلّما راقبنا هذا المخبأ، كان أمتع
Dialogue: 0,0:08:33.48,0:08:35.98,Main,,0000,0000,0000,,.كما صدف أنّي أملك هذه
Dialogue: 0,0:08:50.35,0:08:51.35,Main,,0000,0000,0000,,ما الأمر؟
Dialogue: 0,0:08:51.61,0:08:53.45,Main - Italics,,0000,0000,0000,,...نفدت منّي رقائق البطاطا
Dialogue: 0,0:08:54.51,0:08:55.65,Main,,0000,0000,0000,,...بربّك
Dialogue: 0,0:08:56.68,0:08:57.68,Main - Italics,,0000,0000,0000,,.هذا إينوجين
Dialogue: 0,0:08:58.11,0:09:00.51,Main - Italics,,0000,0000,0000,,!رجل ذو عباءة ذاهب باتّجاهك
Dialogue: 0,0:09:01.75,0:09:02.75,Main,,0000,0000,0000,,حقًّا؟
Dialogue: 0,0:09:14.65,0:09:15.85,Main - Italics,,0000,0000,0000,,.لقد غيّر اتّجاهه للتّوّ
Dialogue: 0,0:09:16.08,0:09:17.48,Main - Italics,,0000,0000,0000,,.إنّه متّجه جنوبًا
Dialogue: 0,0:09:18.11,0:09:19.48,Main,,0000,0000,0000,,غيّر اتّجاهه؟
Dialogue: 0,0:09:20.18,0:09:23.35,Main,,0000,0000,0000,,.هذا ليس مؤكّدًا
Dialogue: 0,0:09:23.81,0:09:25.95,Main,,0000,0000,0000,,...هل لاحظنا؟ أو ربّما
Dialogue: 0,0:09:26.48,0:09:28.08,Main - Italics,,0000,0000,0000,,!على أيّ حال، علينا ملاحقته
Dialogue: 0,0:09:28.81,0:09:29.81,Main,,0000,0000,0000,,.هذا صحيح
Dialogue: 0,0:09:29.98,0:09:31.05,Main,,0000,0000,0000,,.لا يمكننا أن ندعه يهرب
Dialogue: 0,0:09:31.78,0:09:33.15,Main,,0000,0000,0000,,ألا بأس بذلك أيّها السّادس؟
Dialogue: 0,0:09:33.61,0:09:35.01,Main - Italics,,0000,0000,0000,,.أجل، لنفعل ذلك
Dialogue: 0,0:09:36.18,0:09:38.08,Main,,0000,0000,0000,,!إينوجين، لا تشح ناظرك عنه
Dialogue: 0,0:09:39.51,0:09:40.68,Main,,0000,0000,0000,,!اعتمد عليّ
Dialogue: 0,0:09:42.98,0:09:45.91,Main,,0000,0000,0000,,!أشك في أن يشتبه بمراقبتي له من السّماء
Dialogue: 0,0:09:53.41,0:09:54.75,Main,,0000,0000,0000,,إلى أين يتّجه؟
Dialogue: 0,0:09:55.75,0:09:56.91,Main - Italics,,0000,0000,0000,,!هذا سيّئ يا شيكاداي
Dialogue: 0,0:09:57.21,0:09:58.21,Main,,0000,0000,0000,,ما الخطب؟
Dialogue: 0,0:09:58.28,0:09:59.75,Main - Italics,,0000,0000,0000,,.إنّه متّجه صوب شارع رئيسيّ
Dialogue: 0,0:10:00.21,0:10:01.58,Main - Italics,,0000,0000,0000,,،إن توارى بين الحشد
Dialogue: 0,0:10:01.65,0:10:03.85,Main - Italics,,0000,0000,0000,,!فلن أستطيع تتبّع التشّاكرا خاصّته بمستوى مهارتي
Dialogue: 0,0:10:04.81,0:10:07.05,Main,,0000,0000,0000,,هل ننال منه قبل أن يدخل إلى الشّارع؟
Dialogue: 0,0:10:07.71,0:10:08.71,Main,,0000,0000,0000,,!لنفعل ذلك
Dialogue: 0,0:10:09.78,0:10:11.15,Main,,0000,0000,0000,,!مهلًا، لم نعد تنظيم صفوفنا بعد
Dialogue: 0,0:10:11.21,0:10:13.28,Main,,0000,0000,0000,,!لن يهمّ ذلك إن هرب
Dialogue: 0,0:10:17.81,0:10:18.81,Main,,0000,0000,0000,,!اختفى؟
Dialogue: 0,0:10:20.08,0:10:21.08,Main,,0000,0000,0000,,!هناك
Dialogue: 0,0:10:27.15,0:10:28.15,Main,,0000,0000,0000,,!سحقًا
Dialogue: 0,0:10:29.15,0:10:30.15,Main,,0000,0000,0000,,!إينوجين
Dialogue: 0,0:10:30.78,0:10:32.75,Main - Italics,,0000,0000,0000,,!هذا ليس جيّدًا. أضعته أيضًا
Dialogue: 0,0:10:33.11,0:10:35.55,Main,,0000,0000,0000,,!هل هرب منّا؟
Dialogue: 0,0:10:35.81,0:10:38.05,Main,,0000,0000,0000,,.أظنّ أنّه لاحظ إينوجين أيضًا
Dialogue: 0,0:10:38.68,0:10:42.98,Main,,0000,0000,0000,,.يبدو أنّه مخادع أكثر ممّا تخيّلنا
Dialogue: 0,0:10:43.18,0:10:44.18,Main,,0000,0000,0000,,!السّادس
Dialogue: 0,0:10:44.41,0:10:45.95,Main,,0000,0000,0000,,!أنت بطيء جدًّا
Dialogue: 0,0:10:46.11,0:10:47.78,Main,,0000,0000,0000,,!تركته يهرب
Dialogue: 0,0:10:48.21,0:10:49.38,Main,,0000,0000,0000,,...هوّني عليك
Dialogue: 0,0:10:49.98,0:10:52.65,Main,,0000,0000,0000,,.ما زال الوقت مبكّرًا على الاستسلام
Dialogue: 0,0:10:55.41,0:10:57.15,Main,,0000,0000,0000,,!هل تقصد أنّه دخل المجاري؟
Dialogue: 0,0:10:57.78,0:10:58.78,Main,,0000,0000,0000,,على الشّينوبي
Dialogue: 0,0:10:58.85,0:11:00.51,Main,,0000,0000,0000,,.أن يقرأ ما بين السّطور
Dialogue: 0,0:11:01.85,0:11:02.88,Main - Italics,,0000,0000,0000,,...فهمت
Dialogue: 0,0:11:03.05,0:11:05.51,Main - Italics,,0000,0000,0000,,...جعلنا نظنّ فقط أنّه اختفى بين الحشد
Dialogue: 0,0:11:05.98,0:11:07.28,Main - Italics,,0000,0000,0000,,.لا يستهان بالسّادس حقًّا
Dialogue: 0,0:11:08.31,0:11:09.95,Main,,0000,0000,0000,,لكن إلى أين ذهب من هنا؟
Dialogue: 0,0:11:10.35,0:11:13.48,Main,,0000,0000,0000,,.لاحظ أنّه مُلاحق، لذا ترك مخبأه
Dialogue: 0,0:11:13.88,0:11:15.88,Main,,0000,0000,0000,,...ما يعني أنّ خطوته القادمة
Dialogue: 0,0:11:16.88,0:11:19.11,Main,,0000,0000,0000,,الخروج من القرية، صحيح؟
Dialogue: 0,0:11:23.28,0:11:28.18,Main,,0000,0000,0000,,.أبلغ الجونين في المراقبة بشأن خططه لكي يغلقوا مخارجه
Dialogue: 0,0:11:28.88,0:11:30.08,Main,,0000,0000,0000,,.سألاحقه
Dialogue: 0,0:11:30.45,0:11:31.71,Main,,0000,0000,0000,,!—ماذا؟ لكن
Dialogue: 0,0:11:32.15,0:11:35.55,Main,,0000,0000,0000,,.باعتبار تحرّكاته سابقًا، لا بدّ أنّه ماهر للغاية
Dialogue: 0,0:11:36.28,0:11:38.18,Main,,0000,0000,0000,,.حتّى أنّه أطاح ببعض الجونين في قسم المحفوظات
Dialogue: 0,0:11:38.48,0:11:40.85,Main,,0000,0000,0000,,.آسف، لكنّه خطير جدًّا عليكم
Dialogue: 0,0:12:04.51,0:12:07.18,Main - Italics,,0000,0000,0000,,...هذا يعني أنّه سيهرب إلى ضواحي القرية
Dialogue: 0,0:12:07.51,0:12:08.51,Main,,0000,0000,0000,,.أجل
Dialogue: 0,0:12:08.58,0:12:11.31,Main,,0000,0000,0000,,.راقبوا أنبوب الصّرف الصّحّيّ في مخرج القرية
Dialogue: 0,0:12:11.61,0:12:13.58,Main - Italics,,0000,0000,0000,,.سنحتاج إلى فريق ملاحق
Dialogue: 0,0:12:13.94,0:12:17.71,Main,,0000,0000,0000,,!أجل. أرسلوا الّذين تمّ إرسالهم إلى قسم المحفوظات
Dialogue: 0,0:12:18.84,0:12:21.24,Main,,0000,0000,0000,,.شكرًا على تقرير هذا لنا
Dialogue: 0,0:12:21.61,0:12:22.48,Main,,0000,0000,0000,,!المعذرة
Dialogue: 0,0:12:24.21,0:12:28.28,Main,,0000,0000,0000,,!أظنّنا لن نستطيع الإمساك بغنيمة كبيرة بأنفسنا
Dialogue: 0,0:12:28.91,0:12:30.98,Main,,0000,0000,0000,,،إن عنى ذلك أنّه سيتمّ الإمساك بالدّخيل
Dialogue: 0,0:12:31.04,0:12:32.14,Main,,0000,0000,0000,,فهذا جيّد، صحيح؟
Dialogue: 0,0:12:32.48,0:12:34.18,Main,,0000,0000,0000,,.ما عاد له مكان يهرب إليه
Dialogue: 0,0:12:36.51,0:12:37.58,Main,,0000,0000,0000,,هل نحن واثقون من ذلك؟
Dialogue: 0,0:12:39.11,0:12:40.94,Main,,0000,0000,0000,,ألا تظنّان أنّنا نغفل شيئًا؟
Dialogue: 0,0:12:41.54,0:12:44.71,Main,,0000,0000,0000,,هل المجاري هي طريق هروبه الوحيد من القرية فعلًا؟
Dialogue: 0,0:12:45.41,0:12:48.21,Main,,0000,0000,0000,,...بطبيعة الحال، أغلقوا بوّابة آ-أون
Dialogue: 0,0:12:48.31,0:12:49.81,Main,,0000,0000,0000,,فما خياره الآخر؟
Dialogue: 0,0:12:50.18,0:12:51.31,Main,,0000,0000,0000,,...هذا صحيح، لكن
Dialogue: 0,0:12:54.71,0:12:55.48,Main,,0000,0000,0000,,!مستحيل
Dialogue: 0,0:12:57.91,0:12:58.94,Main,,0000,0000,0000,,!القطار السّريع؟
Dialogue: 0,0:12:58.98,0:12:59.98,Main - Italics,,0000,0000,0000,,.هذا صحيح
Dialogue: 0,0:13:00.28,0:13:02.31,Main - Italics,,0000,0000,0000,,!هناك فتحة داخل المحطّة أيضًا
Dialogue: 0,0:13:02.48,0:13:06.61,Main - Italics,,0000,0000,0000,,،إن استقلّ القطار السّريع الّذي يغادر القرية
Dialogue: 0,0:13:06.68,0:13:08.51,Main - Italics,,0000,0000,0000,,!فستكون لدينا الأفضليّة عليه
Dialogue: 0,0:13:17.11,0:13:17.71,Main - Italics,,0000,0000,0000,,.حسنًا
Dialogue: 0,0:13:18.21,0:13:19.98,Main - Italics,,0000,0000,0000,,.لا يمكنني الوصول إلى هناك في الوقت من هنا
Dialogue: 0,0:13:20.04,0:13:22.68,Main - Italics,,0000,0000,0000,,.توخّوا فائق الحذر عند ملاحقته
Dialogue: 0,0:13:22.91,0:13:23.71,Main,,0000,0000,0000,,!حاضر
Dialogue: 0,0:13:25.11,0:13:27.31,Main,,0000,0000,0000,,!هذا سيّئ. القطار السّريع على وشك المغادرة
Dialogue: 0,0:13:28.18,0:13:29.41,Main,,0000,0000,0000,,!هل سنصل في الوقت؟
Dialogue: 0,0:13:29.68,0:13:31.21,Main,,0000,0000,0000,,!دعوا هذا لي
Dialogue: 0,0:13:31.28,0:13:33.24,Main,,0000,0000,0000,,!تقنيّة التوسّع الجزئيّ
Dialogue: 0,0:13:33.44,0:13:34.14,Main,,0000,0000,0000,,!مهلًا
Dialogue: 0,0:13:34.31,0:13:35.71,Main,,0000,0000,0000,,!—انتظري، لا يعقل أنّك
Dialogue: 0,0:13:35.78,0:13:37.64,Main,,0000,0000,0000,,!تمسّكا
Dialogue: 0,0:13:45.81,0:13:48.21,Main,,0000,0000,0000,,!الممتلئة مجنونة
Dialogue: 0,0:13:48.54,0:13:50.54,Main,,0000,0000,0000,,!لكنّنا تمكنّا من الوصول إلى هنا
Dialogue: 0,0:14:03.31,0:14:05.88,Main,,0000,0000,0000,,!تقنيّة شلل الظلّ، تمّ
Dialogue: 0,0:14:07.41,0:14:10.01,Main,,0000,0000,0000,,.حسنًا، اكشف عن وجهك
Dialogue: 0,0:14:21.18,0:14:22.11,Main,,0000,0000,0000,,!ماذا؟
Dialogue: 0,0:14:22.84,0:14:24.08,Main,,0000,0000,0000,,!نسخة ظلّ؟
Dialogue: 0,0:14:24.41,0:14:25.94,Main,,0000,0000,0000,,!أين الحقيقيّ إذًا؟
Dialogue: 0,0:14:26.41,0:14:27.44,Main,,0000,0000,0000,,.لا أدري
Dialogue: 0,0:14:27.78,0:14:32.34,Main,,0000,0000,0000,,.لكن من المحتمل أنّه كان يتلاعب بنا من البداية
Dialogue: 0,0:14:32.58,0:14:35.38,Main,,0000,0000,0000,,أيعني هذا أنّه استخدم طريق هروب آخر؟
Dialogue: 0,0:14:35.88,0:14:36.81,Main,,0000,0000,0000,,!أو... لا يمكن
Dialogue: 0,0:14:37.01,0:14:38.88,Main,,0000,0000,0000,,.ربّما يملك هدفًا آخر
Dialogue: 0,0:14:45.41,0:14:47.91,Main,,0000,0000,0000,,!أردت الذّهاب للإمساك بالدّخيل أيضًا
Dialogue: 0,0:14:48.31,0:14:49.78,Main,,0000,0000,0000,,.كفّ عن التذمّر
Dialogue: 0,0:14:50.01,0:14:52.94,Main,,0000,0000,0000,,.يحتاجون من يراقب هنا
Dialogue: 0,0:14:57.91,0:15:01.08,Main,,0000,0000,0000,,.كشفوا أمر القطار السّريع، لكنّهم ين يعرفوا هذا
Dialogue: 0,0:15:01.48,0:15:04.28,Main,,0000,0000,0000,,.هذا ما يعنيه أن تقرأ ما بين السّطور
Dialogue: 0,0:15:05.44,0:15:07.88,sign,,0000,0000,0000,,{\pos(327.6,128.36)\frz350.2\3c&H322F29&}سرّيّ
Dialogue: 0,0:15:09.84,0:15:12.28,Main,,0000,0000,0000,,.والآن... ينبغي أن يكون هذا هو المكان المنشود
Dialogue: 0,0:15:24.24,0:15:27.41,Main,,0000,0000,0000,,أيعقل أنّ هذا ما تسعى خلفه؟
Dialogue: 0,0:15:29.78,0:15:33.38,Main,,0000,0000,0000,,.الهوكاغي السّادس، هاتاكي كاكاشي
Dialogue: 0,0:15:34.21,0:15:36.01,Main,,0000,0000,0000,,.كان ذلك وشيكًا
Dialogue: 0,0:15:36.51,0:15:38.41,Main,,0000,0000,0000,,،لولا أنّ شيكاداي تواصل معي
Dialogue: 0,0:15:38.48,0:15:40.98,Main,,0000,0000,0000,,.لما كنت اكتشفت هدفك الحقيقيّ
Dialogue: 0,0:15:41.81,0:15:43.98,Main,,0000,0000,0000,,هل تنبّأت بما سأفعله؟
Dialogue: 0,0:15:44.74,0:15:47.11,Main,,0000,0000,0000,,،بعد الهجوم الأوّل
Dialogue: 0,0:15:47.18,0:15:49.41,Main,,0000,0000,0000,,،أمكنك أن تهرب من القرية تحت سترة اللّيل
Dialogue: 0,0:15:49.48,0:15:51.61,Main,,0000,0000,0000,,.لكنّك لم تفعل
Dialogue: 0,0:15:52.61,0:15:54.14,Main,,0000,0000,0000,,.اكتشفت سبب ذلك
Dialogue: 0,0:15:55.61,0:15:57.34,Main,,0000,0000,0000,,البيانات الّتي يتمّ رقمنتها تحتوي
Dialogue: 0,0:15:57.41,0:16:00.44,Main,,0000,0000,0000,,.على شينوبي من فترة ما بعد حرب النّينجا العظمى الرّابعة
Dialogue: 0,0:16:00.84,0:16:04.28,Main,,0000,0000,0000,,.أيّ ما سبق ذلك مدرج فقط في لفائف مادّيّة
Dialogue: 0,0:16:05.18,0:16:06.51,Main,,0000,0000,0000,,،ما يعني
Dialogue: 0,0:16:06.58,0:16:11.34,Main,,0000,0000,0000,,.البيانات الّتي تبحث عنها مخزّنة هنا فقط
Dialogue: 0,0:16:12.18,0:16:15.34,Main,,0000,0000,0000,,.لكن تمّ تشديد الحراسة بعد الهجوم الأوّل
Dialogue: 0,0:16:15.98,0:16:19.21,Main,,0000,0000,0000,,لذا حاولت أن تضلّلنا وتجعلنا نفكّر أنّك ستهرب من القرية
Dialogue: 0,0:16:19.28,0:16:21.11,Main,,0000,0000,0000,,.لكي تُبعد الحراسة من هنا
Dialogue: 0,0:16:21.98,0:16:24.28,Main,,0000,0000,0000,,...فهمت. ما بين السّطور
Dialogue: 0,0:16:25.24,0:16:27.61,Main,,0000,0000,0000,,.فهمت، يمكنني أن أرى لمَ كنتَ الهوكاغي
Dialogue: 0,0:16:27.88,0:16:30.68,Main,,0000,0000,0000,,.لديّ أسئلة لا حصر لها لك
Dialogue: 0,0:16:31.44,0:16:34.38,Main,,0000,0000,0000,,كيف تسلّلت من نظام الاستشعار؟
Dialogue: 0,0:16:34.88,0:16:38.48,Main,,0000,0000,0000,,.سأكشف ما يقبع تحت قناعك
Dialogue: 0,0:16:46.38,0:16:48.21,Main,,0000,0000,0000,,!البرق الأرجوانيّ
Dialogue: 0,0:16:50.01,0:16:51.21,Main,,0000,0000,0000,,!نسخة ظلّ؟
Dialogue: 0,0:16:55.04,0:16:56.88,Main,,0000,0000,0000,,!تقنيّة دخان ضفدع الجبل
Dialogue: 0,0:17:12.14,0:17:13.54,Main,,0000,0000,0000,,هرب إذًا؟
Dialogue: 0,0:17:14.14,0:17:15.54,Main,,0000,0000,0000,,،وبناءً على ما رأيت
Dialogue: 0,0:17:15.61,0:17:18.18,Main,,0000,0000,0000,,.كان يخفي خدعًا أخرى
Dialogue: 0,0:17:23.54,0:17:26.61,Main,,0000,0000,0000,,.سحقًا، يا له من خصم مزعج
Dialogue: 0,0:17:30.04,0:17:35.58,Main - Italics,,0000,0000,0000,,.البيانات في حدّ ذاتها... لم تكن لها علاقة بهدفي
Dialogue: 0,0:17:36.14,0:17:40.31,Main - Italics,,0000,0000,0000,,.لم أتوقّع أن أخاطر بهذا القدر للحصول عليها
Dialogue: 0,0:17:43.28,0:17:47.34,Main - Italics,,0000,0000,0000,,.أظنّني أصبحتُ عاطفيًّا فحسب
Dialogue: 0,0:17:49.01,0:17:49.81,Main - Italics,,0000,0000,0000,,،غير ذلك
Dialogue: 0,0:17:49.88,0:17:55.64,Main - Italics,,0000,0000,0000,,.أتساءل لمَ لم يشنّ جيغن هجومًا آخر لاستعادة كاواكي
Dialogue: 0,0:17:56.54,0:17:59.94,Main - Italics,,0000,0000,0000,,...لا بدّ أنّه استنزف الكثير من التشّاكرا خاصّته في المعركة السّابقة
Dialogue: 0,0:18:01.14,0:18:02.28,Main - Italics,,0000,0000,0000,,!—ما يعني
Dialogue: 0,0:18:03.61,0:18:06.28,sign,,0000,0000,0000,,{\fs18\c&H927E70&\3c&HE0E8DD&\pos(476.1,317.36)}حديقة\Nسينجو
Dialogue: 0,0:18:07.74,0:18:09.21,Main,,0000,0000,0000,,!أنتم مذهلون
Dialogue: 0,0:18:09.28,0:18:12.24,Main,,0000,0000,0000,,!سمعت أنّكم حاصرتم الدّخيل مع السّادس
Dialogue: 0,0:18:12.81,0:18:14.04,Main,,0000,0000,0000,,.لسنا مذهلين
Dialogue: 0,0:18:14.64,0:18:16.74,Main,,0000,0000,0000,,.في النّهاية، هرب المجرم
Dialogue: 0,0:18:17.24,0:18:20.41,Main,,0000,0000,0000,,وقام السّادس بمعظم العمل، صحيح؟
Dialogue: 0,0:18:21.08,0:18:23.24,Main,,0000,0000,0000,,.ما زال الطّريق طويلًا أمامنا
Dialogue: 0,0:18:23.68,0:18:25.21,Main,,0000,0000,0000,,لم نستطع مواكبة معركة الذّكاء
Dialogue: 0,0:18:25.28,0:18:26.51,Main,,0000,0000,0000,,.بين المجرم والسّادس
Dialogue: 0,0:18:28.34,0:18:30.78,Main,,0000,0000,0000,,!لكن، تمّت حماية البيانات
Dialogue: 0,0:18:30.91,0:18:31.84,Main,,0000,0000,0000,,.هذا صحيح
Dialogue: 0,0:18:32.01,0:18:34.01,Main,,0000,0000,0000,,.أظنّ أنّكم قمتم بأكثر ممّا يكفي
Dialogue: 0,0:18:34.34,0:18:36.31,Main,,0000,0000,0000,,!هذا صحيح أيضًا
Dialogue: 0,0:18:36.58,0:18:39.44,Main,,0000,0000,0000,,!يمكننا أن نحاول الحصول على ثناء غنيمة أكبر في المرّة القادمة
Dialogue: 0,0:18:40.18,0:18:42.18,Main,,0000,0000,0000,,أنت متفائلة حقًّا، أليس كذلك؟
Dialogue: 0,0:18:42.84,0:18:45.81,Main,,0000,0000,0000,,.إن اكتأبت، سأصبح جائعة بغير داعٍ فحسب
Dialogue: 0,0:18:46.48,0:18:47.64,Main,,0000,0000,0000,,...لذا
Dialogue: 0,0:18:47.71,0:18:49.28,Main,,0000,0000,0000,,!لندفن أحزاننا بالحلوى
Dialogue: 0,0:18:49.34,0:18:51.44,Main,,0000,0000,0000,,!ستأتون معي، مفهوم؟
Dialogue: 0,0:18:51.61,0:18:52.54,Main,,0000,0000,0000,,!في هذا الوقت المبكّر؟
Dialogue: 0,0:18:52.61,0:18:55.08,Main,,0000,0000,0000,,ليس لديك عمل أفضل تقوم به، صحيح؟
Dialogue: 0,0:18:55.31,0:18:57.94,Main,,0000,0000,0000,,.آسف، لكن اسبقوني
Dialogue: 0,0:18:55.31,0:18:57.94,Main - top,,0000,0000,0000,,...هناك الزّلابيّات والتاياكي
Dialogue: 0,0:18:58.28,0:19:00.14,Main,,0000,0000,0000,,.أحتاج الذّهاب لمكان ما
Dialogue: 0,0:19:01.71,0:19:03.98,sign,,0000,0000,0000,,{\fs\3c&H614BB5&\frz352\frx20\fry326\move(232.2,108.92,268.2,124.04,13,2266)}عنف الغزل
Dialogue: 0,0:19:07.38,0:19:09.38,Main,,0000,0000,0000,,.كنت هنا إذًا أيّها السّادس
Dialogue: 0,0:19:10.11,0:19:10.98,Main,,0000,0000,0000,,...مهلًا
Dialogue: 0,0:19:11.68,0:19:13.11,Main,,0000,0000,0000,,آسف لأنّي لم أخبرك
Dialogue: 0,0:19:13.18,0:19:16.98,Main,,0000,0000,0000,,.أنّني كنت ذاهبًا لقسم المحفوظات بعد أن اتّصلت بي
Dialogue: 0,0:19:17.51,0:19:18.61,Main,,0000,0000,0000,,.لا بأس
Dialogue: 0,0:19:18.91,0:19:20.68,Main,,0000,0000,0000,,،إن كنت تريد خداع أعدائك
Dialogue: 0,0:19:20.74,0:19:22.41,Main,,0000,0000,0000,,فعليك أن تخدع حلفاءك أوّلًا، صحيح؟
Dialogue: 0,0:19:22.58,0:19:25.41,Main,,0000,0000,0000,,.لكن في النّهاية، هرب الدّخيل
Dialogue: 0,0:19:26.31,0:19:30.11,Main,,0000,0000,0000,,.لا ندري لماذا كان يسعى خلف بيانات قديمة
Dialogue: 0,0:19:30.71,0:19:33.81,Main,,0000,0000,0000,,.بشأن ذلك... أدركت شيئًا
Dialogue: 0,0:19:35.44,0:19:38.18,Main,,0000,0000,0000,,،تلك البيانات القديمة تخصّ الشّينوبي من الماضي فقط
Dialogue: 0,0:19:38.24,0:19:40.34,Main,,0000,0000,0000,,بدلًا من الحاضر، صحيح؟
Dialogue: 0,0:19:40.91,0:19:42.91,Main,,0000,0000,0000,,أجل، وماذا في ذلك؟
Dialogue: 0,0:19:43.54,0:19:45.08,Main,,0000,0000,0000,,،هذه محض نظريّة
Dialogue: 0,0:19:45.58,0:19:48.48,Main,,0000,0000,0000,,لكن ماذا إن كان الجاني أحد أولئك الشّينوبي؟
Dialogue: 0,0:19:50.31,0:19:52.98,Main,,0000,0000,0000,,،إن تمّ تسجيل التشّاكرا خاصّته في القرية
Dialogue: 0,0:19:53.31,0:19:56.21,Main,,0000,0000,0000,,.فحينها نظام الاستشعار الخاصّ بعشيرة ياماناكا لن يرصده
Dialogue: 0,0:19:56.34,0:19:57.28,Main,,0000,0000,0000,,أيعني ذلك
Dialogue: 0,0:19:57.34,0:20:00.01,Main,,0000,0000,0000,,أنّ اللّص كان شينوبي من هذه القرية سابقًا؟
Dialogue: 0,0:20:00.51,0:20:04.28,Main,,0000,0000,0000,,.لستُ على يقين، وما هذه إلّا نظريّة
Dialogue: 0,0:20:04.68,0:20:08.44,Main,,0000,0000,0000,,.لكن أظنّ أنّ علينا اعتبار كافّة الاحتمالات
Dialogue: 0,0:20:09.14,0:20:12.31,Main,,0000,0000,0000,,.هذا ما علّمتنيه هذه المرّة أيّها السّادس
Dialogue: 0,0:20:16.21,0:20:20.14,sign,,0000,0000,0000,,{\3c&H412B91&\c&H120E3A&\frz27\pos(153.9,340.04)}عنف\Nالغزل
Dialogue: 0,0:20:21.74,0:20:23.91,Main,,0000,0000,0000,,...إنّهم يكبرون بشكل جيّد
Dialogue: 0,0:20:24.14,0:20:26.94,Main,,0000,0000,0000,,.يبدو الجيل القادم واعدًا للغاية
Dialogue: 0,0:20:43.88,0:20:46.68,Main,,0000,0000,0000,,.مضى وقت طويل مذ رأيت وجهك
Dialogue: 0,0:20:46.78,0:20:49.11,Main,,0000,0000,0000,,.تبدو متعطّشًا للدّماء بحقّ
Dialogue: 0,0:20:49.88,0:20:51.04,Main,,0000,0000,0000,,...أمادو
Dialogue: 0,0:20:52.51,0:20:54.81,Main,,0000,0000,0000,,.جيغن يعيد شحن طاقته في الخلف
Dialogue: 0,0:20:55.08,0:20:57.41,Main,,0000,0000,0000,,.ما زال في نسبة عشرة في المئة فقط
Dialogue: 0,0:20:59.01,0:21:01.14,Main,,0000,0000,0000,,،إن أراد أحد رؤيته
Dialogue: 0,0:21:01.21,0:21:04.14,Main,,0000,0000,0000,,...فإمّا أن يكون الموضوع مهمًّا جدًّا أو
Dialogue: 0,0:21:05.41,0:21:07.38,Main,,0000,0000,0000,,.أنّه أتى ليقتله أثناء نومه
Dialogue: 0,0:21:13.48,0:21:15.74,Main,,0000,0000,0000,,إذًا الشّخص الّذي أبلغني بهذه الفرصة
Dialogue: 0,0:21:15.81,0:21:17.48,Main,,0000,0000,0000,,.هو لا أحد سواك
Dialogue: 0,0:21:18.38,0:21:20.08,Main,,0000,0000,0000,,.أجل، لقد أتيت بسرعة
Dialogue: 0,0:21:21.94,0:21:23.91,Main,,0000,0000,0000,,هل انتهيت من عملك مع قرية الورق؟
Dialogue: 0,0:21:24.28,0:21:27.48,Main,,0000,0000,0000,,.أجل، هذه فرصة العمر
Dialogue: 0,0:21:29.34,0:21:30.81,Main,,0000,0000,0000,,أين باقي الدّاخليّين؟
Dialogue: 0,0:21:31.21,0:21:32.81,Main,,0000,0000,0000,,.لقد خرج الجميع
Dialogue: 0,0:21:34.28,0:21:36.68,Main,,0000,0000,0000,,...لن يدرك أيّ منهم
Dialogue: 0,0:21:37.38,0:21:38.58,Main,,0000,0000,0000,,...هدفنا
Dialogue: 0,0:21:39.91,0:21:41.78,Main,,0000,0000,0000,,.الحقيقيّ أبدًا
Dialogue: 0,0:21:43.81,0:21:45.11,Main,,0000,0000,0000,,.آن الأوان أخيرًا
Dialogue: 0,0:21:45.84,0:21:47.94,Main,,0000,0000,0000,,...أجل، سوف
Dialogue: 0,0:21:48.84,0:21:51.81,Main,,0000,0000,0000,,.نطيح بجيغن
Dialogue: 0,0:23:26.07,0:23:28.93,Main,,0000,0000,0000,,.يبدو أنّنا حصلنا على سلاح سرّيّ
Dialogue: 0,0:23:29.13,0:23:32.00,Main,,0000,0000,0000,,.كلّ هذا بفضل البيانات الّتي جمعت في قرية الورق
Dialogue: 0,0:23:32.17,0:23:34.53,Main,,0000,0000,0000,,.من الجيّد دائمًا أن تمتلك الكثير من الأسلحة السّرّيّة
Dialogue: 0,0:23:34.90,0:23:37.57,Main,,0000,0000,0000,,.لا سيّما أنّ خصمنا هو جيغن
Dialogue: 0,0:23:37.90,0:23:38.83,Main,,0000,0000,0000,,.معك حقّ
Dialogue: 0,0:23:39.00,0:23:40.27,Main,,0000,0000,0000,,حسنًا إذًا، هل نبدأ؟
Dialogue: 0,0:23:40.53,0:23:41.43,Main,,0000,0000,0000,,.مفهوم
Dialogue: 0,0:23:41.57,0:23:42.77,Main,,0000,0000,0000,,.بالتّوفيق
Dialogue: 0,0:23:43.53,0:23:46.57,Main,,0000,0000,0000,,:في الحلقة القادمة
Dialogue: 0,0:23:46.70,0:23:48.07,Main,,0000,0000,0000,,"انشقاق أمادو"
Dialogue: 0,0:23:46.70,0:23:54.17,nxt ep title,,0000,0000,0000,,{\fs36\blur2\fad(300,000)\}انشقاق أمادو
Dialogue: 0,0:23:48.77,0:23:49.80,Main - top,,0000,0000,0000,,...حسنًا إذًا
Dialogue: 0,0:23:49.87,0:23:52.63,Main - top,,0000,0000,0000,,.أتساءل إن كانوا يملكون قهوة جيّدة هناك
