Dialogue: 0,0:19:39.10,0:19:40.18,Main,,0000,0000,0000,,!تبًّا! دخان حاجب
Dialogue: 0,0:19:42.18,0:19:43.43,Main,,0000,0000,0000,,!تعال من هنا
Dialogue: 0,0:19:46.93,0:19:47.81,Main,,0000,0000,0000,,!حسنًا
Dialogue: 0,0:19:49.56,0:19:50.31,Main,,0000,0000,0000,,!لقد تحرك
Dialogue: 0,0:19:50.39,0:19:51.18,Main,,0000,0000,0000,,!لا تدعوه يهرب
Dialogue: 0,0:19:51.26,0:19:52.47,Main,,0000,0000,0000,,!اقبضوا عليه واجعلوه يعترف
Dialogue: 0,0:19:54.14,0:19:55.97,Main,,0000,0000,0000,,!فن النينجا: لفيفة الوحش الخارق
