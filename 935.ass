Dialogue: 0,0:02:12.11,0:02:13.52,Default,,0000,0000,0000,,!أيّها البالون
Dialogue: 0,0:02:14.07,0:02:16.65,Default,,0000,0000,0000,,!إنّهم ليسوا جيّدين بما يكفي
Dialogue: 0,0:02:17.61,0:02:19.78,Default,,0000,0000,0000,,أليس لديك خصوم أقوى؟
Dialogue: 0,0:02:20.24,0:02:21.99,Default,,0000,0000,0000,,!يمكنك قتالي إن أردت
Dialogue: 0,0:02:23.62,0:02:25.54,Default,,0000,0000,0000,,!أرخيت دفاعاتك
Dialogue: 0,0:02:36.46,0:02:39.43,Default,,0000,0000,0000,,...سأستعمل هذه الآن
Dialogue: 0,0:02:48.68,0:02:50.35,Default,,0000,0000,0000,,...مطهّر
Dialogue: 0,0:02:50.39,0:02:52.77,Default,,0000,0000,0000,,!قاطع الغول
Dialogue: 0,0:03:00.15,0:03:02.99,Default,,0000,0000,0000,,!ما هذه القوّة...؟
Dialogue: 0,0:03:06.37,0:03:09.04,Default,,0000,0000,0000,,!أ-أيّها السّاموراي-ساما
Dialogue: 0,0:03:09.50,0:03:11.58,Default,,0000,0000,0000,,...أرسله دون لمسه
Dialogue: 0,0:03:11.58,0:03:12.96,Default,,0000,0000,0000,,!محلّقًا في الهواء
Dialogue: 0,0:03:20.76,0:03:22.18,Default,,0000,0000,0000,,.انس الأمر
Dialogue: 0,0:03:22.97,0:03:23.93,Default,,0000,0000,0000,,!لنواصل
