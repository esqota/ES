Dialogue: 0,0:02:37.35,0:02:41.40,Italics,,0000,0000,0000,,!دخل العالم في عصر قراصنة عظيم بالفعل
Dialogue: 0,0:02:44.39,0:02:47.56,Default,,0000,0000,0000,,!أنا آسف
Dialogue: 0,0:02:48.39,0:02:51.31,Default,,0000,0000,0000,,!آسف لأنّي عنيد
Dialogue: 0,0:02:51.31,0:02:55.07,Default,,0000,0000,0000,,!كنتُ مخطئًا
Dialogue: 0,0:03:01.50,0:03:02.70,Default,,0000,0000,0000,,...لوفي
Dialogue: 0,0:03:02.70,0:03:07.02,Default,,0000,0000,0000,,!أيّها الغبيّ! أمسك بيدي بسرعة
