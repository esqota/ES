Dialogue: 0,0:00:04.90,0:00:06.69,Default,,0000,0000,0000,,!وأخيرًا
Dialogue: 0,0:00:06.74,0:00:09.19,Default,,0000,0000,0000,,!عالم التسوكيومي الأبدية قد حلَّ أخيرًا
Dialogue: 0,0:00:16.49,0:00:18.36,Default,,0000,0000,0000,,!ناروتو! لا تستطيع الآن
Dialogue: 0,0:00:19.90,0:00:20.99,Default,,0000,0000,0000,,!لا تذهب للخارج
Dialogue: 0,0:00:21.57,0:00:23.65,Default,,0000,0000,0000,,،دون حماية السوسانو خاصّتي
Dialogue: 0,0:00:23.69,0:00:25.94,Default,,0000,0000,0000,,ستُقيّد بالغينجيتسو الخاصّ به كذلك
Dialogue: 0,0:01:57.50,0:02:01.80,ep title,,0000,0000,0000,,{\fad(500,500)}حكاية إيتاتشي - النّور والظّلام\Nالولادة والموت\N\N\N
Dialogue: 0,0:02:02.80,0:02:04.89,Default,,0000,0000,0000,,نار\N\N!ما الذي يجري؟
Dialogue: 0,0:02:06.47,0:02:09.14,Default,,0000,0000,0000,,رياح\N
Dialogue: 0,0:02:09.93,0:02:12.89,Default,,0000,0000,0000,,أرض\N
Dialogue: 0,0:02:13.76,0:02:16.59,Default,,0000,0000,0000,,برق\N
Dialogue: 0,0:02:16.93,0:02:20.89,Default,,0000,0000,0000,,ماء\N
Dialogue: 0,0:02:51.47,0:02:53.89,Default,,0000,0000,0000,,ما هذا؟
Dialogue: 0,0:02:59.76,0:03:03.34,Default,,0000,0000,0000,,هل هم بالدّاخل؟
Dialogue: 0,0:03:03.97,0:03:07.05,Default,,0000,0000,0000,,أيحجبون الضّوء بواسطة السّوسانو؟
Dialogue: 0,0:03:08.84,0:03:10.76,Default,,0000,0000,0000,,ما الذي يجري بالخارج الآن؟
Dialogue: 0,0:03:13.47,0:03:14.39,Default,,0000,0000,0000,,ساسكي؟
Dialogue: 0,0:03:14.43,0:03:16.39,Default,,0000,0000,0000,,وما الفائدة التي سنجنيها من معرفتنا لذلك؟
Dialogue: 0,0:03:18.84,0:03:21.01,Default,,0000,0000,0000,,لا يوجد ما بوسعك فعله حيال ذلك الآن
Dialogue: 0,0:03:21.76,0:03:23.55,Default,,0000,0000,0000,,ساسكي... هذا ليس بيت القصيد
Dialogue: 0,0:03:24.72,0:03:27.01,Default,,0000,0000,0000,,أريد وناروتو أن نعرف أيضًا
Dialogue: 0,0:03:28.55,0:03:30.47,Default,,0000,0000,0000,,،لأجل تحليل خطوتنا القادمة
Dialogue: 0,0:03:30.80,0:03:31.72,Default,,0000,0000,0000,,...ساكورا
Dialogue: 0,0:03:31.76,0:03:32.59,Default,,0000,0000,0000,,...كاكاشي
Dialogue: 0,0:03:32.84,0:03:34.93,Default,,0000,0000,0000,,أنتَ تتصرّف كساكورا الآن
Dialogue: 0,0:03:35.55,0:03:36.76,Default,,0000,0000,0000,,الزم الهدوء لبعض الوقت
Dialogue: 0,0:03:36.89,0:03:37.97,Default,,0000,0000,0000,,!ساسكي
Dialogue: 0,0:03:38.47,0:03:40.22,Default,,0000,0000,0000,,!علينا أن نعمل كفريق
Dialogue: 0,0:03:40.72,0:03:43.72,Default,,0000,0000,0000,,!على الفريق السّابع أن يعمل سويًّا لإسقاط مادارا
Dialogue: 0,0:03:43.89,0:03:46.72,Default,,0000,0000,0000,,...لقد أصبت. لا يوجد ما بوسعي فعله الآن
Dialogue: 0,0:03:46.93,0:03:48.09,Default,,0000,0000,0000,,!كاكاشي-سينسي
Dialogue: 0,0:03:48.80,0:03:51.55,Default,,0000,0000,0000,,،إن كنتَ تستطيع تحليل ما يوجد بالخارج بواسطة عينك اليسرى
Dialogue: 0,0:03:52.09,0:03:53.34,Default,,0000,0000,0000,,...ساسكي
Dialogue: 0,0:03:53.76,0:03:57.76,Default,,0000,0000,0000,,أنت من يجب أن تقود الفريق السّابع المكّون من أربعة أفراد
Dialogue: 0,0:03:57.76,0:03:58.76,Default,,0000,0000,0000,,!ماذا؟
Dialogue: 0,0:03:59.64,0:04:04.84,Default,,0000,0000,0000,,!أشكّ أنّه أبرع منكَ أو من ساكورا في التّخطيط
Dialogue: 0,0:04:05.55,0:04:07.30,Default,,0000,0000,0000,,...مع ذلك، من الممكن أن يكون أبرع منّي
Dialogue: 0,0:04:07.89,0:04:08.89,Default,,0000,0000,0000,,...على كلّ حال
Dialogue: 0,0:04:09.22,0:04:11.55,Default,,0000,0000,0000,,لقد فعّل مادارا تقنيته
Dialogue: 0,0:04:12.64,0:04:13.97,Default,,0000,0000,0000,,إنّه غينجيتسو قويّ
Dialogue: 0,0:04:14.93,0:04:19.43,Default,,0000,0000,0000,,أظنّ أنّ جميع من في الخارج قد وقعوا فيه
Dialogue: 0,0:04:21.80,0:04:25.55,Default,,0000,0000,0000,,لعلّنا وحدنا لم نتأثّر به
Dialogue: 0,0:04:28.43,0:04:29.80,Default,,0000,0000,0000,,التسوكيومي الأبديّة؟
Dialogue: 0,0:04:30.80,0:04:32.80,Default,,0000,0000,0000,,...إذًا فالجميع الآن
Dialogue: 0,0:04:38.18,0:04:39.47,Default,,0000,0000,0000,,داخل حلم
Dialogue: 0,0:05:04.09,0:05:05.09,Default,,0000,0000,0000,,!كيبا-ساما
Dialogue: 0,0:05:06.80,0:05:09.76,Default,,0000,0000,0000,,!أظنّني سأبدأ من بإقامة عطلةٍ جديدة باسم يوم الكلاب
Dialogue: 0,0:05:11.64,0:05:12.97,Default,,0000,0000,0000,,!إنّه أمر من الهوكاغي
Dialogue: 0,0:05:16.76,0:05:19.05,Default,,0000,0000,0000,,!الجميع سيمتلكون كلبًا
Dialogue: 0,0:05:19.34,0:05:20.55,Default,,0000,0000,0000,,!اذهبوا واحصلوا على كلب
Dialogue: 0,0:05:20.93,0:05:22.68,Default,,0000,0000,0000,,!إنّه أمر من الهوكاغي
Dialogue: 0,0:05:29.34,0:05:31.76,Default,,0000,0000,0000,,!لقد وجدتُ فصيلةً جديدةً أخيرًا
Dialogue: 0,0:05:33.97,0:05:34.93,Default,,0000,0000,0000,,...حشرة مطيعة
Dialogue: 0,0:05:39.84,0:05:41.22,Default,,0000,0000,0000,,!مذهل
Dialogue: 0,0:05:42.18,0:05:44.84,Default,,0000,0000,0000,,!يا لها من وليمة! تبدو لذيذةً جدًّا
Dialogue: 0,0:05:44.89,0:05:47.97,Default,,0000,0000,0000,,!حاولتُ بكلّ ما لديّ لأطبخ كلّ هذا لكَ يا عزيزي
Dialogue: 0,0:05:48.26,0:05:50.76,Default,,0000,0000,0000,,!يبدو أنّكَ وجدت معجبة
Dialogue: 0,0:05:50.80,0:05:52.09,Default,,0000,0000,0000,,!شكرًا على الطّعام
Dialogue: 0,0:06:01.14,0:06:04.80,Default,,0000,0000,0000,,!أحبّ الشرهين! أظنّهم في غاية الرّجولة
Dialogue: 0,0:06:06.80,0:06:09.80,Default,,0000,0000,0000,,آسف... لقد أكلتُ حصّتكِ أيضًا
Dialogue: 0,0:06:10.05,0:06:11.14,Default,,0000,0000,0000,,...لا بأس
Dialogue: 0,0:06:11.39,0:06:13.39,Default,,0000,0000,0000,,!لا زال هناك الكثير
Dialogue: 0,0:06:16.93,0:06:18.89,Default,,0000,0000,0000,,!أنا في غاية السّعادة
Dialogue: 0,0:06:21.97,0:06:24.59,Default,,0000,0000,0000,,!كم مرة عليّ إخبارك؟
Dialogue: 0,0:06:24.84,0:06:26.76,Default,,0000,0000,0000,,،إن كنتَ ستتأخر في عودتك من المهمّة
Dialogue: 0,0:06:26.80,0:06:28.05,Default,,0000,0000,0000,,!أخبرني سلفًا
Dialogue: 0,0:06:28.68,0:06:30.22,Default,,0000,0000,0000,,،لقد أعددتُ العشاء عبثًا
Dialogue: 0,0:06:30.26,0:06:32.05,Default,,0000,0000,0000,,الزواج مزعج -\Nكما أنّكَ أبقيتني أنتظر -
Dialogue: 0,0:06:32.09,0:06:33.55,Default,,0000,0000,0000,,أظنّني سأصرف هذا عنّي
Dialogue: 0,0:06:33.64,0:06:36.01,Default,,0000,0000,0000,,ألم تتعلّم بعد كلّ هذه السّنين؟ -\Nأجل -
Dialogue: 0,0:06:39.18,0:06:41.09,Default,,0000,0000,0000,,لن أدعك تحظى بإينو
Dialogue: 0,0:06:42.01,0:06:44.30,Default,,0000,0000,0000,,!إينو امرأتي... فلتنقلع من هنا
Dialogue: 0,0:06:44.47,0:06:46.30,Default,,0000,0000,0000,,كلّا، بل هي امرأتي
Dialogue: 0,0:06:46.89,0:06:49.34,Default,,0000,0000,0000,,!توقّفا عن القتال أنتما الاثنان
Dialogue: 0,0:06:50.39,0:06:52.26,Default,,0000,0000,0000,,ابنتي ذات شعبية كبيرة
Dialogue: 0,0:06:52.97,0:06:56.14,Default,,0000,0000,0000,,!هذا مزعج
Dialogue: 0,0:07:00.76,0:07:02.89,Default,,0000,0000,0000,,!إعصار كونوها العظيم
Dialogue: 0,0:07:08.39,0:07:10.05,Default,,0000,0000,0000,,!الشّباب يسود
Dialogue: 0,0:07:10.47,0:07:11.72,Default,,0000,0000,0000,,!لي
Dialogue: 0,0:07:13.26,0:07:14.14,Default,,0000,0000,0000,,!أحبّك
Dialogue: 0,0:07:14.18,0:07:15.97,Default,,0000,0000,0000,,!سـ- ساكورا
Dialogue: 0,0:07:18.64,0:07:20.30,Default,,0000,0000,0000,,!ساي -\N!ساي -
Dialogue: 0,0:07:20.93,0:07:22.14,Default,,0000,0000,0000,,ساي
Dialogue: 0,0:07:22.18,0:07:23.43,Default,,0000,0000,0000,,ساي
Dialogue: 0,0:07:23.55,0:07:24.80,Default,,0000,0000,0000,,صباح الخير جميعًا
Dialogue: 0,0:07:24.97,0:07:25.93,Default,,0000,0000,0000,,صباح الخير
Dialogue: 0,0:07:26.05,0:07:27.97,Default,,0000,0000,0000,,ابتسامتك جميلةٌ كالعادة
Dialogue: 0,0:07:28.14,0:07:28.84,Default,,0000,0000,0000,,أتظنّين ذلك؟
Dialogue: 0,0:07:29.09,0:07:30.84,Default,,0000,0000,0000,,ابتسامتك جميلةٌ بالفعل يا ساي
Dialogue: 0,0:07:31.01,0:07:32.22,Default,,0000,0000,0000,,!إنّها رائعة جدًّا
Dialogue: 0,0:07:33.05,0:07:36.93,Default,,0000,0000,0000,,!ساي! ابتسامتك هي الأفضل في كونوها
Dialogue: 0,0:07:42.39,0:07:44.18,Default,,0000,0000,0000,,!أكملته أخيرًا
Dialogue: 0,0:07:45.34,0:07:48.30,Default,,0000,0000,0000,,!إنّه يطير! ويتحرّك! دميتي المطلقة
Dialogue: 0,0:07:48.80,0:07:50.64,Default,,0000,0000,0000,,!إنّه يُجسّد كلّ أحلام قرية الرّمل
Dialogue: 0,0:07:50.72,0:07:53.34,Default,,0000,0000,0000,,!ستكون الحارس الإلهيّ لقرية الرّمل
Dialogue: 0,0:07:57.76,0:07:59.26,Default,,0000,0000,0000,,!هيا بنا
Dialogue: 0,0:08:06.43,0:08:08.09,Default,,0000,0000,0000,,!أختي الكبرى، أختي الكبرى
Dialogue: 0,0:08:09.89,0:08:12.68,Default,,0000,0000,0000,,!ساعديني رجاءً. أريد أن أستعين برأيك
Dialogue: 0,0:08:13.30,0:08:15.72,Default,,0000,0000,0000,,اهدأ. ما الأمر؟
Dialogue: 0,0:08:15.93,0:08:16.76,Default,,0000,0000,0000,,...كما ترين
Dialogue: 0,0:08:16.80,0:08:17.89,Default,,0000,0000,0000,,!تمهّل
Dialogue: 0,0:08:17.89,0:08:19.97,Default,,0000,0000,0000,,!دعيني أناقشكِ في أمرٍ ما أوّلًا
Dialogue: 0,0:08:20.14,0:08:24.22,Default,,0000,0000,0000,,أنتَ الكازيكاغي الآن. اتخذ قراراتك بنفسك
Dialogue: 0,0:08:24.30,0:08:25.09,Default,,0000,0000,0000,,!لا
Dialogue: 0,0:08:25.14,0:08:27.59,Default,,0000,0000,0000,,!أريد أن أسمع رأيكِ حقًّا
Dialogue: 0,0:08:27.64,0:08:29.09,Default,,0000,0000,0000,,!وأنا أيضًا! أرجوكِ يا أختي الكبرى
Dialogue: 0,0:08:29.14,0:08:31.09,Default,,0000,0000,0000,,!يجب أن أسمع رأيك أنتِ يا أختي الكبرى
Dialogue: 0,0:08:31.26,0:08:31.97,Default,,0000,0000,0000,,!أختي الكبرى
Dialogue: 0,0:08:32.01,0:08:32.97,Default,,0000,0000,0000,,!أختي الكبرى
Dialogue: 0,0:08:36.68,0:08:39.18,Default,,0000,0000,0000,,شقيقاي الصغيران ميؤوسٌ منهما
Dialogue: 0,0:08:52.55,0:08:54.80,Default,,0000,0000,0000,,!—وغارا
Dialogue: 0,0:08:55.80,0:08:57.89,Default,,0000,0000,0000,,هكذا إذًا؟ في الأكاديمية؟
Dialogue: 0,0:08:57.93,0:08:58.76,Default,,0000,0000,0000,,!نعم
Dialogue: 0,0:08:58.80,0:08:59.76,Default,,0000,0000,0000,,غارا-ساما
Dialogue: 0,0:09:01.80,0:09:03.97,Default,,0000,0000,0000,,أتى صديقك لرؤيتك
Dialogue: 0,0:09:04.39,0:09:05.14,Default,,0000,0000,0000,,!مرحبًا
Dialogue: 0,0:09:06.72,0:09:08.09,Default,,0000,0000,0000,,ماذا سنلعب اليوم؟
Dialogue: 0,0:09:08.30,0:09:09.89,Default,,0000,0000,0000,,!فلنذهب للخارج
Dialogue: 0,0:09:09.97,0:09:10.93,Default,,0000,0000,0000,,...غارا
Dialogue: 0,0:09:12.76,0:09:14.05,Default,,0000,0000,0000,,لا تتأخّر في الخارج
Dialogue: 0,0:09:15.22,0:09:15.97,Default,,0000,0000,0000,,نعم
Dialogue: 0,0:09:29.93,0:09:31.30,Default,,0000,0000,0000,,إذًا متى بإمكاننا أن نخرج من هنا؟
Dialogue: 0,0:09:31.76,0:09:34.01,Default,,0000,0000,0000,,يبدو أنّ الغينجيتسو يعمل على ضوء القمر
Dialogue: 0,0:09:35.01,0:09:37.47,Default,,0000,0000,0000,,والذي سيضعف تدريجيًّا
Dialogue: 0,0:09:38.72,0:09:40.72,Default,,0000,0000,0000,,لكن ما دام هناك ضوءٌ فلا فائدة
Dialogue: 0,0:09:42.55,0:09:43.51,Default,,0000,0000,0000,,!سحقًا
Dialogue: 0,0:09:47.72,0:09:52.39,Default,,0000,0000,0000,,{\i1}عليّ أن أخبرك بكلّ شيءٍ قبل أن نفترق{\i1}
Dialogue: 0,0:09:53.80,0:09:55.55,Default,,0000,0000,0000,,{\i1}لا داعي للكذب بعد الآن{\i1}
Dialogue: 0,0:09:56.89,0:09:58.72,Default,,0000,0000,0000,,{\i1}سأريكَ الحقيقة برمّتها{\i1}
Dialogue: 0,0:10:04.84,0:10:06.89,Default,,0000,0000,0000,,{\i1}!هذه ذكريات إيتاتشي{\i1}
Dialogue: 0,0:10:09.14,0:10:14.97,Default,,0000,0000,0000,,{\i1}...حينها، أخبرني إيتاتشي حول الخلاف بين كونوها والأوتشيها{\i1}
Dialogue: 0,0:10:15.59,0:10:16.93,Default,,0000,0000,0000,,{\i1}لكنّ ذلك لم يكن كلّ شيء{\i1}
Dialogue: 0,0:10:18.30,0:10:19.93,Default,,0000,0000,0000,,{\i1}...هذه ليست مجرّد ذكريات{\i1}
Dialogue: 0,0:10:20.55,0:10:24.89,Default,,0000,0000,0000,,{\i1}...بل هي معرفة إيتاتشي وأفكاره ومعاناته{\i1}
Dialogue: 0,0:10:26.80,0:10:28.84,Default,,0000,0000,0000,,{\i1}...سأحبّكَ دومًا{\i1}
Dialogue: 0,0:10:30.26,0:10:32.97,Default,,0000,0000,0000,,{\i1}...إنّه كلّ ما كان عليه أوتشيها إيتاتشي{\i1}
Dialogue: 0,0:10:35.47,0:10:39.01,Default,,0000,0000,0000,,{\i1}مادارا... إيّاك والتحدّث حول الأوتشيها{\i1}
Dialogue: 0,0:10:39.68,0:10:43.09,Default,,0000,0000,0000,,{\i1}الوحيد الذي يملك الحقّ في الحديث حولها هو أخي{\i1}
Dialogue: 0,0:11:49.76,0:11:52.89,Default,,0000,0000,0000,,{\i1}إذًا هذه هي... حرب النينجا العظمى{\i1}
Dialogue: 0,0:12:05.18,0:12:07.47,Default,,0000,0000,0000,,!ماء! ماء
Dialogue: 0,0:12:17.14,0:12:18.39,Default,,0000,0000,0000,,...شـ- شكرًا لك
Dialogue: 0,0:12:21.31,0:12:22.68,Default,,0000,0000,0000,,{\i1}أدوات النينجا؟{\i0}
Dialogue: 0,0:12:40.14,0:12:41.18,Default,,0000,0000,0000,,...أبي
Dialogue: 0,0:12:41.89,0:12:44.26,Default,,0000,0000,0000,,لمَ حاول هذا الشينوبي قتلي؟
Dialogue: 0,0:12:45.01,0:12:46.18,Default,,0000,0000,0000,,...لم أفعل أيّ شيء
Dialogue: 0,0:12:47.18,0:12:48.26,Default,,0000,0000,0000,,لأنّنا في حرب
Dialogue: 0,0:12:49.06,0:12:50.14,Default,,0000,0000,0000,,حرب"؟"
Dialogue: 0,0:12:51.10,0:12:52.26,Default,,0000,0000,0000,,إنّها ليست حربًا بين النّاس
Dialogue: 0,0:12:53.14,0:12:54.51,Default,,0000,0000,0000,,بل هي حربٌ بين الدول
Dialogue: 0,0:12:55.64,0:12:59.56,Default,,0000,0000,0000,,لهذا يُقدم الغرباء على قتل بعضهم البعض بدون مغزى
Dialogue: 0,0:13:01.14,0:13:02.56,Default,,0000,0000,0000,,أهذا ما في الأمر؟
Dialogue: 0,0:13:03.06,0:13:04.64,Default,,0000,0000,0000,,هذا هو عالم الشينوبي
Dialogue: 0,0:13:06.47,0:13:07.22,Default,,0000,0000,0000,,...اسمع يا إيتاتشي
Dialogue: 0,0:13:08.51,0:13:10.06,Default,,0000,0000,0000,,...إيّاك أن تنسى هذا المنظر
Dialogue: 0,0:13:12.85,0:13:13.51,Default,,0000,0000,0000,,نعم
Dialogue: 0,0:13:19.47,0:13:23.18,Default,,0000,0000,0000,,لقد توصّلنا إلى هدنة، لكنّنا تكبّدنا تضحيةً كبيرة
Dialogue: 0,0:13:23.93,0:13:26.51,Default,,0000,0000,0000,,ينوي الساندايمي أن يتحمّل كامل المسؤولية ويستقيل
Dialogue: 0,0:13:27.97,0:13:30.51,Default,,0000,0000,0000,,هناك أصواتٌ تدعم تنصيبك كيوندايمي أيّها القائد
Dialogue: 0,0:13:30.93,0:13:32.64,Default,,0000,0000,0000,,...رجاءً -\Nيكفي كلامًا -
Dialogue: 0,0:13:34.93,0:13:36.39,Default,,0000,0000,0000,,ما الذي يجدر بنا فعله حيال هاتاكي كاكاشي؟
Dialogue: 0,0:13:39.14,0:13:42.06,Default,,0000,0000,0000,,إنّه لا ينتمي لعشيرتنا، إلّا أنّه يملك الشارينغان
Dialogue: 0,0:13:42.93,0:13:45.85,Default,,0000,0000,0000,,أعي أن أوتشيها أوبيتو قد قاتل بجسارة
Dialogue: 0,0:13:46.97,0:13:48.43,Default,,0000,0000,0000,,دعونا نحترم رغباته
Dialogue: 0,0:13:49.64,0:13:51.93,Default,,0000,0000,0000,,...علينا أن نعيد الشارينغان إلى الأوتشيها
Dialogue: 0,0:13:51.97,0:13:53.72,Default,,0000,0000,0000,,لقد انتهت الحرب توًّا
Dialogue: 0,0:13:54.51,0:13:56.47,Default,,0000,0000,0000,,لا تزرعوا بذور الخصام
Dialogue: 0,0:13:56.85,0:13:57.51,Default,,0000,0000,0000,,حاضر
Dialogue: 0,0:14:00.26,0:14:01.76,Default,,0000,0000,0000,,ظفرنا بالسّلام أخيرًا
Dialogue: 0,0:14:02.81,0:14:05.26,Default,,0000,0000,0000,,وسنثابر للحفاظ عليه
Dialogue: 0,0:14:06.60,0:14:08.47,Default,,0000,0000,0000,,...هذا هو واجب الأوتشيها
Dialogue: 0,0:14:16.81,0:14:20.56,Default,,0000,0000,0000,,لا مغزى من النحيب على الأموات
Dialogue: 0,0:14:21.56,0:14:25.81,Default,,0000,0000,0000,,إن كان هناك أيّ معنى وراء الموت، فهو استغلاله
Dialogue: 0,0:14:28.01,0:14:29.64,Default,,0000,0000,0000,,ما معنى الحياة؟
Dialogue: 0,0:14:30.64,0:14:31.35,Default,,0000,0000,0000,,لا يوجد
Dialogue: 0,0:14:33.14,0:14:36.26,Default,,0000,0000,0000,,هناك معنى للحياة إن كانت خالدة
Dialogue: 0,0:14:57.01,0:14:58.01,Default,,0000,0000,0000,,{\i1}...لا يوجد معنى{\i0}
Dialogue: 0,0:14:58.97,0:15:00.14,Default,,0000,0000,0000,,{\i1}للحياة؟{\i0}
Dialogue: 0,0:15:50.06,0:15:52.68,Default,,0000,0000,0000,,لا أحد يريد أن يموت، صحيح؟
Dialogue: 0,0:16:03.47,0:16:04.56,Default,,0000,0000,0000,,...أنتم
Dialogue: 0,0:16:21.01,0:16:22.93,Default,,0000,0000,0000,,{\i1}ما هي الحياة على أيّ حال؟{\i0}
Dialogue: 0,0:16:29.35,0:16:30.22,Default,,0000,0000,0000,,اعتني بنفسك رجاءً
Dialogue: 0,0:16:30.31,0:16:31.72,Default,,0000,0000,0000,,!شكرًا جزيلًا
Dialogue: 0,0:16:32.72,0:16:33.56,Default,,0000,0000,0000,,...أمّي
Dialogue: 0,0:16:34.06,0:16:34.72,Default,,0000,0000,0000,,ماذا هناك؟
Dialogue: 0,0:16:35.93,0:16:37.14,Default,,0000,0000,0000,,هل أنت مريضة؟
Dialogue: 0,0:16:37.93,0:16:39.06,Default,,0000,0000,0000,,الأمر ليس كذلك
Dialogue: 0,0:16:40.93,0:16:41.93,Default,,0000,0000,0000,,...اسمع
Dialogue: 0,0:16:43.14,0:16:46.14,Default,,0000,0000,0000,,ستحظى بأخٍ أو أخت
Dialogue: 0,0:16:49.01,0:16:51.72,Default,,0000,0000,0000,,أجل. ستصبح أخًا كبيرًا
Dialogue: 0,0:16:55.01,0:16:58.01,Default,,0000,0000,0000,,أمّي، أريد أخًا صغيرًا
Dialogue: 0,0:16:58.39,0:17:00.93,Default,,0000,0000,0000,,لكنّ أختًا ستكون ظريفةً أيضًا، أليس كذلك؟
Dialogue: 0,0:17:03.10,0:17:04.18,Default,,0000,0000,0000,,لديّ حدسٌ أنّه سيكون أخًا صغيرًا
Dialogue: 0,0:17:08.14,0:17:08.64,Default,,0000,0000,0000,,!عجبًا
Dialogue: 0,0:17:09.22,0:17:10.18,Default,,0000,0000,0000,,!إنّها تُثلج
Dialogue: 0,0:17:13.14,0:17:14.51,Default,,0000,0000,0000,,سيولد في الصّيف
Dialogue: 0,0:17:29.14,0:17:32.10,Default,,0000,0000,0000,,إنّه صبي! إنّه أخوك الصغير
Dialogue: 0,0:17:35.76,0:17:36.60,Default,,0000,0000,0000,,{\i1}...حياة{\i0}
Dialogue: 0,0:17:37.60,0:17:39.10,Default,,0000,0000,0000,,{\i1}حياة جديدة{\i0}
Dialogue: 0,0:17:41.76,0:17:43.14,Default,,0000,0000,0000,,هل اخترتَ اسمًا؟
Dialogue: 0,0:17:43.64,0:17:44.31,Default,,0000,0000,0000,,أجل
Dialogue: 0,0:17:45.14,0:17:46.06,Default,,0000,0000,0000,,...ساسكي
Dialogue: 0,0:17:46.81,0:17:47.97,Default,,0000,0000,0000,,أوتشيها ساسكي
Dialogue: 0,0:17:48.93,0:17:51.72,Default,,0000,0000,0000,,...إنّه اسمٌ رائع، لكنّه
Dialogue: 0,0:17:52.31,0:17:57.01,Default,,0000,0000,0000,,أجل، إنّه اسم والد الساندايمي. سبقَ وأن سألتُه
Dialogue: 0,0:17:57.85,0:17:58.43,Default,,0000,0000,0000,,فهمت
Dialogue: 0,0:18:00.01,0:18:01.01,Default,,0000,0000,0000,,...ساسكي
Dialogue: 0,0:18:01.47,0:18:03.60,Default,,0000,0000,0000,,علينا أن نربّيه على ألّا يُدنّس اسمه أبدًا
Dialogue: 0,0:18:08.26,0:18:09.68,Default,,0000,0000,0000,,!أحسنت، أحسنت يا إيتاتشي
Dialogue: 0,0:18:09.81,0:18:10.64,Default,,0000,0000,0000,,!إيتاتشي
Dialogue: 0,0:18:12.06,0:18:13.01,Default,,0000,0000,0000,,!إيتاتشي
Dialogue: 0,0:18:14.01,0:18:16.81,Default,,0000,0000,0000,,{\i1}أنا هكذا أيضًا{\i0}
Dialogue: 0,0:18:26.06,0:18:31.39,Default,,0000,0000,0000,,{\i1}...ولادة... موت... ولادة... موت{\i0}
Dialogue: 0,0:18:31.81,0:18:32.39,Default,,0000,0000,0000,,!عفوًا
Dialogue: 0,0:18:35.89,0:18:38.39,Default,,0000,0000,0000,,ألستَ من الأوتشيها؟ أوتشيها في قسمي؟
Dialogue: 0,0:18:39.10,0:18:39.81,Default,,0000,0000,0000,,فلنلعب سويًا
Dialogue: 0,0:18:40.35,0:18:41.85,Default,,0000,0000,0000,,ماذا تريد أن نفعل اليوم؟
Dialogue: 0,0:18:42.43,0:18:44.06,Default,,0000,0000,0000,,!ركل العلبة! فلنلعب لعبة ركل العلبة
Dialogue: 0,0:18:45.01,0:18:47.93,Default,,0000,0000,0000,,!ماذا؟ سبقَ ولعبناها البارحة
Dialogue: 0,0:18:50.51,0:18:52.72,Default,,0000,0000,0000,,أنت! هل تُقلّل من احترامنا؟
Dialogue: 0,0:18:53.56,0:18:54.72,Default,,0000,0000,0000,,!قل شيئًا
Dialogue: 0,0:18:56.97,0:18:58.85,Default,,0000,0000,0000,,لديّ تدريبٌ في الشوريكين الآن
Dialogue: 0,0:18:59.06,0:19:00.68,Default,,0000,0000,0000,,...مذهل -\N...مذهل -
Dialogue: 0,0:19:00.81,0:19:01.85,Default,,0000,0000,0000,,...حسنًا
Dialogue: 0,0:19:02.10,0:19:04.39,Default,,0000,0000,0000,,!دعونا نتدرّب على الشوريكين كذلك
Dialogue: 0,0:19:05.14,0:19:06.14,Default,,0000,0000,0000,,!لا، لا تفعلوا
Dialogue: 0,0:19:10.06,0:19:11.06,Default,,0000,0000,0000,,!ذاك الفتى
Dialogue: 0,0:19:11.10,0:19:13.51,Default,,0000,0000,0000,,!يحاول التباهي! يا له من متعجرف
Dialogue: 0,0:19:16.01,0:19:19.06,Default,,0000,0000,0000,,!توقّفوا يا رفاق
Dialogue: 0,0:19:20.01,0:19:23.39,Default,,0000,0000,0000,,!اخرسي! هذه مسألة بيننا نحن الفتيان
Dialogue: 0,0:19:24.51,0:19:25.89,Default,,0000,0000,0000,,{\i1}حياةٌ تولد{\i0}
Dialogue: 0,0:19:29.47,0:19:30.76,Default,,0000,0000,0000,,{\i1}وحياةٌ تموت{\i0}
Dialogue: 0,0:19:35.01,0:19:37.51,Default,,0000,0000,0000,,{\i1}...الحياة... معركة{\i0}
Dialogue: 0,0:19:38.18,0:19:40.64,Default,,0000,0000,0000,,!أنت! لا تهرب
Dialogue: 0,0:19:54.35,0:19:55.39,Default,,0000,0000,0000,,!مذهل
Dialogue: 0,0:19:56.51,0:19:57.72,Default,,0000,0000,0000,,هل هي طفلة؟
Dialogue: 0,0:19:59.35,0:20:00.43,Default,,0000,0000,0000,,بل هو ولد
Dialogue: 0,0:20:01.10,0:20:02.76,Default,,0000,0000,0000,,!إنّه ظريفٌ جدًّا
Dialogue: 0,0:20:03.89,0:20:05.72,Default,,0000,0000,0000,,ما اسمك؟
Dialogue: 0,0:20:14.51,0:20:15.64,Default,,0000,0000,0000,,...أمّي
Dialogue: 0,0:20:16.01,0:20:18.89,Default,,0000,0000,0000,,هل سيُرزق اليوندايمي بمولودٍ أيضًا؟
Dialogue: 0,0:20:19.39,0:20:21.93,Default,,0000,0000,0000,,أجل، أتساءل ما سيكون
Dialogue: 0,0:20:23.76,0:20:26.97,Default,,0000,0000,0000,,سأخرج اللّيلة، لذا فلتتناول عشاءك
Dialogue: 0,0:20:27.06,0:20:28.01,Default,,0000,0000,0000,,حسنًا
Dialogue: 0,0:20:28.47,0:20:31.51,Default,,0000,0000,0000,,والدك يعمل أيضًا، لذا اعتنِ بساسكي رجاءً
Dialogue: 0,0:20:31.93,0:20:32.56,Default,,0000,0000,0000,,نعم
Dialogue: 0,0:20:48.14,0:20:50.39,Default,,0000,0000,0000,,إنّه بدرٌ اليوم يا ساسكي
Dialogue: 0,0:21:01.01,0:21:01.97,Default,,0000,0000,0000,,ما هذا؟
Dialogue: 0,0:22:38.68,0:22:41.14,Default,,0000,0000,0000,,!مرحبًا بعودتك يا أبي! أرجوكَ علّمني تقنيةً ما
Dialogue: 0,0:22:41.22,0:22:42.22,Default,,0000,0000,0000,,تقنية؟
Dialogue: 0,0:22:42.47,0:22:44.14,Default,,0000,0000,0000,,ألا يعلّموكم في الأكاديمية؟
Dialogue: 0,0:22:44.39,0:22:45.47,Default,,0000,0000,0000,,ما يعلّموننا سهلٌ جدًّا
Dialogue: 0,0:22:47.10,0:22:50.01,Default,,0000,0000,0000,,كما هو متوقّعٌ من ابني. أظنّها ستكون سهلة عليك
Dialogue: 0,0:22:50.30,0:22:51.89,Default,,0000,0000,0000,,انتظرني في حقل التدريب
Dialogue: 0,0:22:52.30,0:22:54.10,Default,,0000,0000,0000,,احرصا أن تعودا على العشاء
Dialogue: 0,0:22:55.63,0:22:59.50,Default,,0000,0000,0000,,{\an8}في الحلقة القادمة: العبقري
Dialogue: 0,0:22:58.08,0:23:04.70,nxt ep title,,0000,0000,0000,,{\fad(500,000)}حكاية إيتاتشي - النّور والظّلام\Nالعبقري\N\N\N
Dialogue: 0,0:22:59.60,0:23:01.14,Default,,0000,0000,0000,,{\an8}حسنًا، مفهوم
Dialogue: 0,0:23:04.80,0:23:17.76,sayonara,,0000,0000,0000,,!تابعونا في الحلقة القادمة\N\N\N
