Dialogue: 0,0:00:00.00,0:00:03.06,Sign 03,,0000,0000,0000,,قوّة
Dialogue: 0,0:00:46.98,0:00:49.23,Default,,0000,0000,0000,,.أظنّ أنّ هذا يكفي
Dialogue: 0,0:01:11.25,0:01:12.38,Default,,0000,0000,0000,,تلك الحفرة...؟
Dialogue: 0,0:01:14.17,0:01:15.17,Default,,0000,0000,0000,,...هذا الرّجل
Dialogue: 0,0:01:16.80,0:01:17.84,Default,,0000,0000,0000,,!إنّه من حرس القرية
Dialogue: 0,0:01:24.98,0:01:26.48,Default,,0000,0000,0000,,.لنتقابل من جديد
Dialogue: 0,0:01:40.07,0:01:41.20,Default,,0000,0000,0000,,...لقد هرب
Dialogue: 0,0:01:41.83,0:01:44.91,Default,,0000,0000,0000,,سيّد ياماتو... من كان؟
Dialogue: 0,0:01:45.21,0:01:46.21,Default,,0000,0000,0000,,.سأشرح لكم الأمر
Dialogue: 0,0:01:47.83,0:01:50.08,Default - Italics,,0000,0000,0000,,.{\i1}سوف نحتاج للدّعم
Dialogue: 0,0:01:53.17,0:01:54.46,Default,,0000,0000,0000,,!اصطدتُ واحدة
Dialogue: 0,0:01:56.67,0:01:58.43,Default,,0000,0000,0000,,!أمسكتها
Dialogue: 0,0:02:01.18,0:02:02.51,Default,,0000,0000,0000,,!تفضّل... هذه على حسابي
Dialogue: 0,0:02:03.97,0:02:05.89,Default,,0000,0000,0000,,.شكرًا أيّها العمّ
Dialogue: 0,0:02:05.89,0:02:08.35,Default,,0000,0000,0000,,أنتم من قرية تونيكا، صحيح؟
Dialogue: 0,0:02:09.60,0:02:11.40,Default,,0000,0000,0000,,.تعلم إلام أشير، فأنت من الحرس
Dialogue: 0,0:02:13.40,0:02:16.11,Default,,0000,0000,0000,,.نعم... لكنّي قد سُرِّحت من عملي
Dialogue: 0,0:02:16.53,0:02:18.91,Default,,0000,0000,0000,,.تبدو مصابًا إصابة بليغة
Dialogue: 0,0:02:18.91,0:02:19.91,Default,,0000,0000,0000,,ما الّذي حدث؟
Dialogue: 0,0:02:22.74,0:02:24.54,Default,,0000,0000,0000,,.مجرّد حادثة لا غير
Dialogue: 0,0:02:26.54,0:02:29.71,Default,,0000,0000,0000,,!لدينا أسعار في متناول الجميع\N!بضاعتنا طازجة
Dialogue: 0,0:02:29.71,0:02:31.79,Default,,0000,0000,0000,,{\fad(0,500)}!توقّفوا وعاينوا
Dialogue: 0,0:02:39.97,0:02:41.22,Default,,0000,0000,0000,,!معلّم
Dialogue: 0,0:02:41.22,0:02:42.22,Default,,0000,0000,0000,,!على رسلك
Dialogue: 0,0:02:42.22,0:02:43.35,Default,,0000,0000,0000,,!أنا آسف
Dialogue: 0,0:02:43.35,0:02:45.10,Default,,0000,0000,0000,,!لقد فعلتُها
Dialogue: 0,0:02:45.10,0:02:45.81,Default,,0000,0000,0000,,!انظر إلى كثرتها
Dialogue: 0,0:02:47.39,0:02:49.27,Default,,0000,0000,0000,,!هذا بفضل مهاراتي الفذّة
Dialogue: 0,0:02:49.73,0:02:51.86,Default,,0000,0000,0000,,.لكن أنا من اختار الطُّعم
Dialogue: 0,0:02:53.69,0:02:56.11,Default,,0000,0000,0000,,!لم تمسك بسمكة واحدة حتّى غيّرت الطُّعم
Dialogue: 0,0:02:57.32,0:02:58.95,Default,,0000,0000,0000,,سمك، إذًا؟
Dialogue: 0,0:02:58.95,0:03:01.45,Default,,0000,0000,0000,,.أنا لا أحبّ السّمك
Dialogue: 0,0:03:01.45,0:03:03.20,Default,,0000,0000,0000,,.فاز، لا تكن لحوحًا هكذا
Dialogue: 0,0:03:03.49,0:03:05.16,Default,,0000,0000,0000,,.أكلها صعبٌ للغاية
Dialogue: 0,0:03:07.04,0:03:09.12,Default,,0000,0000,0000,,ولا أحبّ الأشياء الّتي تفوح \N.منها رائحة الأسماك
Dialogue: 0,0:03:11.96,0:03:14.34,Default,,0000,0000,0000,,...كانت أمّي لتعدّ شيئًا مختلفًا
Dialogue: 0,0:03:14.34,0:03:17.01,Default,,0000,0000,0000,,!أمّك لم تعد موجودة الآن
Dialogue: 0,0:03:48.75,0:03:52.00,Default,,0000,0000,0000,,.اعتدتِ الدّندنة بهذا اللّحن في الصّف أيضًا
Dialogue: 0,0:03:52.71,0:03:54.63,Default,,0000,0000,0000,,.قالت أنّها تستطيع سماعه أو ما شابه
Dialogue: 0,0:03:54.96,0:03:55.92,Default,,0000,0000,0000,,تسمعه؟
Dialogue: 0,0:03:58.00,0:03:58.59,Default,,0000,0000,0000,,أتسمعينه الآن؟
Dialogue: 0,0:05:50.03,0:05:54.45,Default,,0000,0000,0000,,هل تعرفين النّاجيَ من حادثة القرية \Nيا آنسة شيسيرو؟
Dialogue: 0,0:05:54.45,0:05:57.58,Default,,0000,0000,0000,,.نعم، لقد كنّا صديقيْ طفولة
Dialogue: 0,0:05:58.04,0:06:00.34,Default,,0000,0000,0000,,.وقد عشنا معًا عندما كنّا صغارًا
Dialogue: 0,0:06:00.92,0:06:02.55,Default,,0000,0000,0000,,.اعتدتُ أن أناديه أخي
Dialogue: 0,0:06:02.84,0:06:04.05,Default,,0000,0000,0000,,.وما زلتُ كذلك
Dialogue: 0,0:06:05.97,0:06:08.09,Default,,0000,0000,0000,,.لم أره منذ مدّة طويلة
Dialogue: 0,0:06:08.64,0:06:11.55,Default,,0000,0000,0000,,.وقد ازداد وزنه نوعًا ما
Dialogue: 0,0:06:11.93,0:06:15.52,Default,,0000,0000,0000,,.لكنّي سعيدة لأنّه ما زال على عهده الّذي عرفتُه
Dialogue: 0,0:06:16.06,0:06:18.02,Default,,0000,0000,0000,,!لقد قام بحماية خمسة أطفال
Dialogue: 0,0:06:18.02,0:06:18.98,Default,,0000,0000,0000,,!هذا رائع
Dialogue: 0,0:06:21.15,0:06:22.44,Default,,0000,0000,0000,,ما الخطب معك أنت؟
Dialogue: 0,0:06:22.44,0:06:25.86,Default,,0000,0000,0000,,.أشعر بثقل في بطني
Dialogue: 0,0:06:32.87,0:06:34.49,Default,,0000,0000,0000,,هل بإمكانكما الانتظار هنا؟
Dialogue: 0,0:06:34.49,0:06:36.00,Default,,0000,0000,0000,,.سأرى إن كان موجودًا
Dialogue: 0,0:06:50.22,0:06:51.59,Default,,0000,0000,0000,,!اهربوا
Dialogue: 0,0:06:53.89,0:06:55.43,Default,,0000,0000,0000,,ماذا هناك؟
Dialogue: 0,0:06:57.23,0:06:58.27,Default,,0000,0000,0000,,أخي؟
Dialogue: 0,0:06:59.39,0:07:00.81,Default,,0000,0000,0000,,!معلّم
Dialogue: 0,0:07:00.81,0:07:02.48,Default,,0000,0000,0000,,لماذا نهرب؟
Dialogue: 0,0:07:02.94,0:07:05.94,Default,,0000,0000,0000,,...العلامة الّتي على واقية جبهة ذلك الشّينوبي
Dialogue: 0,0:07:06.48,0:07:09.40,Default,,0000,0000,0000,,!كان من هاجموا القرية يرتدون مثلها
Dialogue: 0,0:07:11.70,0:07:12.91,Default,,0000,0000,0000,,.تمهّلوا
Dialogue: 0,0:07:12.91,0:07:16.70,Default,,0000,0000,0000,,...على رسلكم رجاءً، فلا ننوي إيذاءكم
Dialogue: 0,0:07:33.26,0:07:35.26,Sign 01,,0000,0000,0000,,!خطر\N{\fs25}ممنوع المرور
Dialogue: 0,0:07:39.93,0:07:42.15,Default,,0000,0000,0000,,!توقّف يا ليو! هذا خطير
Dialogue: 0,0:07:43.48,0:07:44.90,Default,,0000,0000,0000,,!لكن علينا أن نهرب
Dialogue: 0,0:07:57.37,0:07:59.33,Default,,0000,0000,0000,,!هيّا يا معلّم
Dialogue: 0,0:08:01.29,0:08:02.17,Default,,0000,0000,0000,,...مينا
Dialogue: 0,0:08:04.42,0:08:05.29,Default,,0000,0000,0000,,!لنذهب
Dialogue: 0,0:08:24.81,0:08:25.73,Default,,0000,0000,0000,,!معلّم
Dialogue: 0,0:08:25.90,0:08:26.94,Default,,0000,0000,0000,,!معلّم
Dialogue: 0,0:08:26.94,0:08:28.44,Default,,0000,0000,0000,,!ما العمل؟
Dialogue: 0,0:08:33.78,0:08:34.91,Default,,0000,0000,0000,,!ناروتو
Dialogue: 0,0:08:34.91,0:08:35.66,Default,,0000,0000,0000,,!أعلم
Dialogue: 0,0:08:38.41,0:08:39.49,Default,,0000,0000,0000,,…أنا آسف
Dialogue: 0,0:09:01.77,0:09:02.85,Default,,0000,0000,0000,,ما الّذي يحدث؟
Dialogue: 0,0:09:03.23,0:09:04.14,Default,,0000,0000,0000,,!أخي؟
Dialogue: 0,0:09:07.06,0:09:09.32,Default,,0000,0000,0000,,!أنت ثقيل
Dialogue: 0,0:09:10.98,0:09:13.07,Default,,0000,0000,0000,,.أنا آسف، فقد بالغتُ في ردّة فعلي
Dialogue: 0,0:09:13.78,0:09:15.99,Default,,0000,0000,0000,,...أمّا الأطفال فقد فعلوا ما فعلوه من أجلي
Dialogue: 0,0:09:15.99,0:09:17.32,Default,,0000,0000,0000,,.نحن آسفون
Dialogue: 0,0:09:17.70,0:09:18.45,Default,,0000,0000,0000,,.لا بأس
Dialogue: 0,0:09:19.53,0:09:21.16,Default,,0000,0000,0000,,.إذًا، فأنتما تعرفان شيسيرو
Dialogue: 0,0:09:22.20,0:09:26.50,Default,,0000,0000,0000,,.أنا دوكّو، وقد كنتُ معلّمهم في القرية
Dialogue: 0,0:09:27.46,0:09:28.67,Default,,0000,0000,0000,,.وهذا ليو
Dialogue: 0,0:09:28.67,0:09:29.84,Default,,0000,0000,0000,,!مرحبًا
Dialogue: 0,0:09:30.17,0:09:32.67,Default,,0000,0000,0000,,.أنت شجاع
Dialogue: 0,0:09:33.01,0:09:34.17,Default,,0000,0000,0000,,!أنا كذلك
Dialogue: 0,0:09:34.76,0:09:36.18,Default,,0000,0000,0000,,.هذان لاندو وفاز
Dialogue: 0,0:09:36.59,0:09:37.68,Default,,0000,0000,0000,,.أهلاً
Dialogue: 0,0:09:37.68,0:09:39.18,Default,,0000,0000,0000,,...مرحبًا
Dialogue: 0,0:09:39.18,0:09:40.76,Default,,0000,0000,0000,,.وهذه سورا
Dialogue: 0,0:09:40.76,0:09:42.14,Default,,0000,0000,0000,,.مرحبًا
Dialogue: 0,0:09:42.47,0:09:43.56,Default,,0000,0000,0000,,.مرحبًا بكم
Dialogue: 0,0:09:43.98,0:09:47.52,Default,,0000,0000,0000,,.وهذه شقيقة ليو الصّغرى، مينا
Dialogue: 0,0:09:49.11,0:09:51.40,Default,,0000,0000,0000,,أليست هذه السّترة كبيرة عليكِ؟
Dialogue: 0,0:09:51.40,0:09:56.65,Default,,0000,0000,0000,,...إنّها لي، لكنّها تحبّها ولم تشأ أن تخلعها، لذا
Dialogue: 0,0:09:57.95,0:09:58.99,Default,,0000,0000,0000,,.سعدتُ بلقائك
Dialogue: 0,0:10:07.67,0:10:08.79,Default,,0000,0000,0000,,...أنا آسف
Dialogue: 0,0:10:10.50,0:10:12.30,Default,,0000,0000,0000,,ما الخطب يا مينا؟
Dialogue: 0,0:10:16.97,0:10:18.26,Default,,0000,0000,0000,,كنزٌ مخفيّ؟
Dialogue: 0,0:10:19.39,0:10:21.22,Default,,0000,0000,0000,,لكن، لماذا قد يرغب كابوتو في شيء كهذا؟
Dialogue: 0,0:10:21.76,0:10:23.35,Default,,0000,0000,0000,,.هذا ليس من شيمه
Dialogue: 0,0:10:23.35,0:10:26.10,Default,,0000,0000,0000,,لكن، ما الّذي يوجد هناك؟
Dialogue: 0,0:10:26.64,0:10:31.98,Default,,0000,0000,0000,,.أنا عالِمٌ وقد اعتدتُ أن أجري أبحاثًا أثرية
Dialogue: 0,0:10:32.61,0:10:36.07,Default,,0000,0000,0000,,."وبالتّحديد، كنتُ أدرس ما يُعرف بـ"الحفرة
Dialogue: 0,0:10:38.15,0:10:43.03,Default,,0000,0000,0000,,هذه هي نتائج أبحاثي حول الكتابات\N."القديمة عن أسطورة "الحفرة
Dialogue: 0,0:10:43.58,0:10:48.46,Default,,0000,0000,0000,,وأعتقد أنّ أحداثًا تاريخيّة حقيقيّة \N.مدوّنة هنا كذلك
Dialogue: 0,0:10:52.38,0:10:55.84,Default,,0000,0000,0000,,ابتكر زعيم البحيرة العظيمة \N،"ما يسمّى بـ"رمح السّماء
Dialogue: 0,0:10:55.84,0:10:58.84,Default,,0000,0000,0000,,.لكنّ الشّرّ استولى على قوّته
Dialogue: 0,0:10:59.80,0:11:06.56,Default,,0000,0000,0000,,كرِه هذا الشّرّ كلّ شيء، فحاول\N."تدمير العالم باستعمال "القوّة
Dialogue: 0,0:11:07.73,0:11:12.98,Default,,0000,0000,0000,,...غطّت هاته الأخيرة أرجاءه\N.وكانت على وشك سحقه
Dialogue: 0,0:11:13.61,0:11:18.49,Default,,0000,0000,0000,,لكن وبصدفة محضة، حصل أحد \N."الأموات على جزء من تلك "القوّة
Dialogue: 0,0:11:19.20,0:11:23.24,Default,,0000,0000,0000,,.وأصبح قرمزيًّا... وغُلّف بألسنة اللّهب
Dialogue: 0,0:11:23.24,0:11:25.66,Default,,0000,0000,0000,,.وقد انتقم من ذلك المُلوَّث
Dialogue: 0,0:11:26.66,0:11:30.08,Default,,0000,0000,0000,,،وبعد سبع ساعات من القتال في الجحيم
Dialogue: 0,0:11:30.08,0:11:33.38,Default,,0000,0000,0000,,.خرج أخيرًا المُغلّف باللّهب منتصرًا
Dialogue: 0,0:11:34.09,0:11:38.59,Default,,0000,0000,0000,,ولمنع القوّة من أن تقع بين \N،يدي الشّرّ من جديد
Dialogue: 0,0:11:38.59,0:11:42.97,Default,,0000,0000,0000,,قام القرمزيّ بتقسيم القوّة إلى سبعة\N."أصوات، وختم هذه "السّايزوري
Dialogue: 0,0:11:43.26,0:11:45.93,Default,,0000,0000,0000,,.هذا ملخّص مختصر للقصّة
Dialogue: 0,0:11:47.18,0:11:48.43,Default,,0000,0000,0000,,...سايزوري
Dialogue: 0,0:11:48.98,0:11:51.35,Default,,0000,0000,0000,,أهذا ما يسعى خلفه كابوتو يا ترى؟
Dialogue: 0,0:11:53.69,0:11:55.82,Default,,0000,0000,0000,,.هو كذلك إن كان موجودًا بالفعل
Dialogue: 0,0:11:57.78,0:12:00.70,Default,,0000,0000,0000,,رمح السّماء"... ما المقصود بهذا؟"
Dialogue: 0,0:12:00.70,0:12:06.16,Default,,0000,0000,0000,,.هذا مجرّد تخمين، لكنّه شيء يفوق فهم البشر
Dialogue: 0,0:12:03.53,0:12:04.91,Default,,0000,0000,0000,,{\an8}.لنبدأ الأكل
Dialogue: 0,0:12:07.58,0:12:12.83,Default,,0000,0000,0000,,ثمّة شعور غريب يُنبئني أنّ هناك سرًّا \N.مظلمًا ودفينًا في تلك الحفرة دون شكّ
Dialogue: 0,0:12:16.21,0:12:19.84,Default,,0000,0000,0000,,.لكن، حتّى وإن تآمروا على سرقة الكنز
Dialogue: 0,0:12:19.84,0:12:23.68,Default,,0000,0000,0000,,.فذلك ليس بسببٍ يدفعهم لقتل القرويّين الأبرياء
Dialogue: 0,0:12:24.68,0:12:28.35,Default,,0000,0000,0000,,!فعملٌ كهذا لا يغتفر
Dialogue: 0,0:12:31.68,0:12:32.56,Default,,0000,0000,0000,,.أوافقك الرّأي
Dialogue: 0,0:12:32.98,0:12:35.98,Default,,0000,0000,0000,,.سنجعل كابوتو يدفع ثمن ما اقترفه من جرائم
Dialogue: 0,0:12:36.69,0:12:39.53,Default,,0000,0000,0000,,.أنا أعتمد عليكم
Dialogue: 0,0:13:03.38,0:13:03.97,Default,,0000,0000,0000,,.ناروتو
Dialogue: 0,0:13:08.56,0:13:10.39,Default,,0000,0000,0000,,.سيذهب الجميع لحمّام عامّ
Dialogue: 0,0:13:11.22,0:13:12.85,Default,,0000,0000,0000,,هل سأستحمّ مع ساكورا؟
Dialogue: 0,0:13:15.90,0:13:17.27,Default,,0000,0000,0000,,!وكأنّ ذلك سيحدث
Dialogue: 0,0:13:21.32,0:13:22.78,Default,,0000,0000,0000,,!مدهش
Dialogue: 0,0:13:22.78,0:13:25.15,Default,,0000,0000,0000,,.لا عجب أنّه بطلٌ أسطوريّ
Dialogue: 0,0:13:28.24,0:13:31.83,Default,,0000,0000,0000,,لا بأس، إذا ما تمرّنتم جيّدًا \N.فقد تستطيعون فعلها
Dialogue: 0,0:13:32.25,0:13:33.33,Default,,0000,0000,0000,,!أأنت جاد؟
Dialogue: 0,0:13:46.22,0:13:48.97,Default,,0000,0000,0000,,!سُحقًا! لنجرّب مرّة أخرى
Dialogue: 0,0:13:51.14,0:13:54.56,Default,,0000,0000,0000,,.ناروتو، أنت مشهور حتّى في مكان ريفيّ كهذا
Dialogue: 0,0:13:54.56,0:13:57.52,Default,,0000,0000,0000,,.ظننتك ستكون أكثر رهبة ورعبًا
Dialogue: 0,0:13:57.94,0:14:00.23,Default,,0000,0000,0000,,!وقد صدمتُ لمعرفة أنّك يافع وبسيط هكذا
Dialogue: 0,0:14:01.65,0:14:03.57,Default,,0000,0000,0000,,...هذا مدهش
Dialogue: 0,0:14:03.57,0:14:07.16,Default,,0000,0000,0000,,.لا بدّ وأنّ جسدك يحتوي على قوّة هائلة
Dialogue: 0,0:14:12.62,0:14:19.33,Default,,0000,0000,0000,,عندما كنتُ في سنّك، لم أستطع \N.إنقاذ فتاة واحدة حتّى
Dialogue: 0,0:14:24.80,0:14:26.76,Default,,0000,0000,0000,,آنسة شيسيرو... ما هذه...؟
Dialogue: 0,0:14:27.22,0:14:28.72,Default,,0000,0000,0000,,تقصدين هذه النُّدب؟
Dialogue: 0,0:14:29.14,0:14:31.68,Default,,0000,0000,0000,,كنتُ قد سقطتُ من أعلى جرفٍ \N.منذ وقت طويل
Dialogue: 0,0:14:33.51,0:14:35.98,Default,,0000,0000,0000,,.من على علوّ خمسين مترًا على ما أظنّ
Dialogue: 0,0:14:35.98,0:14:38.60,Default,,0000,0000,0000,,!ولحسن حظّي أنّي وقعت على شجرة
Dialogue: 0,0:14:39.60,0:14:40.81,Default,,0000,0000,0000,,لكن كيف...؟
Dialogue: 0,0:14:42.98,0:14:46.11,Default,,0000,0000,0000,,.كنتُ غير منتبهة
Dialogue: 0,0:14:47.49,0:14:48.74,Default,,0000,0000,0000,,.توقّفي يا شيسيرو
Dialogue: 0,0:14:49.24,0:14:52.83,Default,,0000,0000,0000,,.وقد حذّرني أخي كثيرًا
Dialogue: 0,0:14:51.74,0:14:52.83,Default,,0000,0000,0000,,{\an8}.هذا خطير
Dialogue: 0,0:14:52.83,0:14:53.79,Default,,0000,0000,0000,,!أتريد القتال؟
Dialogue: 0,0:14:58.83,0:15:00.08,Default,,0000,0000,0000,,هل السّيّد دوكّو؟
Dialogue: 0,0:15:00.42,0:15:01.13,Default,,0000,0000,0000,,.نعم
Dialogue: 0,0:15:01.79,0:15:03.75,Default,,0000,0000,0000,,...لقد أمسكني في حينها
Dialogue: 0,0:15:04.50,0:15:08.68,Default,,0000,0000,0000,,وقد بقي صامدًا ممسكًا يدي \N.بشدّة لحوالي السّاعة
Dialogue: 0,0:15:10.09,0:15:14.14,Default,,0000,0000,0000,,.كنتُ أكره التّدريب، لذلك كانت ذراعاي ضعيفتان
Dialogue: 0,0:15:14.14,0:15:17.10,Default,,0000,0000,0000,,...أنا محبط وغاضب من نفسي
Dialogue: 0,0:15:30.28,0:15:33.87,Default,,0000,0000,0000,,...لو ماتت شيسيرو حينها
Dialogue: 0,0:15:36.12,0:15:37.41,Default,,0000,0000,0000,,...لكنتُ
Dialogue: 0,0:15:38.20,0:15:42.38,Default,,0000,0000,0000,,.لقد كانت غلطتي أنا بالكامل
Dialogue: 0,0:15:43.46,0:15:45.84,Default,,0000,0000,0000,,.ولم تكن غلطته هو على الإطلاق
Dialogue: 0,0:15:46.88,0:15:49.30,Default,,0000,0000,0000,,،كرهتُ نفسي لأنّي كنتُ ضعيفًا
Dialogue: 0,0:15:49.30,0:15:52.26,Default,,0000,0000,0000,,لذلك بذلتُ جهدي وعزمت على \N...أن أكون حارسًا، لكن
Dialogue: 0,0:15:52.97,0:15:54.85,Default,,0000,0000,0000,,.لم أكن أهلاً لذلك في النّهاية
Dialogue: 0,0:15:56.51,0:15:59.23,Default,,0000,0000,0000,,.وبعدها افترقنا
Dialogue: 0,0:15:59.89,0:16:03.23,Default,,0000,0000,0000,,،حتّى عندما كنتُ أذهب لرؤيته\N...كان هنالك دائمًا حاجزٌ بيننا
Dialogue: 0,0:16:04.15,0:16:08.19,Default,,0000,0000,0000,,.وقبل أن أدرك الأمر، أصبحنا كالغريبيْن
Dialogue: 0,0:16:10.20,0:16:12.45,Default,,0000,0000,0000,,...لكن في تلك اللّيلة
Dialogue: 0,0:16:14.62,0:16:16.12,Default,,0000,0000,0000,,...لو فقط كان لي
Dialogue: 0,0:16:17.54,0:16:21.62,Default,,0000,0000,0000,,كنتُ سعيدة للغاية لرؤيته\N...بعد كلّ ذلك الوقت، لكن
Dialogue: 0,0:16:21.92,0:16:25.08,Default,,0000,0000,0000,,...لو فقط كان لي المزيد من القوّة
Dialogue: 0,0:16:26.59,0:16:27.59,Default,,0000,0000,0000,,...المزيد منها
Dialogue: 0,0:16:28.46,0:16:33.05,Default,,0000,0000,0000,,.ربّما يلوم أخي نفسه على ذلك حتّى الآن
Dialogue: 0,0:16:33.30,0:16:37.01,Default,,0000,0000,0000,,!أتمنّى لو كان بمقدوري إنقاذ الكثير من النّاس
Dialogue: 0,0:16:38.31,0:16:42.48,Default,,0000,0000,0000,,.لقد خسر الكثير من الأشخاص العزيزين عليه
Dialogue: 0,0:17:00.08,0:17:01.62,Default,,0000,0000,0000,,!لا أستطيع فعلها
Dialogue: 0,0:17:01.62,0:17:03.33,Default,,0000,0000,0000,,!هذا مستحيل
Dialogue: 0,0:17:07.00,0:17:09.92,Default,,0000,0000,0000,,!أخي ناروتو! أرنا خدعة ما لتساعدنا على إتقانها
Dialogue: 0,0:17:16.26,0:17:17.10,Default,,0000,0000,0000,,!أكيد
Dialogue: 0,0:17:20.89,0:17:23.35,Default,,0000,0000,0000,,.لاحظتُ وجود شيء ما غريب في القرية
Dialogue: 0,0:17:24.39,0:17:26.86,Default,,0000,0000,0000,,.بعد برهة من حلول الظّلام
Dialogue: 0,0:17:33.65,0:17:36.53,Default,,0000,0000,0000,,.وفجأة، غرقت القرية في بحر من ألسنة اللّهب
Dialogue: 0,0:17:37.70,0:17:40.24,Default,,0000,0000,0000,,.وقد هاجمني شينوبي أنا أيضًا
Dialogue: 0,0:17:46.75,0:17:50.38,Default,,0000,0000,0000,,.كان قويًّا للغاية، وظننتني سألقى حتفي
Dialogue: 0,0:17:55.43,0:17:57.55,Default,,0000,0000,0000,,.لكنّه توقّف عن الحركة فجأة
Dialogue: 0,0:17:58.05,0:18:00.81,Default,,0000,0000,0000,,.وكأنّه دمية قد قُطعت خيوط تحريكها
Dialogue: 0,0:18:02.27,0:18:05.81,Default,,0000,0000,0000,,إنّها تقنيّة إعادة الإحياء وهي تعتمد\N...على تضحيات بأجساد حيّة كأوعية
Dialogue: 0,0:18:05.81,0:18:10.27,Default,,0000,0000,0000,,لاحتضان روح الشّخص الميت وإجباره \N.على العودة للحياة، إنّها تقنيّة محرّمة
Dialogue: 0,0:18:11.02,0:18:15.49,Default,,0000,0000,0000,,اعتقدنا أنّ الهوكاغي الثّاني وأوروتشيمارو \N.هما الوحيدان اللّذان يتقنانها
Dialogue: 0,0:18:16.36,0:18:20.45,Default,,0000,0000,0000,,وبما أنّه بدا وكأنّه قد فشل في التّحكّم \N...الكامل في أعضاء الأكاتسكي
Dialogue: 0,0:18:20.45,0:18:22.91,Default,,0000,0000,0000,,.فهذا يعني أن التقنيّة لم تكتمل بعد
Dialogue: 0,0:18:23.83,0:18:27.12,Default,,0000,0000,0000,,سيّد دوكّو، ما الّذي تعرفه عن "سايزوري"؟
Dialogue: 0,0:18:28.21,0:18:29.92,Default,,0000,0000,0000,,تقصد الكتابة القديمة؟
Dialogue: 0,0:18:31.13,0:18:33.30,Default,,0000,0000,0000,,.هذا ما يسعى كابوتو خلفه
Dialogue: 0,0:18:33.84,0:18:38.80,Default,,0000,0000,0000,,هل تعرف أيّ شيء عن "السّايزوري" قد يساعدنا؟
Dialogue: 0,0:18:40.26,0:18:41.80,Default,,0000,0000,0000,,!خذ هذه واهرب
Dialogue: 0,0:18:42.31,0:18:44.22,Default,,0000,0000,0000,,وإن رميتها في مكان ما، فلا مانع من ذلك
Dialogue: 0,0:18:44.22,0:18:47.81,Default,,0000,0000,0000,,!ولكن، لا تقل كلمة عنها لأحد ما
Dialogue: 0,0:18:49.19,0:18:51.73,Default,,0000,0000,0000,,.كلاّ... ليس بالتّحديد
Dialogue: 0,0:18:52.07,0:18:52.98,Default,,0000,0000,0000,,.فهمت
Dialogue: 0,0:18:53.65,0:18:59.16,Default,,0000,0000,0000,,.سنجتمع غدًا مع الوحدة الأمنيّة وسنبدأ مطاردتَنا
Dialogue: 0,0:19:00.16,0:19:02.66,Default,,0000,0000,0000,,.لكن، هناك ذلك الحارس الّذي أُسر
Dialogue: 0,0:19:03.08,0:19:05.87,Default,,0000,0000,0000,,.وللحيطة فحسب، سأعيّن أحدًا ليراقبكم
Dialogue: 0,0:19:07.62,0:19:09.00,Default,,0000,0000,0000,,.شكرًا لكم
Dialogue: 0,0:19:09.96,0:19:13.67,Default,,0000,0000,0000,,...وبشأن الأطفال الّذين أنقذتهم
Dialogue: 0,0:19:15.63,0:19:19.97,Default,,0000,0000,0000,,البلدة جاهزة للقيام ببعض التّرتيبات \N.مع مؤسّسة ما لاحتضانهم
Dialogue: 0,0:19:19.97,0:19:21.59,Default,,0000,0000,0000,,فما الّذي تريدنا أن نفعله؟
Dialogue: 0,0:19:25.39,0:19:27.31,Default,,0000,0000,0000,,.غَطّوا في النّوم سريعًا
Dialogue: 0,0:19:27.31,0:19:28.35,Default,,0000,0000,0000,,...نعم
Dialogue: 0,0:19:30.23,0:19:34.86,Default,,0000,0000,0000,,.لقد ضحك الأطفال كثيرًا اليوم
Dialogue: 0,0:19:40.03,0:19:43.66,Default,,0000,0000,0000,,...وهذه أوّل مرّة يضحكون فيها منذ تلك اللّيلة
Dialogue: 0,0:20:01.38,0:20:02.34,Default,,0000,0000,0000,,...كابوتو
Dialogue: 0,0:20:03.60,0:20:06.56,Default,,0000,0000,0000,,.أنت عنيف جدًّا بهذه التّقنيّة خاصّتك
Dialogue: 0,0:20:07.14,0:20:10.27,Default,,0000,0000,0000,,.لم يكن عليك أن تقتلهم جميعًا
Dialogue: 0,0:20:10.39,0:20:12.48,Sign 01,,0000,0000,0000,,{\fad(600,0)}لكنّ الأمر ممتع
Dialogue: 0,0:20:13.02,0:20:14.31,Default,,0000,0000,0000,,بالنّسبة لك، صحيح؟
Dialogue: 0,0:20:14.36,0:20:16.52,Sign 01,,0000,0000,0000,,{\fad(500,0)}لكان قام أوروتشيمارو بنفس الشّيء
Dialogue: 0,0:20:19.40,0:20:22.99,Default,,0000,0000,0000,,لقد طوّرت طريقة التّقنيّة بضبطها \N.على التشاكرا خاصّتي
Dialogue: 0,0:20:22.99,0:20:24.95,Default,,0000,0000,0000,,.سيكون من السّهل السّيطرة عليه الآن
Dialogue: 0,0:20:25.45,0:20:30.50,Default,,0000,0000,0000,,وقد اختبرت هذه المرّة حالاتٍ \N.قد تتدخّل فيها النّوايا والذّكريات
Dialogue: 0,0:20:30.75,0:20:33.83,Sign 01,,0000,0000,0000,,{\fad(500,700)}بالمناسبة،  ما زلتُ لم أكتفِ بعد
Dialogue: 0,0:20:33.83,0:20:37.46,Sign 01,,0000,0000,0000,,{\fad(500,700)}ربّما يوجد شخص ما يمتلكها
Dialogue: 0,0:20:37.00,0:20:39.67,Default,,0000,0000,0000,,إذًا؟ هل عليّ أن أبحث عنها؟
Dialogue: 0,0:20:39.67,0:20:41.63,Sign 01,,0000,0000,0000,,{\fad(500,0)}كان هذا هو الأمر منذ البداية
Dialogue: 0,0:20:42.13,0:20:45.64,Default,,0000,0000,0000,,.أنت تحبّ جرّي للعمل بالفعل
Dialogue: 0,0:20:46.10,0:20:47.56,Default,,0000,0000,0000,,.حسنًا، لا بأس
Dialogue: 0,0:20:47.56,0:20:49.35,Default,,0000,0000,0000,,.فهذا يمنحني شيئًا أتطلّع إليه
Dialogue: 0,0:20:50.06,0:20:51.06,Sign 01,,0000,0000,0000,,{\fad(500,0)}ماذا؟
Dialogue: 0,0:20:52.31,0:20:54.15,Default,,0000,0000,0000,,...ناروتو
Dialogue: 0,0:22:34.95,0:22:50.97,Next Time,,0000,0000,0000,,في الحلقة القادمة
Dialogue: 0,0:22:35.87,0:22:36.92,PV,,0000,0000,0000,,!أريد رؤيتكما
Dialogue: 0,0:22:36.92,0:22:39.42,PV,,0000,0000,0000,,!أبي، أمّي
Dialogue: 0,0:22:39.42,0:22:40.75,PV,,0000,0000,0000,,!أشعر بالوحدة
Dialogue: 0,0:22:40.92,0:22:42.00,PV,,0000,0000,0000,,!أشعر بالوحدة
Dialogue: 0,0:22:45.59,0:22:47.05,PV,,0000,0000,0000,,!لماذا تشعرون بالوحدة؟
Dialogue: 0,0:22:48.55,0:22:50.48,PV,,0000,0000,0000,,!إنّهم معكم دائمًا
Dialogue: 0,0:22:50.97,0:22:53.26,PV,,0000,0000,15,,:في الحلقة القادمة من ناروتو شيبّودن
Dialogue: 0,0:22:50.97,0:22:54.02,Sign 02,,0000,0000,0000,,قوّة
Dialogue: 0,0:22:53.26,0:22:55.64,PV,,0000,0000,15,,."قوّة: الحلقة الثّالثة"
