Dialogue: 0,0:23:13.58,0:23:16.79,main,Magna,0000,0000,0000,,!الحياة الواقعيّة! فرسان السّحر 24
Dialogue: 0,0:23:22.01,0:23:23.27,main,Yami,0000,0000,0000,,.الماء بارد
Dialogue: 0,0:23:23.27,0:23:24.43,main,Magna,0000,0000,0000,,!حاضر يا سيّد يامي
Dialogue: 0,0:23:27.14,0:23:28.03,main,Yami,0000,0000,0000,,!إنّه ساخن
Dialogue: 0,0:23:28.03,0:23:29.09,main,Magna,0000,0000,0000,,!حاضر يا سيّد يامي
Dialogue: 0,0:23:30.66,0:23:32.09,main,Yami,0000,0000,0000,,.لا يمكنني رؤية شيء
Dialogue: 0,0:23:32.91,0:23:34.10,main,Manga,0000,0000,0000,,!حاضر يا سيّد يامي
Dialogue: 0,0:23:34.44,0:23:35.47,main,Yami,0000,0000,0000,,.اخرج
Dialogue: 0,0:23:35.47,0:23:36.51,main,Magna,0000,0000,0000,,!حاضر يا سيّد يامي
Dialogue: 0,0:23:39.64,0:23:42.81,main,Asta,0000,0000,0000,,تمّ الاعتراف بي أخيرًا كعضوٍ \N!في الثّيران السّوداء
Dialogue: 0,0:23:43.12,0:23:45.65,main,Asta,0000,0000,0000,,!ماذا؟ هناك عضو جديد آخر؟
