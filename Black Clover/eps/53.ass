Dialogue: 0,0:23:00.79,0:23:03.33,main,,0000,0000,0000,,!نفلة صغيرة
Dialogue: 0,0:23:03.86,0:23:07.86,sign,,0000,0000,0000,,{\fad(520,1)}!معًا
Dialogue: 0,0:23:04.98,0:23:07.00,main,,0000,0000,0000,,!مـ-معًا
Dialogue: 0,0:23:07.85,0:23:09.95,italics,,0000,0000,0000,,أهي حوريّة السّماء الّتي سمعت الكثير عنها؟
Dialogue: 0,0:23:09.95,0:23:12.17,italics,,0000,0000,0000,,!لم أرَ يونو بهذا الوجه من قبل
Dialogue: 0,0:23:12.17,0:23:13.74,italics,,0000,0000,0000,,!هل هذه قوّة حوريّة السّماء؟
Dialogue: 0,0:23:14.22,0:23:16.58,main,,0000,0000,0000,,.إنّه فتى كنت أعيش معه
Dialogue: 0,0:23:16.58,0:23:18.16,main,,0000,0000,0000,,!ماذا؟
Dialogue: 0,0:23:18.16,0:23:20.12,flashback,,0000,0000,0000,,.غير ممكن
Dialogue: 0,0:23:20.12,0:23:21.48,main,,0000,0000,0000,,!كنتما تنامان معًا؟
Dialogue: 0,0:23:21.48,0:23:24.22,flashback,,0000,0000,0000,,...أنت يا أستا. غير ممكن
Dialogue: 0,0:23:24.22,0:23:25.63,main,,0000,0000,0000,,!كنتما تأكلان معًا؟
Dialogue: 0,0:23:27.05,0:23:28.09,flashback,,0000,0000,0000,,!هيّا
Dialogue: 0,0:23:29.73,0:23:30.93,flashback,,0000,0000,0000,,...غير ممكن
Dialogue: 0,0:23:30.93,0:23:34.51,main,,0000,0000,0000,,!كنتما تستحمّان معًا؟
Dialogue: 0,0:23:34.51,0:23:35.64,main,,0000,0000,0000,,ما خطبها؟
Dialogue: 0,0:23:35.64,0:23:36.93,main,,0000,0000,0000,,.لا أدري
Dialogue: 0,0:23:39.57,0:23:40.80,main,,0000,0000,0000,,.هذا جيّد
Dialogue: 0,0:23:40.80,0:23:45.65,main,,0000,0000,0000,,لم أعرف ما كنت سأفعله لو أنّ فانجانس كان\N .فعلاً ليخت من عين شمس منتصف اللّيل
Dialogue: 0,0:23:45.65,0:23:48.32,main,,0000,0000,0000,,."بلاك كلوفر، الصّفحة 54: "لن يتكرّر أبدًا
