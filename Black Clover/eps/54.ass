Dialogue: 0,0:09:22.79,0:09:25.59,main,Yami,0000,0000,0000,,!كلّ ما فعلته هو أكله آنيًّا
Dialogue: 0,0:09:27.29,0:09:28.57,main,Yami,0000,0000,0000,,!حسنًا يا غراي! أنت التّالية
Dialogue: 0,0:09:28.57,0:09:29.67,main,Yami,0000,0000,0000,,!افعلي شيئًا
Dialogue: 0,0:09:30.74,0:09:32.64,main,Grey,0000,0000,0000,,!لا يمكنني
Dialogue: 0,0:09:32.64,0:09:33.71,main,Yami,0000,0000,0000,,!اخرسي وافعلي شيئًا ما
Dialogue: 0,0:09:35.29,0:09:37.68,main,Grey,0000,0000,0000,,!******* ****** !الـ-التّقنية السّرّيّة
Dialogue: 0,0:09:41.94,0:09:44.42,main,Yami,0000,0000,0000,,!تحوّلت إلى ما تتحوّلين إليه عادة فحسب
