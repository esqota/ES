Dialogue: 0,0:00:51.19,0:00:53.83,Main,Reptile,0000,0000,0000,,!لن أسمح بهروب أيّ فتاة
Dialogue: 0,0:00:53.83,0:00:56.58,Main,Reptile,0000,0000,0000,,!أنتِ لي! لذيذة
Dialogue: 0,0:00:57.22,0:00:59.03,Main,Reptile,0000,0000,0000,,!لعق، لعق، لعق
Dialogue: 0,0:01:04.29,0:01:05.83,Main,Reptile,0000,0000,0000,,!فاجأني ذلك
Dialogue: 0,0:01:08.69,0:01:10.17,Main,Reptile,0000,0000,0000,,...هـ-هذا الشّعور
Dialogue: 0,0:01:11.38,0:01:13.17,Main,,0000,0000,0000,,!هذا الوجه
